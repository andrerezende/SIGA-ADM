<?
/**
 * Link Requisicao class
 */
global $MIOLO;
$MIOLO->Uses('controls/linkobject.class','adm');

class LinkRequisicao extends LinkObject
{
    public $item;
    public function __construct($name='', $uo)
    {
		global $MIOLO;
                $this->item = $item;
        $MIOLO->UsesBusiness('adm','requisicao');
        parent::__construct($name,$uo,'nothing.jpg');
    }

    public function setObjectByValue($value)
    {
        $this->object = $this->manager->GetBusiness('adm','requisicao');
        $this->object->GetById((int)$value);
    }

    public function setAction()
    {
        $this->hyperlink->SetAction('adm','main:requisicoes',$this->object->idRequisicao,array("form"=>"item","tipoReq"=>$this->object->idTipoReq));
        $this->imagelink->SetAction('adm','main:requisicoes',$this->object->idRequisicao,array("form"=>"item","tipoReq"=>$this->object->idTipoReq));
    }

    public function setText()
    {
        $this->hyperlink->SetText($this->object->idRequisicao);
    }

    public function setNew()
    {
        $this->isNewLink = TRUE;
        $this->hyperlink->SetAction('adm','main:requisicoes:new');
        $this->hyperlink->SetText('Inserir Requisição');
        $this->imagelink->SetAction('adm','main:requisicoes:new');
    }
}
?>
