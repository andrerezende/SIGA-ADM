<?
global $MIOLO;
$MIOLO->Uses('controls/linkobject.class','adm');

class LinkVeiculo extends LinkObject
{
    public function __construct($name='', $uo)
    {
		global $MIOLO;
        $MIOLO->UsesBusiness('adm','veiculo');
        parent::__construct($name,$uo,'nothing.jpg');
    }

    public function setObjectByValue($value)
    {
        $this->object = $this->manager->GetBusiness('adm','veiculo');
        $this->object->GetById($value);
    }

    public function setAction()
    {
        $this->hyperlink->SetAction('adm','main:veiculo',$this->object->placa);
        $this->imagelink->SetAction('adm','main:veiculo',$this->object->placa);
    }

    public function setText()
    {
        $this->hyperlink->SetText($this->object->placa);
    }

    public function setNew()
    {
        $this->isNewLink = TRUE;
        $this->hyperlink->SetAction('adm','main:veiculo:new');
        $this->hyperlink->SetText('Inserir Novo Veiculo');
        $this->imagelink->SetAction('adm','main:veiculo:new');
    }
}
?>
