<?
global $MIOLO;
$MIOLO->Uses('controls/linkobject.class','adm');
class LinkEmpresaManutencaoVeiculo extends LinkObject
{
    public function __construct($name='',$empresa)
    {
        global $MIOLO;
        $MIOLO->UsesBusiness('adm','empresamanutencaoveiculo');
        parent::__construct($name,$empresa,'empresa.png');
    }

    public function setObjectByValue($value)
    {
        global $MIOLO;
        $this->object = $MIOLO->GetBusiness('adm','empresamanutencaoveiculo');
        $this->object->GetById($value);
    }

    public function setAction()
    {
        global $MIOLO, $module;
        $this->hyperlink->SetAction($module,'main:empresamanutencaoveiculo',$this->object->idEmpresa);
        $this->imagelink->SetAction($module,'main:empresamanutencaoveiculo',$this->object->idEmpresa);
    }

    public function setText()
    {
        $this->hyperlink->SetText($this->object->idEmpresa);
    }

    public function setNew()
    {
        $this->isNewLink = TRUE;
        $this->hyperlink->SetAction('adm','main:empresamanutencaoveiculo:new');
        $this->hyperlink->SetText('Nova Empresa');
        $this->imagelink->SetAction('adm','main:empresamanutencaoveiculo:new');
    }
}
?>