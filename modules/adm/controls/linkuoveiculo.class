<?
global $MIOLO;
$MIOLO->Uses('controls/linkobject.class','adm');

class LinkUoVeiculo extends LinkObject
{
    public $iduo;
    public function __construct($name='', $uo,$iduo)
    {
		global $MIOLO;
          
        $MIOLO->UsesBusiness('adm','veiculo');
        parent::__construct($name,$uo,'nothing.jpg');
        $this->iduo = $iduo;
    }

    public function setObjectByValue($value)
    {
        $this->object = $this->manager->GetBusiness('adm','veiculo');
        $this->object->GetById($value);
    }

    public function setAction()
    {
        $this->hyperlink->SetAction('adm','main:veiculo1',$this->object->placa,array("iduo"=>$this->iduo));
        $this->imagelink->SetAction('adm','main:veiculo1',$this->object->placa,array("iduo"=>$this->iduo));
    }

    public function setText()
    {
        $this->hyperlink->SetText($this->object->placa);
    }

    public function setNew()
    {
        $this->isNewLink = TRUE;
        $this->hyperlink->SetAction('adm','main:uoveiculo:newveiculo');
        $this->hyperlink->SetText('Associar Veiculo a U.O.');
        $this->imagelink->SetAction('adm','main:uoveiculo:newveiculo');
    }
}
?>
