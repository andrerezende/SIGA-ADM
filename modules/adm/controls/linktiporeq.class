<?
/**
 * Link TipoReq class
 */
global $MIOLO;
$MIOLO->Uses('controls/linkobject.class','adm');

class LinkTipoReq extends LinkObject
{
    public function __construct($name='', $tiporeq)
    {
		global $MIOLO;
        $MIOLO->UsesBusiness('adm','tiporeq');
        parent::__construct($name,$tiporeq,'nothing.jpg');
    }

    public function setObjectByValue($value)
    {
        $this->object = $this->manager->GetBusiness('adm','tiporeq');
        $this->object->GetById((int)$value);
    }

    public function setAction()
    {
        $this->hyperlink->SetAction('adm','main:tiporeq',$this->object->idTipoReq);
        $this->imagelink->SetAction('adm','main:tiporeq',$this->object->idTipoReq);
    }

    public function setText()
    {
        $this->hyperlink->SetText($this->object->descricao);
    }

    public function setNew()
    {
        $this->isNewLink = TRUE;
        $this->hyperlink->SetAction('adm','main:tiporeq:new');
        $this->hyperlink->SetText('Inserir Tipo de Requisição');
        $this->imagelink->SetAction('adm','main:tiporeq:new');
    }
}
?>
