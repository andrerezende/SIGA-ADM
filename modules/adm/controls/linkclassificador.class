<?
global $MIOLO;
$MIOLO->Uses('controls/linkobject.class','adm');

class LinkClassificador extends LinkObject
{
    public function __construct($name='', $uo)
    {
		global $MIOLO;
        $MIOLO->UsesBusiness('adm','classificador');
        parent::__construct($name,$uo,'nothing.jpg');
    }

    public function setObjectByValue($value)
    {
        $this->object = $this->manager->GetBusiness('adm','classificador');
        $this->object->GetById($value);
    }

    public function setAction()
    {
        $this->hyperlink->SetAction('adm','main:classificador',$this->object->idClassificador);
        $this->imagelink->SetAction('adm','main:classificador',$this->object->idClassificador);
    }

    public function setText()
    {
        $this->hyperlink->SetText($this->object->idClassificador);
    }

    public function setNew()
    {
        $this->isNewLink = TRUE;
        $this->hyperlink->SetAction('adm','main:classificador:new');
        $this->hyperlink->SetText('Inserir Novo Classificador');
        $this->imagelink->SetAction('adm','main:classificador:new');
    }
}
?>
