<?
/**
 * Link Liquidacao class
 */
global $MIOLO;
$MIOLO->Uses('controls/linkobject.class','adm');

class LinkLiquidacao extends LinkObject
{
    public function __construct($name='', $liquidacao)
    {
		global $MIOLO;
        $MIOLO->UsesBusiness('adm','liquidacao');
        parent::__construct($name,$liquidacao,'nothing.jpg');
    }

    public function setObjectByValue($value)
    {
        $this->object = $this->manager->GetBusiness('adm','liquidacao');
        $this->object->GetById((int)$value);
    }

    public function setAction()
    {
        $this->hyperlink->SetAction('adm','main:liquidacao',$this->object->idLiquidacao);
        $this->imagelink->SetAction('adm','main:liquidacao',$this->object->idLiquidacao);
    }

    public function setText()
    {
        $this->hyperlink->SetText($this->object->dataLiquidacao);
    }

    public function setNew()
    {
        $this->isNewLink = TRUE;
        $this->hyperlink->SetAction('adm','main:liquidacao:new');
        $this->hyperlink->SetText('Nova Liquidação');
        $this->imagelink->SetAction('adm','main:liquidacao:new');
    }
}
?>
