<?
global $MIOLO;
$MIOLO->Uses('controls/linkobject.class','adm');

class LinkOrcamentoHist extends LinkObject
{
    public function __construct($name='', $uo)
    {
		global $MIOLO;
        $MIOLO->UsesBusiness('adm','orcamentohist');
        parent::__construct($name,$uo,'nothing.jpg');
    }

    public function setObjectByValue($value)
    {
        $this->object = $this->manager->GetBusiness('adm','orcamentohist');
        $this->object->GetById((int)$value);
    }

    public function setAction()
    {
        $this->hyperlink->SetAction('adm','main:orcamento',$this->object->idOrcamento);
        $this->imagelink->SetAction('adm','main:orcamento',$this->object->idOrcamento);
    }

    public function setText()
    {
        $this->hyperlink->SetText($this->object->idOrcamento);
    }

    public function setNew()
    {
        $this->isNewLink = TRUE;
        $this->hyperlink->SetAction('adm','main:orcamento:new');
        $this->hyperlink->SetText('Inserir Novo OrÃ§amento');
        $this->imagelink->SetAction('adm','main:orcamento:new');
    }
}
?>
