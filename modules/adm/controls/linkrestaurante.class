<?
/**
 * Link Uo class
 */
global $MIOLO;
$MIOLO->Uses('controls/linkobject.class','adm');

class LinkRestaurante extends LinkObject
{
    public function __construct($name='', $uo)
    {
		global $MIOLO;
        $MIOLO->UsesBusiness('adm','restaurante');
        parent::__construct($name,$uo,'nothing.jpg');
    }

    public function setObjectByValue($value)
    {
        $this->object = $this->manager->GetBusiness('adm','restaurante');
        $this->object->GetById((int)$value);
    }

    public function setAction()
    {
        $this->hyperlink->SetAction('adm','main:restaurante',$this->object->idRestaurante);
        $this->imagelink->SetAction('adm','main:restaurante',$this->object->idRestaurante);
    }

    public function setText()
    {
        $this->hyperlink->SetText($this->object->nome);
    }

    public function setNew()
    {
        $this->isNewLink = TRUE;
        $this->hyperlink->SetAction('adm','main:restaurante:new');
        $this->hyperlink->SetText('Inserir Novo Restaurante');
        $this->imagelink->SetAction('adm','main:restaurante:new');
    }
}
?>
