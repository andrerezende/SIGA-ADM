<?
global $MIOLO;
$MIOLO->Uses('controls/linkobject.class','adm');

class LinkServicoInterno extends LinkObject
{
    public function __construct($name='', $uo)
    {
		global $MIOLO;
        $MIOLO->UsesBusiness('adm','tiposervint');
        parent::__construct($name,$uo,'nothing.jpg');
    }

    public function setObjectByValue($value)
    {
        $this->object = $this->manager->GetBusiness('adm','tiposervint');
        $this->object->GetById((int)$value);
    }

    public function setAction()
    {
        $this->hyperlink->SetAction('adm','main:servInterno',$this->object->idTipoServInt);
        $this->imagelink->SetAction('adm','main:servInterno',$this->object->idTiporServInt);
    }

    public function setText()
    {
        $this->hyperlink->SetText($this->object->descricao);
    }

    public function setNew()
    {
        $this->isNewLink = TRUE;
        $this->hyperlink->SetAction('adm','main:servInterno:new');
        $this->hyperlink->SetText('Inserir Novo Tipo de ServiÃ§o Interno');
        $this->imagelink->SetAction('adm','main:servInterno:new');
    }
}
?>
