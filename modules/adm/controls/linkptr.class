<?
global $MIOLO;
$MIOLO->Uses('controls/linkobject.class','adm');

class LinkPtr extends LinkObject
{
    public function __construct($name='', $uo)
    {
		global $MIOLO;
        $MIOLO->UsesBusiness('adm','ptr');
        parent::__construct($name,$uo,'nothing.jpg');
    }

    public function setObjectByValue($value)
    {
        $this->object = $this->manager->GetBusiness('adm','ptr');
        $this->object->GetById($value);
    }

    public function setAction()
    {
        $this->hyperlink->SetAction('adm','main:ptr',$this->object->idPtr);
        $this->imagelink->SetAction('adm','main:ptr',$this->object->idPtr);
    }

    public function setText()
    {
        $this->hyperlink->SetText($this->object->idPtr);
    }

    public function setNew()
    {
        $this->isNewLink = TRUE;
        $this->hyperlink->SetAction('adm','main:ptr:new');
        $this->hyperlink->SetText('Inserir Novo PTR');
        $this->imagelink->SetAction('adm','main:ptr:new');
    }
}
?>
