<?
global $MIOLO;
$MIOLO->Uses('controls/linkobject.class','adm');

class LinkTaxi extends LinkObject
{
    public function __construct($name='', $uo)
    {
        global $MIOLO;
        $MIOLO->UsesBusiness('adm','taxi');
        parent::__construct($name,$uo,'nothing.jpg');
    }

    public function setObjectByValue($value)
    {
        $this->object = $this->manager->GetBusiness('adm','taxi');
        $this->object->GetById((int)$value);
    }

    public function setAction()
    {
        $this->hyperlink->SetAction('adm','main:taxi',$this->object->dataIni);
        $this->imagelink->SetAction('adm','main:taxi',$this->object->dataIni);
    }

  public function setText()
   {
        $this->hyperlink->SetText($this->object->nome);
    }

    public function setNew()
    {
        $this->isNewLink = TRUE;
        $this->hyperlink->SetAction('adm','main:taxi:new');
        $this->hyperlink->SetText('Inserir Novo Taxi');
        $this->imagelink->SetAction('adm','main:taxi:new');
    }
}
?>
