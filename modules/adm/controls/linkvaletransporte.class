<?
global $MIOLO;
$MIOLO->Uses('controls/linkobject.class','adm');

class LinkValeTransporte extends LinkObject
{
    public function __construct($name='', $uo)
    {
        global $MIOLO;
        $MIOLO->UsesBusiness('adm','valetransporte');
        parent::__construct($name,$uo,'nothing.jpg');
    }

    public function setObjectByValue($value)
    {
        $this->object = $this->manager->GetBusiness('adm','valetransporte');
        $this->object->GetById((int)$value);
    }

    public function setAction()
    {
        $this->hyperlink->SetAction('adm','main:valetransporte',$this->object->dataIni);
        $this->imagelink->SetAction('adm','main:valetransporte',$this->object->dataIni);
    }

    public function setText()
    {
        $this->hyperlink->SetText($this->object->nome);		  
    }

    public function setNew()
    {
        $this->isNewLink = TRUE;
        $this->hyperlink->SetAction('adm','main:valetransporte:new');
        $this->hyperlink->SetText('Inserir Novo Vale Transporte');
        $this->imagelink->SetAction('adm','main:valetransporte:new');
    }
}
?>
