<?
global $MIOLO;
$MIOLO->Uses('controls/linkobject.class','adm');

class LinkRubrica extends LinkObject
{
    public function __construct($name='', $uo)
    {
		global $MIOLO;
        $MIOLO->UsesBusiness('adm','rubrica');
        parent::__construct($name,$uo,'nothing.jpg');
    }

    public function setObjectByValue($value)
    {
        $this->object = $this->manager->GetBusiness('adm','rubrica');
        //$this->object->GetById((int)$value);
        $this->object->GetById($value);
    }

    public function setAction()
    {
        $this->hyperlink->SetAction('adm','main:rubrica',$this->object->idRubrica);
        $this->imagelink->SetAction('adm','main:rubrica',$this->object->idRubrica);
    }

    public function setText()
    {
        $this->hyperlink->SetText($this->object->idRubrica);
    }

    public function setNew()
    {
        $this->isNewLink = TRUE;
        $this->hyperlink->SetAction('adm','main:rubrica:new');
        $this->hyperlink->SetText('Inserir Nova Rubrica');
        $this->imagelink->SetAction('adm','main:rubrica:new');
    }
}
?>
