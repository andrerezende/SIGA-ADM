<?
/**
 * Link Uo class
 */
global $MIOLO;
$MIOLO->Uses('controls/linkobject.class','adm');

class linkorcamentointerno extends LinkObject
{
    public $novo;	
	
	public function __construct($name='', $uo, $new=NULL)
    {
		global $MIOLO;
		$this->novo = $new;
        $MIOLO->UsesBusiness('adm','orcamentointerno');
        parent::__construct($name,$uo,'nothing.jpg');
    }

    public function setObjectByValue($value)
    {
        $this->object = $this->manager->GetBusiness('adm','orcamentointerno');
        $this->object->GetById($value);
    }

    public function setAction()
    {
        $this->hyperlink->SetAction('adm','main:uo:orcamentointernoedit',$this->object->idUo);
        $this->imagelink->SetAction('adm','main:uo:orcamentointernoedit',$this->object->idUo);
    }

    public function setText()
    {
        $this->hyperlink->SetText($this->object->idRubrica);
    }

    public function setNew()
    {
		$cobaia = 'main:uo:orcamentointernonew';
		$cobaia = $cobaia.'&item='.$this->novo;
        $this->isNewLink = TRUE;
        $this->hyperlink->SetAction('adm',$cobaia);
        $this->hyperlink->SetText('Inserir Orcamento Interno');
        $this->imagelink->SetAction('adm','main:uo:orcamentointernonew');
    }
}
?>
