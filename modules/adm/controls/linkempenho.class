<?
/**
 * Link Empenho class
 */
global $MIOLO;
$MIOLO->Uses('controls/linkobject.class','adm');

class LinkEmpenho extends LinkObject
{
    public function __construct($name='', $empenho)
    {
		global $MIOLO;
        $MIOLO->UsesBusiness('adm','empenho');
        parent::__construct($name,$empenho,'nothing.jpg');
    }

    public function setObjectByValue($value)
    {
        $this->object = $this->manager->GetBusiness('adm','empenho');
        $this->object->GetById((int)$value);
    }

    public function setAction()
    {
        $this->hyperlink->SetAction('adm','main:empenho',$this->object->idEmpenho);
        $this->imagelink->SetAction('adm','main:empenho',$this->object->idEmpenho);
    }

    public function setText()
    {
        $this->hyperlink->SetText($this->object->nome);
    }

    public function setNew()
    {
        $this->isNewLink = TRUE;
        $this->hyperlink->SetAction('adm','main:empenho:new');
        $this->hyperlink->SetText('Inserir Empenho');
        $this->imagelink->SetAction('adm','main:empenho:new');
    }
}
?>
