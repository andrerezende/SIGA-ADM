<?
global $MIOLO;
$MIOLO->Uses('controls/linkobject.class','adm');

class LinkPatrimonio extends LinkObject
{
    public function __construct($name='', $uo)
    {
		global $MIOLO;
        $MIOLO->UsesBusiness('adm','itempatrimonio');
        parent::__construct($name,$uo,'nothing.jpg');
    }

    public function setObjectByValue($value)
    {
        $this->object = $this->manager->GetBusiness('adm','itempatrimonio');
        $this->object->GetById((int)$value);
    }

    public function setAction()
    {
        $this->hyperlink->SetAction('adm','main:itempatrimonio',$this->object->idItemPatrimonio);
        $this->imagelink->SetAction('adm','main:itempatrimonio',$this->object->idItemPatrimonio);
    }

    public function setText()
    {
        $this->hyperlink->SetText($this->object->descricao);
    }

    public function setNew()
    {
        $this->isNewLink = TRUE;
        $this->hyperlink->SetAction('adm','main:itempatrimonio:new');
        $this->hyperlink->SetText('Inserir Novo Item');
        $this->imagelink->SetAction('adm','main:itempatrimonio:new');
    }
}
?>
