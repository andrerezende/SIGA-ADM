<?
global $MIOLO;
$MIOLO->Uses('controls/linkobject.class','adm');

class LinkInspecao extends LinkObject
{
    
    public function __construct($name='', $uo)
    {
        
        global $MIOLO;
         $MIOLO->UsesBusiness('adm','inspecao');
        parent::__construct($name,$uo,'nothing.jpg');
    }

    public function setObjectByValue($value)
    {  
        $this->object = $this->manager->GetBusiness('adm','inspecao');
        $this->object->GetById($value);
    }

    public function setAction()
    {
         
        $this->hyperlink->SetAction('adm','main:inspecao',$this->object->idInspecao);
        $this->imagelink->SetAction('adm','main:inspecao',$this->object->idInspecao);
    }
  
    public function setText()
    {
        $this->hyperlink->SetText($this->object->idInspecao);
    }

    public function setNew()
    {
        $this->isNewLink = TRUE;
        $this->hyperlink->SetAction('adm','main:inspecao:new');
        $this->hyperlink->SetText('Inserir Nova Inspeção');
        $this->imagelink->SetAction('adm','main:inspecao:new');
    }
}
?>
