<?
global $MIOLO;
$MIOLO->Uses('controls/linkobject.class','adm');

class LinkDependencia extends LinkObject
{
    public function __construct($name='', $uo)
    {
		global $MIOLO;
        $MIOLO->UsesBusiness('adm','dependencia');
        parent::__construct($name,$uo,'nothing.jpg');
    }

    public function setObjectByValue($value)
    {
        $this->object = $this->manager->GetBusiness('adm','dependencia');
        $this->object->GetById((int)$value);
    }

    public function setAction()
    {
        $this->hyperlink->SetAction('adm','main:dependencia',$this->object->idDependencia);
        $this->imagelink->SetAction('adm','main:dependencia',$this->object->idDependencia);
    }

    public function setText()
    {
        $this->hyperlink->SetText($this->object->dependencia);
    }

    public function setNew()
    {
        $this->isNewLink = TRUE;
        $this->hyperlink->SetAction('adm','main:dependencia:new');
        $this->hyperlink->SetText('Inserir Nova DependÃªncia');
        $this->imagelink->SetAction('adm','main:dependencia:new');
    }
}
?>
