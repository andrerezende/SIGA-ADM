<?
global $MIOLO;
$MIOLO->Uses('controls/linkobject.class','adm');

class LinkMotorista1 extends LinkObject
{
    public function __construct($name='', $uo)
    {
		global $MIOLO;
        $MIOLO->UsesBusiness('adm','motorista');
        parent::__construct($name,$uo,'nothing.jpg');
    }

    public function setObjectByValue($value)
    {
        $this->object = $this->manager->GetBusiness('adm','motorista');
        $this->object->GetById((int)$value);
    }

    public function setAction()
    {
        $this->hyperlink->SetAction('adm','main:motorista1',$this->object->idMotorista);
        $this->imagelink->SetAction('adm','main:motorista1',$this->object->idMotorista);
    }

    public function setText()
    {
        $this->hyperlink->SetText($this->object->idMotorista);
    }

    public function setNew()
    {
        $this->isNewLink = TRUE;
        $this->hyperlink->SetAction('adm','main:uoveiculo:newmoto');
        $this->hyperlink->SetText('Associar Motorista a U.O.');
        $this->imagelink->SetAction('adm','main:uoveiculo:newmoto');
    }
}
?>
