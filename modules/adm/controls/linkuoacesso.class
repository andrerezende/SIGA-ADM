<?
/**
 * Link UoAcesso class
 */
global $MIOLO;
$MIOLO->Uses('controls/linkobject.class','adm');

class LinkUoAcesso extends LinkObject
{
    public function __construct($name='', $liquidacao)
    {
		global $MIOLO;
        $MIOLO->UsesBusiness('adm','uo');
        parent::__construct($name,$liquidacao,'nothing.jpg');
    }

    public function setObjectByValue($value)
    {
        $this->object = $this->manager->GetBusiness('adm','uo');
        $this->object->GetById((int)$value);
    }

    public function setAction()
    {
        $this->hyperlink->SetAction('adm','main:uoacesso',$this->object->idUo);
        $this->imagelink->SetAction('adm','main:uoacesso',$this->object->idUo);
    }

    public function setText()
    {
        $this->hyperlink->SetText($this->object->sigla);
    }

    public function setNew()
    {
        $this->isNewLink = TRUE;
        $this->hyperlink->SetAction('adm','main:uoacesso:new');
        $this->hyperlink->SetText('Novo Requisitante');
        $this->imagelink->SetAction('adm','main:uoacesso:new');
    }
}
?>
