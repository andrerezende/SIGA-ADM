<?
global $MIOLO;
$MIOLO->Uses('controls/linkobject.class','adm');
class LinkNotaFiscalManutencaoVeiculo extends LinkObject
{
    public function __construct($name='',$notaFiscal)
    {
        global $MIOLO;
        $MIOLO->UsesBusiness('adm','notafiscalmanutencaoveiculo');
        parent::__construct($name,$notaFiscal,'documento_mini.png');
    }

    public function setObjectByValue($value)
    {
        global $MIOLO;
        $this->object = $MIOLO->GetBusiness('adm','notafiscalmanutencaoveiculo');
        $this->object->GetById($value);
    }

    public function setAction()
    {
        global $MIOLO, $module;
        $this->hyperlink->SetAction($module,'main:notafiscalmanutencaoveiculo',$this->object->idNotaFiscal);
        $this->imagelink->SetAction($module,'main:notafiscalmanutencaoveiculo',$this->object->idNotaFiscal);
    }

    public function setText()
    {
        $this->hyperlink->SetText($this->object->idNotaFiscal);
    }

    public function setNew()
    {
        $this->isNewLink = TRUE;
        $this->hyperlink->SetAction('adm','main:notafiscalmanutencaoveiculo:new');
        $this->hyperlink->SetText('Nova Nota de manutenção');
        $this->imagelink->SetAction('adm','main:notafiscalmanutencaoveiculo:new');
    }
}
?>
