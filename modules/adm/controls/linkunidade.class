<?
global $MIOLO;
$MIOLO->Uses('controls/linkobject.class','adm');

class LinkUnidade extends LinkObject
{
    
    public function __construct($name='', $uo)
    {
        
        global $MIOLO;
         $MIOLO->UsesBusiness('adm','unidade');
        parent::__construct($name,$uo,'nothing.jpg');
    }

    public function setObjectByValue($value)
    {  
        $this->object = $this->manager->GetBusiness('adm','unidade');
        $this->object->GetById($value);
    }

    public function setAction()
    {
         
        $this->hyperlink->SetAction('adm','main:unidade',$this->object->sigla);
        $this->imagelink->SetAction('adm','main:unidade',$this->object->sigla);
    }
  
    public function setText()
    {
        $this->hyperlink->SetText($this->object->sigla);
    }

    public function setNew()
    {
        $this->isNewLink = TRUE;
        $this->hyperlink->SetAction('adm','main:unidade:new');
        $this->hyperlink->SetText('Inserir Nova Unidade');
        $this->imagelink->SetAction('adm','main:unidade:new');
    }
}
?>
