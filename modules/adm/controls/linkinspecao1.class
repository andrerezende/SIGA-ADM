<?
global $MIOLO;
$MIOLO->Uses('controls/linkobject.class','adm');

class LinkInspecao1 extends LinkObject
{
    public $objUo;
    public $objUo1;
    public function __construct($name='', $uo, $objUo)
    {
        
        $this->objUo = $objUo;
        global $MIOLO;
         $MIOLO->UsesBusiness('adm','inspecao');
        parent::__construct($name,$uo,'nothing.jpg');
    }

    public function setObjectByValue($value)
    {  
        $this->object = $this->manager->GetBusiness('adm','inspecao');
        $this->object->GetById($value);
    }

    public function setAction()
    {
        
        $this->hyperlink->SetAction('adm','main:inspecao1',$this->object->idInspecao);
        $this->imagelink->SetAction('adm','main:inspecao1',$this->object->idInspecao);
    }
  
    public function setText()
    {
        $this->hyperlink->SetText($this->object->idInspecao);
    }

    public function setNew()
    {
        $this->isNewLink = TRUE;
        $this->hyperlink->SetAction('adm','main:inspecao1:new',$this->objUo->idUo);
        $this->hyperlink->SetText('Inserir Nova Inspeção');
        $this->imagelink->SetAction('adm','main:inspecao1:new');
    }
}
?>
