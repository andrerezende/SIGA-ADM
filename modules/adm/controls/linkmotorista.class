<?
global $MIOLO;
$MIOLO->Uses('controls/linkobject.class','adm');

class LinkMotorista extends LinkObject
{
    public function __construct($name='', $uo)
    {
		global $MIOLO;
        $MIOLO->UsesBusiness('adm','motorista');
        parent::__construct($name,$uo,'nothing.jpg');
    }

    public function setObjectByValue($value)
    {
        $this->object = $this->manager->GetBusiness('adm','motorista');
        $this->object->GetById((int)$value);
    }

    public function setAction()
    {
        $this->hyperlink->SetAction('adm','main:motorista',$this->object->idMotorista);
        $this->imagelink->SetAction('adm','main:motorista',$this->object->idMotorista);
    }

    public function setText()
    {
        $this->hyperlink->SetText($this->object->pessoa->nome);
    }

    public function setNew()
    {
        $this->isNewLink = TRUE;
        $this->hyperlink->SetAction('adm','main:motorista:new');
        $this->hyperlink->SetText('Inserir Novo Motorista');
        $this->imagelink->SetAction('adm','main:motorista:new');
    }
}
?>
