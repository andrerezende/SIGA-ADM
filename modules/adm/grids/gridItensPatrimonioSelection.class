<?
class gridItensPatrimonioSelection extends MDataGrid
{

    /**
     * Constructor
     */
    function __construct()
    {
        global $MIOLO, $self;

	$columns = array(
	   new MDataGridColumn( 'idItemPatrimonio', 'Número', 'center', true, '15%' ),
	   new MDataGridColumn( 'descricao', 'Descrição', 'center', false, '55%' ),
	   new MDataGridColumn( 'setor.sigla', 'Setor','center', true, '15%' ),
	   new MDataGridColumn( 'numeroempenho', 'Empenho','center', true, '15%' ),
	);

	//$datagrid = new MDataGrid( $query, $columns, $href_datagrid, 20 );
        
	$filter = Form::GetFormValue('setores');
        $setor = empty($filter) ? '%' : $filter;
        $this->AddFilterText('setor','idSetor',$setor);
        $this->SetIndex(1);
        
	$objPatrimonio = $MIOLO->GetBusiness( 'adm', 'itempatrimonio' );
	$query = $objPatrimonio->ListByIdSetor($setor);

        $href_grid = $MIOLO->GetActionURL('adm',$self);

        parent::__construct($query, $columns, $href_grid,50);
	$this->SetTitle( 'Selecione os Itens para Baixa em Bloco' );
	$this->SetWidth( '95%' );
	$this->SetClose( null );
	$this->AddActionSelect();

        $this->SetLinkType('hyperlink');
    }
}
?>
