<?php
	class gridInss extends MDataGrid
{
	function __construct()
	{
		global $MIOLO, $module;
		$hrefInss = $MIOLO->GetActionURL('adm', 'main:inss', '#2#', array('form' => 'dados'));
		$columns = array(
			new MDataGridHyperlink('idInss','Id',$hrefInss,'10%',true,NULL,true),
			new DataGridColumn('dataIni','Data Início','left',true, '30%',true, null, false,true),
			new DataGridColumn('dataFim','Data Fim','left',true, '30%',true, null, false,true),
			new DataGridColumn('ate','Até','left',true, '30%',true, null, false,true)
			);
		$filter = MForm::GetFormValue('inss');
		$inss = empty($filter) ? 'A definir' : $filter;
		$objInss = $MIOLO->GetBusiness('common','inss');
		$query = $objInss->ListAll();
		$hrefGrid = $MIOLO->GetActionURL($module,$self);
		parent:: __construct($query, $columns, $hrefGrid,15);
		$this->SetLinkType('hyperlink');
	}
}
?>
