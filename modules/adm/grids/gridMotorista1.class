<?
/**
 * Grid Motorista
 * Grid de uso geral para selecionar motorista
 * @package br.org.miolo.ufjf.rh.grids
 */
/**
 * Use Module Control
 */
global $MIOLO;
$MIOLO->Uses('controls/linkmotorista1.class','adm');

class gridMotorista1 extends DataGrid2
{

    /**
     * Constructor
     */
    function __construct()
    {
        global $MIOLO, $self,$item;

        $linkMotorista = new LinkMotorista1('linkmotorista1','%0%');
        $columns = array(
            new DataGridControl($linkMotorista,'motorista','Nome','left', true,'100%')
         );
        $session = $MIOLO->getSession();
        $session->setValue('uoreqid', $item);

        $this->SetFilter(false);
        $filter = Form::GetFormValue('motorista');
        $motorista = empty($filter) ? '%' : $filter;
        $this->AddFilterText('motorista','Motorista',$motorista);
        $this->SetIndex(1);
        $objMotorista = $MIOLO->GetBusiness('adm','motorista');
        //$query = $objMotorista->ListByNome(strtoupper("'%$motorista%'"));
        $query = $objMotorista->ListByMotoristaUo(strtoupper("'%$motorista%'"),$item);
        $href_grid = $MIOLO->GetActionURL('adm',$self);
        parent::__construct($query, $columns, $href_grid,25);
        $this->SetLinkType('hyperlink');
    }

    function GenerateFooter()
    {
        if (!$this->data) 
        $footer[] = $this->GenerateEmptyMsg();
        $footer[] = new Separator();
        $footer[] = $this->GenerateControls();
        return $footer;
    }

}

