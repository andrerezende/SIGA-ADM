<?
/**
 * Grid Acesso a Bolsa por Usuario
 * @package br.org.miolo.ufjf.adm.grids
 */
class gridAcessoBolsa extends DataGrid2
{
	/**
	 * Base URL
	 * @var string 
	 */
	var $listURL;

	/**
	 * Constructor
	 */
	function gridAcessoBolsa()
	{
		global $MIOLO, $module, $self, $item;
		
		$this->listURL = $MIOLO->GetActionURL($module,$self,$item);
		
		$objAcessoBolsa = $MIOLO->GetBusiness($module,'cadacesso');
		
		$query = $objAcessoBolsa->ListBolsaPorUsuario($item);
		
		$columns = array(
			new DataGridColumn('idbolsa','Id','right',false,'10%'),
			new DataGridColumn('descricao','Bolsa','left',true, '90%',true, null, false,true)
		);
		
		parent::__construct($query, $columns, $this->listURL,20,0);

		$this->SetTitle('Bolsa por Usuario');
		
		$href_dele = $MIOLO->GetActionURL($module,'cadacesso',$item.'_'.'%0%', array('event'=>'btnDelete:click'));

		$this->AddActionDelete($href_dele);

		$this->HeaderLink('inicio', 'Escolher Usuario',$MIOLO->GetActionURL($module,'cadacesso'));

		$this->HeaderLink('novo', 'Cad. Acesso',$MIOLO->GetActionURL($module,'main:cadacesso','',Array('event'=>'btnPreparaNovo:click','item'=>$item)));
		
		$this->SetClose($MIOLO->GetActionURL($module,'main:cadacesso'));
	}
}
?>
