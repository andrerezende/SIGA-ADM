<?php
/**
 * Grid Uo
 * Grid de uso geral para selecionar almoxarifados
 * @package br.org.miolo.ufjf.adm.grids
 */
/**
 * Use Module Control
 */
class gridUoAcessoAlmoxarifado extends ObjectGrid
{

	protected $objUo;
    /**
     * Constructor
     */
    function __construct($objUo)
    {
        global $MIOLO, $self,$page;

		$this->objUo = $objUo;
        $acesso = $this->objUo->getAlmoxExecutores();
        
        $columns = array(
            new MObjectGridColumn('idUoExecutante','','left', true,'',false),
            new MObjectGridColumn('uoexecutante->nome','Nome','left', true,'100%')
         );

        $this->SetFilter(false);
        $this->SetIndex(1);
        
        $href_grid = $MIOLO->GetActionURL('adm',$self);
		$action = $MIOLO->GetActionURL($module,$self,$objUo->idUo,array('form'=>'acessoalmox','id'=>'#0#','event'=>'btnDel:click'));
        parent::__construct($acesso, $columns, $href_grid,0);
		$this->AddActionDelete($action);
        $this->SetLinkType('hyperlink');
        $ctlArray = array (new FormButton('btnNew', 'Incluir Novo Acesso', $MIOLO->GetActionURL('adm','main:uo',$this->objUo->idUo,array('form'=>'acessoalmox','id'=>'new'))));
        $this->SetControls($ctlArray);
    }

    function GenerateFooter()
    {
        if (!$this->data) 
        $footer[] = $this->GenerateEmptyMsg();
        $footer[] = new Separator();
        $footer[] = $this->GenerateControls();
        return $footer;
    }

}

