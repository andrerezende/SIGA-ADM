<?

global $MIOLO;

class gridDefDataExclusao extends MGrid
{
    function __construct()
    {
        global $MIOLO, $self;

   		$mesano  = Form::GetFormValue('mesano');
		$idbolsa = Form::GetFormValue('idbolsa');

		$aux_data = explode ('/', $mesano);
		$dia = $aux_data[0];
		$mes = $aux_data[1];
		$ano = $aux_data[2];		
		
        if ( !empty($idbolsa) )
        {
			$objBolsista = $MIOLO->GetBusiness('adm','bolsista');

        	$query = $objBolsista->lisDefDataExclusao($idbolsa, $dia, $mes, $ano);
	       
			$columns = array(
				new GridColumn('Data de Exclusão','center',true,'20%',true),
				new GridColumn('Nome','left',true,'80%',true),
	        );
			$href_grid = $MIOLO->getActionUrl('adm',$self,$objBolsista->nome);
        	$this->SetFilter(false);
        	parent::__construct($query, $columns, $href_grid, 20);       
        	$this->SetLinkType('hyperlink');
	        $this->SetTitle('Bolsistas com data de exclusão definida anteriormente.');
        }
    }
    function GenerateHeader()
    {
        return null;
    }
    function GenarateFooter()
    {
        return null;
    }
}

