<?
global $MIOLO;
$MIOLO->Uses('controls/linktipomanutencao.class','adm');
class gridTipoManutencao extends DataGrid	
{

    protected $tipoManutencao;

	function __construct()
    {
    	global $MIOLO;
    	global $MIOLO, $module, $page, $context, $self, $action, $perms, $state;
                
        $tipoManutencao = $MIOLO->GetBusiness('adm','tipomanutencao');
		$query = $tipoManutencao->listAll();
        $this->SetFilter(false);
        $this->SetIndex(1);
		$linkTipoManutencao = new LinkTipoManutencao('linktipomanutencao','%0%');
        $columns = array(
            new DataGridControl($linkTipoManutencao,'TipoManutencao','Tipo de Manutenção','left','','100%')
				         );
        parent::__construct($query, $columns, $href_grid,25);
        $this->SetLinkType('hyperlink');
        $this->SetTitle('Tipos de manutenção');
        $this->width = '100%';
        $this->EventHandler();

    }

    function GenerateFooter()
    {
        if (!$this->data) $footer[] = $this->GenerateEmptyMsg();
        return $footer;
    }
}
?>