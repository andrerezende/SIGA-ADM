<?
/**
 * Grid RequisicaoParticipantes
 * Grid de uso geral para selecionar tipos de licafast
 * @package br.org.miolo.ufjf.adm.listing
 */

/**
 * Use Module Control
 */


class gridRequisicaoLocalidadeDiaria extends MGrid
{
	protected $objRequisicao;
    /**
     * Constructor
     */
    function __construct($objRequisicao)
    {
		global $MIOLO;
		$this->objRequisicao = $objRequisicao;
        $k = new MKrono();
        $diaria = $MIOLO->getBusiness('adm','diaria');
        $itemRequisicao = $this->objRequisicao->getItem();

        $maxDiarias = $k->DaysDiff($itemRequisicao->dataSaida,$itemRequisicao->dataRetorno);

        // Se a diária for nacional o máximo de diárias e acescido em 1/2
        if ($itemRequisicao->nacional == "S")
            $maxDiarias = $maxDiarias + 0.5;

        //$maxDiarias = $itemRequisicao->diariasConcedidas;
        $totalDiarias = 0 + $this->objRequisicao->getTotalDiarias();

		$columns = array(
			new DataGridColumn('idmunicipio','IdRequisicao','','','',false),
			new DataGridColumn('municipio','Município','','','80%'),
			new DataGridColumn('uf','UF','center','','10%'),
  			new DataGridColumn('quantdiarias','Diárias','center','','10%'),          
		);
        
        $query = $objRequisicao->listLocalidadeDiarias();

        $href_grid = $MIOLO->GetActionURL('adm','main:requisicoes',$objRequisicao->idRequisicao,array('form'=>'item','tipoReq'=>'5','id'=>'#0#'));
        parent::__construct($query->result, $columns, $href_grid,25);
        $this->SetTitle('LOCALIDADES - TOTAL DE DIARIAS: '.$totalDiarias.' - MÁXIMO PERMITIDO: '.$maxDiarias);
        $this->SetFilter(false);
        $this->SetIndex(1);
        $this->SetWidth('100%');
        $this->SetLinkType('hyperlink');
		$action = $this->manager->GetActionURL('adm','main:requisicoes',$objRequisicao->idRequisicao,array('form'=>'item','tipoReq'=>'5','id'=>'#0#'));

        if ( $objRequisicao->status == 'I' )
		    $this->AddActionDelete($action);
    }
    
    function GenerateFooter()
    {
        if (!$this->data) 
        $footer[] = $this->GenerateEmptyMsg();
        $footer[] = new Separator();
        $footer[] = $this->GenerateControls();
        return $footer;
    }
}
?>
