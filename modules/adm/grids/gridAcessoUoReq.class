<?
/**
 * Grid AcessoUoReq
 * Grid de uso geral para selecionar usuarios da uo
 * @package br.org.miolo.ufjf.adm.listing
 */

/**
 * Use Module Control
 */


class gridAcessoUoReq extends ObjectGrid
{
	protected $objUo;
    /**
     * Constructor
     */
    function __construct($objUo)
    {
        global $MIOLO, $module,$self ;
		$this->objUo = $objUo;
		
        $columns = array(
            new ObjectGridColumn('idUsuario','NÃºmero','right', false,'0%',false),
            new ObjectGridColumn('login','Login','left', false,'10%',true),
            new ObjectGridColumn('pessoa->nome','Nome','left', false,'90%',true),
        );
        $this->SetTitle(NULL);
        $this->SetFilter(false);
        $this->SetIndex(1);
        
        //mostra somente os usuarios ativos
        for ($i=0;$i<count($objUo->usuarios);$i++){              
            if ($objUo->usuarios[$i]->ativo == 'S') $usuariosAtivos[] = $objUo->usuarios[$i];
        }        
        $href_grid = $MIOLO->GetActionURL($module,$self);
        parent::__construct($usuariosAtivos, $columns, $href_grid,25);
        $this->SetLinkType('hyperlink');
        $this->SetClose(null);
		$action = $MIOLO->GetActionURL($module,$self,$objUo->idUo,array('form'=>'acesso','id'=>'#0#'));
		$this->AddActionDelete($action);
    }


    function GenerateFooter()
    {
        if (!$this->data) 
        $footer[] = $this->GenerateEmptyMsg();
        $footer[] = new Separator();
        $footer[] = $this->GenerateControls();
        return $footer;
    }
}
?>
