<?
/**
 * Grid LicitacaoParticipantes
 * Grid de uso geral para selecionar tipos de licafast
 * @package br.org.miolo.ufjf.adm.listing
 */

/**
 * Use Module Control
 */


class gridLicitacaoParticipantes extends MDataGrid
{
	protected $licitacao;
    /**
     * Constructor
     */
    function __construct($licitacao)
    {
		global $MIOLO;
		$this->licitacao = $licitacao;
        $k = new MKrono();

		$columns = array(
			new DataGridColumn('idfornecedor','IdMaterial','','','',false),
			new DataGridColumn('cgc','CNPJ','','','15%'),
			new DataGridColumn('nome','Nome','','','60%'),
			new DataGridColumn('municipio','Cidade','','','25%'),
		);

        $participante = $MIOLO->GetBusiness('adm','participante');

        //var_dump($k->compareDate(substr($this->licitacao->dataCriacao,0,10),'>','17/09/2007'));
        if ($k->compareDate(substr($this->licitacao->dataCriacao,0,10),'>','17/09/2007'))
            $result = $participante->listByLicitacao($this->licitacao->idLicitacao);
        else        
            $result = $this->licitacao->listParticipantes($this->licitacao->idLicitacao);
			//alteração Adicionado $href_grid
       $href_grid = $MIOLO->GetActionURL('adm','main:licitacoes',$this->licitacao->idLicitacao,array('form'=>'participantes'));
	   
        parent::__construct($result, $columns, $href_grid,25);
        $this->SetTitle("Participantes Cadastrados");
        $this->SetFilter(NULL);
        $this->SetIndex(1);
        $this->SetWidth('100%');
        $this->SetLinkType('hyperlink');
		$action = $this->manager->GetActionURL('adm','main:licitacoes',$this->licitacao->idLicitacao,array('form'=>'participantes','id'=>'#0#'));

        // Se a licitação está com status PARTICIPANTES CADASTRADOS ou posterior não habilita link de excluir fornecedor
        // E se não existe um mapa de licitação
        if ($this->licitacao->status == '1' && !$this->licitacao->ExisteMapaLicitacao())
		    $this->AddActionDelete($action);
    }

    function GenerateFooter()
    {
        if (!$this->data) 
        $footer[] = $this->GenerateEmptyMsg();
        $footer[] = new Separator();
        $footer[] = $this->GenerateControls();
        return $footer;
    }
}
?>
