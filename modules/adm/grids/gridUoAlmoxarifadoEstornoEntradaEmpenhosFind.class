<?php
class gridUoAlmoxarifadoEstornoEntradaEmpenhosFind extends MGrid
{
    protected $uoalmoxarifado;
    function __construct($objUo)
    {
        global $MIOLO, $page;

        $this->uoalmoxarifado = $objUo;
		$cf = new MCurrencyFormatter();
        $this->setTitle('Empenhos encontrados');
        $href = $MIOLO->getActionURL('adm','main:uoalmoxarifado',$this->uoalmoxarifado->idUo,array('form'=>'estornoentradamaterial','idEmpenho'=>'#0#'));
        $columns = array(
            new MDataGridColumn('idEmpenho','','center', true,'',false),
            new MDataGridColumn('numero','Número','center', true,'14%'),
			new MDataGridColumn('numLicitacao','Licitação','center','true','14%'),
            new MDataGridHyperlink('fornecedor','Fornecedor',$href,'40%'),
			new MDataGridColumn('dataEmpenho','Data','center','true','16%'),
			new MGridColumn('Valor','center','true','16%'),
         );
        $this->setFilter(false);
        $objEmpenho = $MIOLO->GetBusiness('adm','empenho');
        $numero = Form::getFormValue('numero');
        $fornecedor = Form::getFormValue('fornecedor');
        $cf = new MCurrencyFormatter();
        $resultados = $objEmpenho->ListForAlmoxarifadoEntrada($this->uoalmoxarifado->idUo,$numero,strtoupper(trim($fornecedor)));
        if ($resultados)
        {
            foreach ($resultados as $resultado)
            {
                $dados[] = array($resultado[0],$resultado[1],$resultado[2],$resultado[3],$resultado[4],$cf->formatWithSymbol($cf->toDecimal($resultado[5])-$cf->toDecimal($resultado[7])-$cf->toDecimal($resultado[6])));
            }
        }
/*        if ( count($dados) == 1 )
        {
            $page->redirect($MIOLO->getActionURL('adm','main:uoalmoxarifado:main',$this->uoalmoxarifado->idUo,array('form'=>'estornoentradamaterial','idEmpenho'=>$dados[0][0])));
        }
*/        $href_grid = $MIOLO->getActionURL('adm','main:uoalmoxarifado',$this->uoalmoxarifado->idUo,array('form'=>'estornoentradamaterial'));
        parent::__construct($dados, $columns, $href_grid,25);
        $this->SetLinkType('hyperlink');
        $this->with = '100%';
    }
}
