<?
class gridTransacaoOrcamentaria extends MObjectGrid
{
	protected $objUo;
    
    function __construct($objUo)
    {
        
        global $MIOLO, $module,$self,$item;
        
        $this->objUo = $objUo;

		$columns = array(
			   new MObjectGridColumn('idRubrica','IdRubrica','left', false,'1%',false),
               new MObjectGridColumn('rubrica->descricao','Rubrica','left', false,'45%',true),
			   new MObjectGridColumn('ano','Ano','center', false,'8%',true),
			   new MObjectGridColumn('idUo','Uo','left', false,'1%',false),
    	       new MObjectGridColumn('credito','Crédito','left', false,'12%',true),
               new MObjectGridColumn('debito','Débito','left', false,'12%',true),
               new MObjectGridColumn('previsaoDebito','Previsão de Débito','left', false,'12%',true),
			   new MObjectGridColumn('saldo','Saldo','left', false,'12%',true)
        );
        
        $this->SetIndex(1);
        $href_grid = $MIOLO->GetActionURL($module,$self);
        $this->objUo->getOrcamentos();
        
        foreach ($this->objUo->orcamento as $orcamento)
        {
            if ($orcamento->ano >= '2008') //filtra para pegar somente as rubricas de 2008 em diante
            {
                $aux[] = $orcamento;
            }
        }
        
        parent::__construct($aux, $columns, $href_grid,25);
        $this->SetLinkType('hyperlink');
		$action = $MIOLO->GetActionURL($module,$self,$objUo->idUo,array('form'=>'orcamentointerno','idRubrica'=>'#0#','ano'=>'#2#'));


    }

    function GenerateFooter()
    {
        if (!$this->data) 
        $footer[] = $this->GenerateEmptyMsg();
        $footer[] = new Separator();
        $footer[] = $this->GenerateControls();
        return $footer;
    }
}



