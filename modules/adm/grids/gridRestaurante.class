<?
/**
 * Grid Restaurante
 * Grid de uso geral para selecionar restaurante
 * @package br.org.miolo.ufjf.rh.grids
 */
/**
 * Use Module Control
 */
global $MIOLO;
$MIOLO->Uses('controls/linkrestaurante.class','adm');

class gridRestaurante extends DataGrid2
{

    /**
     * Constructor
     */
    function __construct()
    {
        global $MIOLO, $self;

        $linkRestaurante = new LinkRestaurante('linkrestaurante','%0%');
        $columns = array(
            new DataGridControl($linkRestaurante,'restaurante','Nome','left', true,'100%')
         );

        $this->SetFilter(false);
        $filter = Form::GetFormValue('restaurante');
        $restaurante = empty($filter) ? '%' : $filter;

        $this->AddFilterText('restaurante','Restaurante',$restaurante);
        $this->SetIndex(1);
        $objRestaurante = $MIOLO->GetBusiness('adm','restaurante');

        $query = $objRestaurante->ListByNome($restaurante);

        $href_grid = $MIOLO->GetActionURL('adm',$self);


        parent::__construct($query, $columns, $href_grid,25);
        $this->SetLinkType('hyperlink');
    }

    function GenerateFooter()
    {
        if (!$this->data) 
        $footer[] = $this->GenerateEmptyMsg();
        $footer[] = new Separator();
        $footer[] = $this->GenerateControls();
        return $footer;
    }

}

