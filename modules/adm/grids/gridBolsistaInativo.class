<?
/**
 * Grid Bolsista Inativos
 * @package br.org.miolo.ufjf.adm.grid
 */
class gridBolsistaInativo extends Grid
{
	/**
	 * Base URL
	 * @var string 
	 */
	var $listURL;

	/**
	 * Constructor
	 */
	function __construct()
	{
		global $MIOLO, $module, $self, $item;
		
		$idpessoa = $item;
		
		$this->listURL = $MIOLO->GetActionURL($module,$self);
		$objBolsista = $MIOLO->GetBusiness($module,'bolsista');
		$query = $objBolsista->ListBolsistas($idpessoa,'inativos');
		
		$columns = array(
			new GridColumn('Id','right', true, '0%',false),
			new GridColumn('Nome','left', true, '60%',true, null, false,true),
			new GridColumn('Inclusão','center',true, '15%',true, null, false,true),
			new GridColumn('Exclusão','center',true, '15%',true, null, false,true),
			new GridColumn('Bolsa','left', true, '30%',true, null, false,true),
		);
		
		parent::__construct($query->result, $columns, $this->listURL,20,0);

		$this->SetTitle('Bolsistas');
		$this->HeaderLink('inicio', 'Formulário Inicial',$MIOLO->GetActionURL($module,'main:bolsista'));
		$this->HeaderLink('ativos', 'Registros Ativos',$MIOLO->GetActionURL($module,'main:listabolsista',$item));
		$this->SetClose($MIOLO->GetActionURL($module,'main:listabolsista',$item));
	}
}
?>
