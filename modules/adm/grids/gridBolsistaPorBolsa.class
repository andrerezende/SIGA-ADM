<? //var_dump($pagGeral);
/**
 * Grid Bolsista por Bolsa para Pagamento
 * @package br.org.miolo.ufjf.adm.grids
 */
class gridBolsistaPorBolsa extends DataGrid2
{
	/**
	 * Base URL
	 * @var string 
	 */
	var $listURL;

	/**
	 * Constructor
	 */
	function gridBolsistaPorBolsa()
	{
		global $MIOLO, $module, $self, $state, $item ;
		
		$pgGeral = $_REQUEST['pgGeral']; 
		$aux = explode('_',$item);
		$idbolsa = $aux[0];
		$mesano = $aux[1];
		
		//modificacoes
		$folha = $aux[2];

		$this->listURL = $MIOLO->GetActionURL($module,$self,$item);
		
		$objBolsista = $MIOLO->GetBusiness($module,'bolsista');
		
	    //modificacoes
		//Lista somente os bolsistas ativos que *possuem conta*
		$query = $objBolsista->ListBolsistasNaoPagosPorBolsa($idbolsa,$mesano,$folha);
	
		$columns = array(
	     	new DataGridColumn('idbolsista','Id','right', true, '0%',false),
		    new DataGridColumn('nome','Nome','left', true, '50%',true, null, false,true),
			new DataGridColumn('datainclusao','Inclusão','left',true, '20%',true, null, false,true),
			new DataGridColumn('dataexclusao','Exclusão','left', true, '30%',true, null, false,true),
		);
		
		if ( $pgGeral == 'sim' )
		{
			$this->AddFilterText('nome','Nome:','');

	    	parent::__construct($query, $columns, $this->listURL,20);
		    
	    	if (($f = $state->get('filtro')) === NULL) $f = true;			
	   		$this->SetFilter($f);
		   	$state->set('filtro',$f);
		    if ($query->result)
		    {
		    	$ctlArray = array (
           	        new FormButton('btnNew','Pagar em Bloco',$MIOLO->GetActionURL($module,'pagbolsabloco',$mesano.'_'.$idbolsa.'_'.$folha, array('event'=>'btnPrepara:click'))));
		  	    $this->SetControls($ctlArray);
		    }		   		
           	$this->SetTitle('Bolsistas Por Bolsa para Pagamento em Bloco');
		}
		else
		{			
			$this->AddFilterText('nome','Nome:','');

			parent::__construct($query, $columns, $this->listURL,20,0);
			
		 	if (($f = $state->get('filtro')) === NULL) $f = true;			
		    $this->SetFilter($f);
	     	$state->set('filtro',$f);
 
		    //modificacoes
		    $href_edit = $MIOLO->GetActionURL($module,'pagbolsa','%0%_'.$mesano.'_'.$idbolsa.'_'.$folha, array('event'=>'btnPrepara:click'));
		    
		    $this->SetTitle('Bolsistas Por Bolsa para Pagamento');
			$this->AddActionUpdate($href_edit);
		}
		
		$this->HeaderLink('voltar', 'Voltar',$MIOLO->GetActionURL($module,'listapagbolsa',$item));

		$this->SetClose($MIOLO->GetActionURL($module,'main:pagbolsa'));
	}
}
?>
