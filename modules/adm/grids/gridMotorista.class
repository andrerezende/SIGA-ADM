<?
/**
 * Grid Motorista
 * Grid de uso geral para selecionar motorista
 * @package br.org.miolo.ufjf.rh.grids
 */
/**
 * Use Module Control
 */
global $MIOLO;
$MIOLO->Uses('controls/linkmotorista.class','adm');

class gridMotorista extends DataGrid2
{

    /**
     * Constructor
     */
    function __construct()
    {
        global $MIOLO, $self;

        $linkMotorista = new LinkMotorista('linkmotorista','%0%');
        $columns = array(
            new DataGridControl($linkMotorista,'motorista','ID','left', true,'5%'),
            new DataGridColumn('nome','Nome','left', true,'85%'),
            new DataGridColumn('ativo','Ativo','left', true,'10%'),
         );

        $this->SetFilter(false);
        $filter = Form::GetFormValue('motorista');
        $motorista = empty($filter) ? '%' : $filter;
        $this->AddFilterText('motorista','Motorista',$motorista);
        $this->SetIndex(1);
        $objMotorista = $MIOLO->GetBusiness('adm','motorista');
        $query = $objMotorista->ListByUsuario(strtoupper("'%$motorista%'"));
        
        $href_grid = $MIOLO->GetActionURL('adm',$self);
        parent::__construct($query, $columns, $href_grid,25);
        $this->SetLinkType('hyperlink');
    }

    function GenerateFooter()
    {
        if (!$this->data) 
        $footer[] = $this->GenerateEmptyMsg();
        $footer[] = new Separator();
        $footer[] = $this->GenerateControls();
        return $footer;
    }

}

