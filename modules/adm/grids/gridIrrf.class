<?php
class gridIrrf extends MDataGrid
{
    function __construct()
    {
        global $MIOLO, $self;

        $hrefIrrf = $MIOLO->getActionURL('adm', 'main:irrf', '#0#', array('form' => 'dados'));
        $columns = array(
			new MDataGridHyperlink('idIrrf', 'Código', $hrefIrrf, '15%', true, null, true),
           	new MDataGridColumn('dataini','Data Início','left', true,'30%'),
           	new MDataGridColumn('datafim','Data Fim','center', true,'30%'),
           	new MDataGridColumn('ate','Valor Máximo R$','center', true,'25%'),
         );

        $objIrrf = $MIOLO->getBusiness('common','irrf');
        $query = $objIrrf->listAll();
        $hrefgrid = $MIOLO->getActionURL('adm',$self);

        parent::__construct($query, $columns, $hrefgrid,25);
		$this->setLinkType('hyperlink');				
    }
}
?>
