global $MIOLO;
$MIOLO->Uses('controls/linkunidade.class','adm');

class gridUnidade extends DataGrid2
{

    /**
     * Constructor
     */
    function __construct()
    {
        global $MIOLO, $self;

        $linkUnidade = new LinkUnidade('linkunidade','%0%');
        $columns = array(
                new DataGridControl($linkUnidade,'sigla','Sigla','center', true,'10%'),
	        new DataGridColumn('descricao','DescriÃ§Ã£o','left',false,'85%'),
           
                
         );

        $this->SetFilter(false);
		$filter = Form::GetFormValue('unidade');
		$unidade = empty($filter) ? '%' : $filter;
		$this->AddFilterText('unidade','Unidade',$unidade);
                $sigla = Form::GetFormValue('sigla');

		$this->SetIndex(1);

		$objUnidade = $MIOLO->GetBusiness('adm','unidade');

                $query = $objUnidade->ListByNome($sigla);

		$href_grid = $MIOLO->GetActionURL('adm',$self);

		parent::__construct($query, $columns, $href_grid,25);
		$this->SetLinkType('hyperlink');
    }

    function GenerateFooter()
    {
        if (!$this->data) 
        $footer[] = $this->GenerateEmptyMsg();
        $footer[] = new Separator();
        $footer[] = $this->GenerateControls();
        return $footer;
    }

}

