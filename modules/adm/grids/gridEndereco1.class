class gridEndereco1 extends MDataGrid2 {

	public function  __construct() {
		global $MIOLO, $module, $page, $context, $self, $action, $perms, $state, $item;

		$endereco = $MIOLO->GetBusiness('adm', 'endereco');
                
        // pega os campos do form para fazer a query
        $query = $endereco->listEnderecoUo(19
                
        );

		$this->SetIndex(1);
    
        $hrefEndereco = $MIOLO->getActionURL('adm','main:endereco1:edit','#0#' );

        $columns = array(
                new MDataGridHyperlink('idEndereco','ID', $hrefEndereco,'5%',true,null,true),
                new MDataGridColumn('nomelocal','Local','center',true,'35%'),
                new MDataGridColumn('bairro','Bairro','left',true,'30%'),
                new MDataGridColumn('cidade','Cidade','left',true,'15%'),
                new MDataGridColumn('estado','Estado','center',true,'15%')
                     
            );

        // referencia a ele proprio
        $href_grid = $MIOLO->GetActionURL('adm', $self);

		parent::__construct($query, $columns, $href_grid, 25);
        $this->SetWidth('100%');
        $this->SetClose(null);
        $this->SetLinkType('hyperlink');
	}
}
