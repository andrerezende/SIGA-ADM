global $MIOLO;
$MIOLO->Uses('controls/linkendereco1.class','adm');

class gridEndereco2 extends DataGrid2
{

    /**
     * Constructor
     */
    function __construct()
    {
        global $MIOLO, $self,$item;//listEnderecos1

       $linkEndereco = new LinkEndereco1('linkendereco1','%0%');
        
        $endereco = $MIOLO->GetBusiness('adm', 'endereco');
        // pega os campos do form para fazer a query
        $query = $endereco->listEndereco(
                MForm::GetFormValue('nomelocal'),
                MForm::GetFormValue('bairro'),
                MForm::GetFormValue('endereco'),
                MForm::GetFormValue('cep'),
                MForm::GetFormValue('cidade'),
                MForm::GetFormValue('estado')
                
        );
        
        $columns = array(
            new DataGridControl($linkEndereco,'idEndereco','ID','left', true,'5%'),
            new MDataGridColumn('nomelocal','Local','center',true,'10%'),
                new MDataGridColumn('bairro','Bairro','left',true,'11%'),
                new MDataGridColumn('endereco','Endereço','left',true,'15%'),
                new MDataGridColumn('numero','Número','left',true,'8%'),
                new MDataGridColumn('complemento','Complemento','left',true,'18%'),
                new MDataGridColumn('cep','Cep','right',true,'15%'),
                new MDataGridColumn('cidade','Cidade','left',true,'13%'),
                new MDataGridColumn('estado','Estado','center',true,'5%')
         );

        $this->SetFilter(false);
        $filter = Form::GetFormValue('endereco');
        $endereco= empty($filter) ? '%' : $filter;
        $this->AddFilterText('endereco','Endereço',$endereco);
        $this->SetIndex(1);
        $objEndereco = $MIOLO->GetBusiness('adm','endereco');
        $query = $objEndereco->listEnderecos1($item);
        $href_grid = $MIOLO->GetActionURL('adm',$self);
        parent::__construct($query, $columns, $href_grid,25);
        $this->SetLinkType('hyperlink');
    }

    function GenerateFooter()
    {
        if (!$this->data) 
        $footer[] = $this->GenerateEmptyMsg();
        $footer[] = new Separator();
        $footer[] = $this->GenerateControls();
        return $footer;
    }

}

