<?
/**
 * Grid TipoReq
 * Grid de uso geral para selecionar tipo de requisicao
 * @package br.org.miolo.ufjf.rh.grids
 */
/**
 * Use Module Control
 */
global $MIOLO;
$MIOLO->Uses('controls/linktiporeq.class','adm');

class gridTipoReq extends DataGrid2
{

    /**
     * Constructor
     */
    function __construct()
    {
        global $MIOLO, $self;

        $linkTipoReq = new LinkTipoReq('linktiporeq','%0%');
        $columns = array(
            new DataGridControl($linkTipoReq,'tiporeq','DescriÃ§Ã£o','left', true,'100%')
         );

        $this->SetFilter(false);
        $filter = Form::GetFormValue('tiporeq');
        $tiporeq = empty($filter) ? '%' : $filter;
        $this->AddFilterText('tiporeq','TipoReq',$tiporeq);
        $this->SetIndex(1);
        $objTipoReq = $MIOLO->GetBusiness('adm','tiporeq');
        $query = $objTipoReq->ListByDescricao($tiporeq);

        $href_grid = $MIOLO->GetActionURL('adm',$self);


        parent::__construct($query, $columns, $href_grid,25);
        $this->SetLinkType('hyperlink');
    }

    function GenerateFooter()
    {
        if (!$this->data) 
        $footer[] = $this->GenerateEmptyMsg();
        $footer[] = new Separator();
        $footer[] = $this->GenerateControls();
        return $footer;
    }

}

