<?
/**
 * Grid Ptr
 * Grid de uso geral para selecionar ptr
 * @package br.org.miolo.ufjf.adm.grids
 */
/**
 * Use Module Control
 */
global $MIOLO;
$MIOLO->Uses('controls/linkptr.class','adm');

class gridPtr extends DataGrid2
{

    /**
     * Constructor
     */
    function __construct()
    {
        global $MIOLO, $self;

        $linkPtr = new LinkPtr('linkptr','%0%');
        $columns = array (
            new DataGridControl($linkPtr,'ptr','Código','center', true,'15%'),
            new DataGridColumn('descricao','Descrição','left', true,'55%'),
            new DataGridColumn('progtrab','Programa de Trabalho','center', true,'30%'),
      //      new DataGridColumn('uorcamento','Unidade Orçamentária','center', true,'10%'),
        );

        $this->SetFilter(false);
        $filter = Form::GetFormValue('ptr');
        $ptr = empty($filter) ? '%' : $filter;
        $this->AddFilterText('ptr','PTR',$ptr);
        $this->SetIndex(1);
        $objPtr = $MIOLO->GetBusiness('adm','ptr');
        $query = is_numeric($ptr) ? $objPtr->ListById("$ptr") : $objPtr->ListByDescricao("$ptr");
        $href_grid = $MIOLO->GetActionURL('adm',$self);

        parent::__construct($query, $columns, $href_grid,25);
        $this->SetLinkType('hyperlink');
    }

    function GenerateFooter()
    {
        if (!$this->data) 
        $footer[] = $this->GenerateEmptyMsg();
        $footer[] = new Separator();
        $footer[] = $this->GenerateControls();
        return $footer;
    }

}



