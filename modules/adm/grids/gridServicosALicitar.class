/**
 * Grid Licitacao
 * Grid de uso geral para selecionar licitacao
 * @package br.org.miolo.ufjf.rh.grids
 */
/**
 * Use Module Control
 */
global $MIOLO;

class gridServicosALicitar extends MGrid
{
    /**
     * Constructor
     */
    function __construct()
    {
        global $MIOLO, $self, $module;

		$objItemServico = $MIOLO->GetBusiness('adm','itemservext');
		$query = $objItemServico->listItens();
        $cf = new MCurrencyFormatter();

        if (is_array($query->result))
        {
            foreach ($query->result as $key => $rs)
            {
            	$query->result[$key][7] = $cf->formatWithSymbol($query->result[$key][7]);
                $query->result[$key][8] =$cf->formatWithSymbol($rs[6]*$cf->toDecimal($rs[7]));
            }
        }

		$columns = array(
		    new MGridColumn('Req.','center','','0%',false,'',true),
			new MGridColumn('UO Req.','center','','10%',true,'',true),
			new MGridColumn('Cod. ServiÃ§o','left','','10%',true,'',true),
			new MGridColumn('ServiÃ§o','left','','55%',true,'',true),
			new MGridColumn('Req.','center','','5%'),
			new MGridColumn('Un','center','','5%'),
			new MGridColumn('Qtde.','center','','5%'),
			new MGridColumn('Valor','center','','5%'),
			new MGridColumn('V. Total','right','','10%'),
        );

        $this->SetFilter(false);
		$href_grid = $MIOLO->GetActionURL($module,$self);
        parent::__construct($query->result, $columns, $href_grid,0);
        $this->SetLinkType('hyperlink');
        
        
        $href_dele = $MIOLO->getActionURL( $module, "main:anularRequisicao", '%0%' );
        $this->addActionDelete( $href_dele );
        
    }

    function GenerateFooter()
    {
        if (!$this->data) 
        $footer[] = $this->GenerateEmptyMsg();
        $footer[] = new Separator();
        $footer[] = $this->GenerateControls();
        return $footer;
    }

}

