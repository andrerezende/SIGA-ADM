<?
class gridEmpenho2 extends MDataGrid
{
    function __construct($param)
    {
        global $MIOLO, $page,$self;
        $href = $MIOLO->getActionURL('adm','main:financeiro:itemempenhonew','#0#');
        $columns = array(
			new MDataGridColumn('idEmpenho','Referência','center','true','10%'),
            new MDataGridHyperlink('numero','Número',$href,'20%'),
			new MDataGridColumn('fornecedor','Fornecedor','left','true','70%'),
		);
		$this->SetLinkType('hyperlink');
        $this->setFilter(false);
        $objEmpenho = $MIOLO->GetBusiness('adm','empenho');
		$query = $objEmpenho->ListAllSemLicitacao();//padrão da página
		$href_grid = $MIOLO->GetActionURL('adm',$self,$param);
		parent::__construct($query, $columns, $href_grid,25);
		$href = $this->manager->GetActionURL('adm','main:financeiro:itemempenhonew','', array('idEmpenho'=>'$id') );
    }
}
?>