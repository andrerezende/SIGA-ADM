<?
/**
 * Grid Pessoas
 * Grid de uso geral para selecionar pessoas
 * @package br.org.miolo.ufjf.rh.grids
 */

$MIOLO->Uses('controls/linkpessoa.class','adm');

class gridPessoas extends DataGrid2
{
    /**
     * Base URL
     * @var string 
     */
    var $listURL;
    var $pessoa;

    /**
     * Constructor
     */
    function gridPessoas()
    {

    	global $MIOLO, $module, $page, $context, $self, $action, $perms, $state;

        $this->SetFilter(false);
        $nome = Form::GetFormValue('nome');
        $cpf = Form::GetFormValue('cpf');
        $this->AddFilterText('nome','Nome',$nome);
        $this->AddFilterText('cpf','CPF',$cpf);
        $this->SetIndex(1);
        $this->pessoa = $MIOLO->GetBusiness('common','pessoa');
        if(empty($nome) && empty($cpf))
        $query = $this->pessoa->ListByNome("A Definir");
        elseif(!empty($nome) && empty($cpf))
        $query = $this->pessoa->ListByNome($nome);
        elseif(empty($nome) && !empty($cpf))
        $query = $this->pessoa->ListByCPF($cpf);
        elseif(!empty($nome) && !empty($cpf))
        $query = $this->pessoa->ListByNomeAndCPF($nome,$cpf);
        $href_trans = $MIOLO->GetActionURL('adm','main:altera:find','#0#','');
        $linkpessoa = new LinkPessoa('linkpessoa','%0%');
        $columns = array(
            new DataGridColumn('idpessoa','Id','right', true, '',false),
            new DataGridControl($linkpessoa,'idpessoa','Pessoa'),
         );
        $href_grid = $MIOLO->GetActionURL(adm,$self,'', Array('event'=>'btnList_click'));
        parent::__construct($query, $columns, $href_grid,25);
             
        $this->SetLinkType('hyperlink');
        $this->SetTitle('Relação de Pessoas');
        $this->EventHandler();
    }

    function GenerateFooter()
    {
        if (!$this->data) 
           $footer[] = $this->GenerateEmptyMsg();
        return $footer;
    }
}
?>