<?
/**
 * Grid Licitacao
 * Grid de uso geral para selecionar licitacao
 * @package br.org.miolo.ufjf.rh.grids
 */
/**
 * Use Module Control
 */
global $MIOLO;

class gridItensALicitar extends MGrid
{
    /**
     * Constructor
     */
    function __construct()
    {
        global $MIOLO, $self, $module;

		$objItem = $MIOLO->GetBusiness('adm','itemreq');
		//$query = $objItem->ListItensAtendidosByCosup();
		$query = $objItem->ListItensAtendidos();

        if (is_array($query->result))
        {
            foreach ($query->result as $rs)
            {
            	if ($rs[14] != NULL)            
                    $descricao = "(detalhado) ".$rs[1];                    
                else
                    $descricao = $rs[1];
                    
                $list[] = array($rs[10],$descricao,$rs[2],$rs[3],number_format(str_replace(',','.',$rs[12]),2,',',''),$rs[11]);
            }
        }

		$columns = array(
//            new MGridColumn('P','center','','3%',true,'',true),
			new MGridColumn('UO Req.','center','','10%',true,'',true),
			new MGridColumn('Material','left','','50%',true,'',true),
			new MGridColumn('Req.','center','','5%'),
			new MGridColumn('Qtde.','center','','5%'),
			new MGridColumn('Total','center','','10%'),
            new MGridColumn('UN','center','','5%'),
			new MGridColumn('IdItemreq','center',true,'1%',false),
			new MGridColumn('DtAutGestor','center',true,'10%')
        );

        $this->SetFilter(false);
		$href_grid = $MIOLO->GetActionURL($module,$self);
        parent::__construct($list, $columns, $href_grid,0);
        $this->SetLinkType('hyperlink');
    }

    function GenerateFooter()
    {
        if (!$this->data) 
        $footer[] = $this->GenerateEmptyMsg();
        $footer[] = new Separator();
        $footer[] = $this->GenerateControls();
        return $footer;
    }

}

