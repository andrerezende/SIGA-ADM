<?
/**
 * Grid LicitacaoParticipantes
 * Grid de uso geral para selecionar tipos de licafast
 * @package br.org.miolo.ufjf.adm.listing
 */

/**
 * Use Module Control
 */


class gridLicitacaoItens extends MDataGrid
{
	protected $objLicitacao;
    /**
     * Constructor
     */
    function __construct($objLicitacao)
    {
		global $MIOLO;

		$columns = array(
			new MDataGridColumn('item','Ítem','center','','5%'),
			new MDataGridColumn('codmaterial','Cód.','center','','5%'),
			new MDataGridColumn('idelemento','Elemento','center','','10%'),
			new MDataGridColumn('idsubelemento','SubElemento','center','','10%'),
			new MDataGridColumn('descricao','Material/Serviço','left','','70%'),
		);
        
     	$href_grid = $MIOLO->GetActionURL('adm','main:licitacoes',$objLicitacao->idLicitacao,array('form'=>'itens','idi'=>'#6#_#10#'));

        parent::__construct($objLicitacao->GetItensRequisitados(), $columns, $href_grid,0);

        $this->SetTitle("Itens");
        $this->SetFilter(false);
        $this->SetIndex(1);
        $this->SetWidth('100%');
        $this->SetLinkType('hyperlink');
        $this->AddActionText('alt','Editar',$href_grid);
    }

    function GenerateFooter()
    {
        if (!$this->data) 
        $footer[] = $this->GenerateEmptyMsg();
        $footer[] = new Separator();
        $footer[] = $this->GenerateControls();
        return $footer;
    }
}
?>
