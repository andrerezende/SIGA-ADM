<?
/**
 * Grid 
 * Grid de uso geral para selecionar 
 * @package br.org.miolo.ufjf.rh.grids
 */
/**
 * Use Module Control
 */
global $MIOLO;
$MIOLO->Uses('controls/linkvaletransporte.class','adm');

class gridValeTransporte extends DataGrid2
{

    /**
     * Constructor
     */
    function __construct()
    {
        global $MIOLO, $self;

        $linkValeTransporte = new LinkValeTransporte('linkvaletransporte','%0%');
        $columns = array(
            new DataGridColumn('dataIni','Data Inicial','center', true,'30%'),			
            new DataGridColumn('dataFim','Data Final','center', true,'30%'),
            new DataGridColumn('valor','Valor','center', true,'30%'),
         );

        $this->SetFilter(false);
        $filter = Form::GetFormValue('valetransporte');
        $valeTransporte = empty($filter) ? '%' : $filter;
        $this->AddFilterText('valetransporte','Vale Transporte',$valeTransporte);
        $this->SetIndex(1);		
        $objValeTransporte = $MIOLO->GetBusiness('adm','valetransporte');
        $query = $objValeTransporte->ListAll();

	 	$href_grid = $MIOLO->GetActionURL('adm','main:valetransporte:edit','#0#');

        parent::__construct($query, $columns, $href_grid,25);
        $this->SetLinkType('hyperlink');
		$this->AddActionText('alt','Editar',$href_grid);

    }

    function GenerateFooter()
    {
        if (!$this->data) 
        $footer[] = $this->GenerateEmptyMsg();
        $footer[] = new Separator();
        $footer[] = $this->GenerateControls();
        return $footer;
    }

}

