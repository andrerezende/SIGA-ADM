global $MIOLO;
//$MIOLO->Uses('controls/linkendereco.class','adm');

class gridEndereco extends MDataGrid2 {

	public function  __construct() {
		global $MIOLO, $module, $page, $context, $self, $action, $perms, $state;

		$endereco = $MIOLO->GetBusiness('adm', 'endereco');
                
        // pega os campos do form para fazer a query
        $query = $endereco->listEndereco(
                MForm::GetFormValue('nomelocal'),
                MForm::GetFormValue('bairro'),
                MForm::GetFormValue('endereco'),
                MForm::GetFormValue('cep'),
                MForm::GetFormValue('cidade'),
                MForm::GetFormValue('estado')
                
        );

		$this->SetIndex(1);
    
        $hrefEndereco = $MIOLO->getActionURL('adm','main:endereco:edit','#0#' );

        $columns = array(
            new MDataGridHyperlink('idEndereco','ID', $hrefEndereco,'10%',true,null,true),
                new MDataGridColumn('nomelocal','Local','center',true,'10%'),
                new MDataGridColumn('bairro','Bairro','left',true,'11%'),
                new MDataGridColumn('endereco','Endereço','left',true,'18%'),
                new MDataGridColumn('numero','Número','left',true,'8%'),
                new MDataGridColumn('complemento','Complemento','left',true,'18%'),
                new MDataGridColumn('cep','Cep','right',true,'17%'),
                new MDataGridColumn('cidade','Cidade','left',true,'13%'),
                new MDataGridColumn('estado','Estado','center',true,'5%')
                     
            );

        // referencia a ele proprio
        $href_grid = $MIOLO->GetActionURL('adm', $self);

		parent::__construct($query, $columns, $href_grid, 25);
        $this->SetWidth('100%');
        $this->SetClose(null);
        $this->SetLinkType('hyperlink');
	}
}
