<?
/**
 * Grid Pagamento
 * Grid de uso geral para selecionar liquidacao
 * @package br.org.miolo.ufjf.rh.grids
 */
/**
 * Use Module Control
 */
global $MIOLO;
$MIOLO->Uses('controls/linkliquidacao.class','adm');

class gridPagamentoLiquidacao extends DataGrid2
{
    /**
     * Constructor
     */
    function __construct()
    {
        global $MIOLO, $self;

        $linkPagamentoLiquidacao = new LinkPagamentoLiquidacao('linkliquidacao','%0%');
        $columns = array(
            new DataGridControl($linkPagamentoLiquidacao,'dataLiquidacao','Data LiquidaÃ§Ã£o','left', true,'100%')
         );

        $this->SetFilter(false);
        $filter = Form::GetFormValue('liquidacao');
        $liquidacao = empty($filter) ? 'A Definir' : $filter;
        $this->AddFilterText('liquidacao','Liquidacao',$liquidacao);
        $this->SetIndex(1);
        $objLiquidacao = $MIOLO->GetBusiness('adm','liquidacao');
        $query = $objLiquidacao->ListByDataLiquidacao($liquidacao);

        $href_grid = $MIOLO->GetActionURL('adm',$self);

        parent::__construct($query, $columns, $href_grid,25);
        $this->SetLinkType('hyperlink');
    }

    function GenerateFooter()
    {
        if (!$this->data) 
        $footer[] = $this->GenerateEmptyMsg();
        $footer[] = new Separator();
        $footer[] = $this->GenerateControls();
        return $footer;
    }
}
