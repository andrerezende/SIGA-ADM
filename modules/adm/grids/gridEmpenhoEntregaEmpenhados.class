<?
global $MIOLO;
class gridEmpenhoEntregaEmpenhados extends MGrid
{
    function __construct($objEmpenho)
    {
        global $MIOLO, $page, $action;
        $objEmpenho->retrieveAssociation('empenhado');
        $cf = new MCurrencyFormatter();
        foreach ($objEmpenho->empenhado as $empenhado)
        {
            $dados[$empenhado->idEmpenhado][0] = $empenhado->idEmpenhado;
            $dados[$empenhado->idEmpenhado][1] = 'Entregar';
            $dados[$empenhado->idEmpenhado][2] = $empenhado->itemreq[0]->material->descricao;
            foreach ($empenhado->itemreq as $material)
            {
                $quantEntregue += $material->quantAutorizada;
            }
            $dados[$empenhado->idEmpenhado][3] = $empenhado->quantidadeEmp - $quantEntregue;
            $dados[$empenhado->idEmpenhado][4] = $cf->formatWithSymbol($cf->toDecimal($empenhado->valorEmp) - ($quantEntregue * $cf->toDecimal($empenhado->valorEmp) / $empenhado->quantidadeEmp));
        }
        $href = $MIOLO->getActionUrl('adm',$self,$objEmpenho->idEmpenho,array("form"=>"entrega","idEmpenhado"=>"#0#"));
        $columns = array(
            new MGridColumn('idEmpenhado','left',false,'',false),
            new MGridHyperlink('Ação',$href,'center',true,'10%'),
            new MGridColumn('Material','left',false,'54%'),
            new MGridColumn('Quantidade','center',true,'18%'),
            new MGridColumn('Valor','center',true,'18%'),
        );
        $this->SetFilter(false);
        parent::__construct($dados,$columns,$action,25);
        $this->SetLinkType('hyperlink');
    }
    function GenerateHeader()
    {
        return null;
    }
    function GenarateFooter()
    {
        return null;
    }
}

