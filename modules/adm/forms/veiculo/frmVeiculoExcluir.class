<?
/**
 * Formulário de exclusão veiculo
 */
class frmVeiculoExcluir extends Form
{
	/**
	 * Objeto veiculo
	 * @access protected
	 * 
	 */
	protected $objVeiculo;

    function __construct($objVeiculo)
    {
		$this->objVeiculo = $objVeiculo;
        parent::__construct('Excluir Veiculo');
        $this->EventHandler();
    }

    function CreateFields()
    {
		$action_sim = $this->manager->GetActionURL('adm','main:veiculo',$this->objVeiculo->placa,array('form'=>'excluir','conf'=>'sim'));
		$action_nao = $this->manager->GetActionURL('adm','main:veiculo',$this->objVeiculo->placa);

		$conf = $this->GetFormValue('conf');

		if ($conf == 'sim')
		{
                        $veiculoCrlv = $this->manager->getBusiness('adm','veiculocrlv');            
                        $Crvls = $veiculoCrlv->ListAllByPlaca($this->objVeiculo->placa);                        
                        for($i = 0;$i < count($Crvls->result); $i++){
                            try
                            {
                                $veiculoCrlv2 = $this->manager->getBusiness('adm','veiculocrlv');            
                                $veiculoCrlv2->getById($Crvls->result[$i][0]);
                                $veiculoCrlv2->delete();
                            }
                            catch (Exception $e)
                            {
				$this->manager->Error("teste".$e->getMessage,$this->manager->GetActionURL('adm','main:veiculo',$this->objVeiculo->placa));
                            }
                        }
			try
			{
				$this->objVeiculo->Delete();
				$this->objVeiculo->Log(OP_DEL,"Veículo excluído");
				$this->manager->Information('Veiculo excluído com sucesso',$this->manager->GetActionURL('adm','main:veiculo:find'));
			}
			catch (Exception $e)
			{
				$this->manager->Error("Informe o seguinte erro à equipe do CGCO: ".$e->getMessage,$this->manager->GetActionURL('adm','main:veiculo',$this->objVeiculo->placa));
			}
	   }
	   else
	   {
		   $this->manager->Question("Tem certeza que deseja excluir esse veiculo?",$action_sim,$action_nao);
		}
	   
    }


 }
?>
