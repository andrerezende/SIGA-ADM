<?
class frmClassificadorExcluir extends Form
{
	protected $objClassificador;

    function __construct($objClassificador)
    {
		$this->objClassificador = $objClassificador;
        parent::__construct('Excluir Classificador');
        $this->EventHandler();
    }

    function CreateFields()
    {
		$action_sim = $this->manager->GetActionURL('adm','main:classificador',$this->objClassificador->idClassificador,array('form'=>'excluir','conf'=>'sim'));
		$action_nao = $this->manager->GetActionURL('adm','main:classificador',$this->objClassificador->idClassificador);

		$conf = $this->GetFormValue('conf');

		if ($conf == 'sim')
		{
			try
			{
				$this->objClassificador->Delete();
				$this->objClassificador->Log(OP_DEL,"Classificador excluído");
				$this->manager->Information('Classificador excluído com sucesso',$this->manager->GetActionURL('adm','main:classificador:find'));
			}
			catch (Exception $e)
			{
				$this->manager->Error("Informe o seguinte erro à equipe do CGCO: ".$e->getMessage,$this->manager->GetActionURL('adm','main:classificador',$this->objClassificador->idClassificador));
			}
	   }
	   else
	   {
		   $this->manager->Question("Tem certeza que deseja excluir esse classificador?",$action_sim,$action_nao);
		}
    }

 }
?>
