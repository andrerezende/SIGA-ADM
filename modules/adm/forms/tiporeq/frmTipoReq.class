<?
/**
 * Form TipoReq
 */
class frmTipoReq extends CompoundForm
{
	public $oid;
    protected $tiporeq;
    /**
     * Construtor
     */
    function __construct($objTipoReq)
    {
        global $MIOLO;
        $this->tiporeq = $objTipoReq;
        parent::__construct();
        $this->SetClose($MIOLO->GetActionURL('adm','main:tiporeq:find'));
        $this->SetTitle($this->tiporeq->descricao);
        $this->SetIcon($MIOLO->GetUi()->GetImage('adm','default_mini.png'));
    }

    function CreateFields()
    {
        global $MIOLO, $page, $module, $context, $history;

        $tiporeq = $this->tiporeq;
        if ($this->oid == NULL) $this->oid = $tiporeq->idTipoReq;

// form
        $ui = $MIOLO->GetUI();
        $form = Form::GetFormValue('form');
        switch ($form)
        {
            case 'dados' : 
				$this->_form[0] = $ui->GetForm($module,'frmTipoReqDados', $tiporeq, 'tiporeq'); 
                break;
           case 'excluir'     : 
                 $this->_form[0] = $ui->GetForm($module,'frmTipoReqDel', $tiporeq, 'tiporeq'); 
                 break;
        }
        if ($this->_form[0])
        {
            $this->_form[0]->SetClose($MIOLO->GetActionURL('adm','main:tiporeq',$tiporeq->idTipoReq));
        	$page->SetAction($history->Top('action'));
        }
		

// panel        
        $action = $context->action;
        $this->_panel[0] = $panel = new ActionPanel('pnlCompound','Opções','',false);
        $panel->AddUserAction('ad_tiporeq_dados',A_EXECUTE,'Editar',$ui->GetImage('adm','edit.png'),'adm',$action, $this->oid, array("form"=>"dados"));
        $panel->AddUserAction('ad_tiporeq_excluir',A_EXECUTE,'Excluir',$ui->GetImage('adm','excluir.png'),'adm',$action, $this->oid, array("form"=>"excluir"));

// info
	}
}
?>
