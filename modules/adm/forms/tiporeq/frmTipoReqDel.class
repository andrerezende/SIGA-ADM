<?
/**
 * Formulário de exclusão de tipo de requisicao
 */
class frmTipoReqDel extends Form
{
	/**
	 * Objeto tiporeq
	 * @access protected
	 * @var BusinessRhTipoReq
	 */
	protected $objTipoReq;

    function __construct($objTipoReq)
    {
		$this->objTipoReq = $objTipoReq;
        parent::__construct('Excluir Tipo de Requisição');
        $this->EventHandler();
    }

    function CreateFields()
    {
		$action_sim = $this->manager->GetActionURL('adm','main:tiporeq',$this->objTipoReq->idTipoReq,array('form'=>'excluir','conf'=>'sim'));
		$action_nao = $this->manager->GetActionURL('adm','main:tiporeq',$this->objTipoReq->idTipoReq);

		$conf = $this->GetFormValue('conf');

		if ($conf == 'sim')
		{
			try
			{
				$this->objTipoReq->Delete();
				$this->objTipoReq->Log(OP_DEL,"Tipo de requisição excluído");
				$this->manager->Information('Tipo de Requisição excluído com sucesso',$this->manager->GetActionURL('adm','main:tiporeq:find'));
			}
			catch (Exception $e)
			{
				$this->manager->Error("Informe o seguinte erro à equipe do CGCO: ".$e->getMessage,$this->manager->GetActionURL('adm','main:tiporeq',$this->objTipoReq->idTipoReq));
			}
					
	   }
	   else
	   {
		   $this->manager->Question("Tem certeza que deseja excluir esse Tipo de Requisição?",$action_sim,$action_nao);
		}
	   
    }


 }
?>
