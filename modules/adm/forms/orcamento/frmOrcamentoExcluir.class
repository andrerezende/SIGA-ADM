<?
class frmOrcamentoExcluir extends Form
{
	protected $objOrcamento;

    function __construct($objOrcamento)
    {
		$this->objOrcamento = $objOrcamento;
        parent::__construct('Excluir Orçamento');
        $this->EventHandler();
    }

    function CreateFields()
    {
		$action_sim = $this->manager->GetActionURL('adm','main:orcamento',$this->objOrcamento->idOrcamento,array('form'=>'excluir','conf'=>'sim'));
		$action_nao = $this->manager->GetActionURL('adm','main:orcamento',$this->objOrcamento->idOrcamento);

		$conf = $this->GetFormValue('conf');

		if ($conf == 'sim')
		{
			try
			{
				$this->objOrcamento->Delete();
				$this->objOrcamento->Log(OP_DEL,"Orçamento excluído");
				$this->manager->Information('Orçamento excluído com sucesso',$this->manager->GetActionURL('adm','main:orcamento:find'));
			}
			catch (Exception $e)
			{
				$this->manager->Error("Informe o seguinte erro à equipe do CGCO: ".$e->getMessage,$this->manager->GetActionURL('adm','main:orcamento',$this->objOrcamento->idOrcamento));
			}
	   }
	   else
	   {
		   $this->manager->Question("Tem certeza que deseja excluir esse orçamento?",$action_sim,$action_nao);
		}
    }

 }
?>
