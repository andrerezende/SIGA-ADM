<?
class frmLicitacoesAbertas extends Form
{
	function __construct()
	{   
		parent::__construct('Relação de Licitações em andamento');
		$this->EventHandler();
	}

	function CreateFields()
	{
		global $MIOLO, $module, $action;
		
		$objLicitacao = $MIOLO->GetBusiness($module,'licitacao');
		$query = $objLicitacao->ListAbertas();
		$columns = array(
			new GridColumn('Código','center','','1%',false),
			new GridColumn('Número','center','','20%'),
			new GridColumn('Criação','center','','20%'),
			new GridColumn('Abertura','center','','20%'),
			new GridColumn('Status','center','','1',false),
			new GridColumn('Status','center','','40%'),
		);
		$datagrid = new Grid($query,$columns,$action,20);
		$this->AddField($datagrid);

		// botão voltar
		$buttons = Array(
			new FormButton('btnVoltar','Voltar',$MIOLO->GetActionURL($module,'sectionsCompras')),
		);
		$this->SetButtons($buttons);

	}
}
?>
