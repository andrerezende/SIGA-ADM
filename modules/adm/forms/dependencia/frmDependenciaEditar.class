<?
class frmDependenciaEditar extends Form
{
    protected $objDependencia;
	
    function __construct($objDependencia)
    {
        $this->objDependencia = $objDependencia;
        $this->Form('Dados da Dependência');
        $this->EventHandler();
    }

    function CreateFields()
    {
        global $MIOLO;
        $fields = array (
            new TextField('dependencia','','Descrição','50','Máx. 50 caracteres'),
            new MLookupTextField('setor','','Setor',50),
            new MHiddenField('idSetor'),
	);
        $this->SetFields($fields);
        $this->SetFieldAttr('setor','module','common');
        $this->SetFieldAttr('setor','item','setor');
        $this->SetFieldAttr('setor','related','idSetor,setor');
		
        $buttons = array (
            new FormButton('btnSalvar', 'Salvar')
        );
        $this->SetButtons($buttons);

        $validators = array (
            new RequiredValidator('dependencia'),
            new RequiredValidator('idSetor'),
        );
        $this->SetValidators($validators);
        $this->SetData();
    }

    function SetData()
    {
        $data = $this->objDependencia;
        $this->SetFieldValue('dependencia',strtoupper($data->dependencia));
        $this->SetFieldValue('idSetor',$data->idSetor);
        $this->SetFieldValue('setor',strtoupper($data->setor->siglasetor));
    }
	
    public function btnSalvar_click()
    {
        $this->objDependencia->SetData($this->GetData());
        try
        {
            $this->objDependencia->save();
            $this->objDependencia->Log(OP_UPD,"Dados de Dependencia modificados");
            $go = $this->manager->GetActionURL('adm','main:dependencia',$this->objDependencia->idDependencia);
            $this->manager->Information('Dependência alterada com sucesso',$go);
        }
	catch (Exception $e)
	{
            $this->addError($e->getMessage());
        }
    }
}
?>
