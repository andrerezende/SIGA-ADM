<?
global $MIOLO;
/**
 * Use Module Control
 */
$MIOLO->Uses('controls/linkdependencia.class','adm');

/**
 * Formulário básico para seleção de Dependencias
 * 
 */
class frmDependenciaFind extends Form
{
    function __construct()
    {
		global $MIOLO, $module;
        $this->Form('Pesquisar Dependências');
		$this->SetClose($MIOLO->GetActionURL($module,'main:manutencao'));
        $this->EventHandler();
    }

    function CreateFields()
    {
        global $MIOLO, $action;

		$ui = $MIOLO->GetUI();
        $grid = $ui->GetGrid('adm','gridDependencia');
        $grid->SetTitle(NULL);

        
        $lnkNew = new LinkDependencia('lnkNew', FALSE);
        $lnkNew->setNew();
        
        $findButton = new ButtonFind('');
        $findButton->SetName('btnFind');
        
        $fields = array(
            array(
                new Text('','Setor:'),
                new TextField('setor','','',25),
                new Text('','Descrição:'),
                new TextField('dependencia','','',25),
                $findButton,
                $lnkNew
            ),
            $grid
        );
        $this->SetFields($fields);
        $this->defaultButton = false;
    }
 }
?>
