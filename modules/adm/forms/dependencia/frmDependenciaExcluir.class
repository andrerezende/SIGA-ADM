<?
class frmDependenciaExcluir extends Form
{
	protected $objDependencia;

    function __construct($objDependencia)
    {
		$this->objDependencia = $objDependencia;
        parent::__construct('Excluir Dependência');
        $this->EventHandler();
    }

    function CreateFields()
    {
		$action_sim = $this->manager->GetActionURL('adm','main:dependencia',$this->objDependencia->idDependencia,array('form'=>'excluir','conf'=>'sim'));
		$action_nao = $this->manager->GetActionURL('adm','main:dependencia',$this->objDependencia->idDependencia);

		$conf = $this->GetFormValue('conf');

		if ($conf == 'sim')
		{
			try
			{
				$this->objDependencia->Delete();
				$this->objDependencia->Log(OP_DEL,"Dependencia excluída");
				$this->manager->Information('Dependencia excluída com sucesso',$this->manager->GetActionURL('adm','main:dependencia:find'));
			}
			catch (Exception $e)
			{
				$this->manager->Error("Informe o seguinte erro à equipe do CGCO: " . $e->getMessage, $this->manager->GetActionURL('adm','main:dependencia',$this->objDependencia->idDependencia));
			}
	   }
	   else
	   {
		   $this->manager->Question("Tem certeza que deseja excluir essa Dependência?", $action_sim,$action_nao);
		}
    }

 }
?>
