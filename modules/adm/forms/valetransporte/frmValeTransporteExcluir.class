<?
/**
 * Formulário de exclusão 
 */
class frmValeTransporteExcluir extends Form
{
	/**
	 * Objeto hotel
	 * @access protected
	 * 
	 */
	protected $objValeTransporte;

    function __construct($objValeTransporte)
    {
		$this->objValeTransporte = $objValeTransporte;
        parent::__construct('Excluir Valor');
        $this->EventHandler();
    }

    function CreateFields()
    {
		$action_sim = $this->manager->GetActionURL('adm','main:valetransporte',$this->objValeTransporte->dataIni,array('form'=>'excluir','conf'=>'sim'));
		$action_nao = $this->manager->GetActionURL('adm','main:valetransporte',$this->objValeTransporte->dataIni);

		$conf = $this->GetFormValue('conf');

		if ($conf == 'sim')
		{
			try
			{
				$this->objValeTransporte->Delete();
				$this->objValeTransporte->Log(OP_DEL,"Valor excluído");
				$this->manager->Information('Valor excluído com sucesso',$this->manager->GetActionURL('adm','main:valetransporte:find'));
			}
			catch (Exception $e)
			{
				$this->manager->Error("Informe o seguinte erro à equipe do CGCO: ".$e->getMessage,$this->manager->GetActionURL('adm','main:valetransporte',$this->objValeTransporte->dataIni));
			}
	   }
	   else
	   {
		   $this->manager->Question("Tem certeza que deseja excluir esse valor?",$action_sim,$action_nao);
		}
	   
    }


 }
?>
