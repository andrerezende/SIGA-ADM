<?php
/**
 * Form Vale Transporte
 */
class frmValeTransporte extends CompoundForm
{
	public $oid;
    protected $valetransporte;
    /**
     * Construtor
     */
    function __construct($objValeTransporte)
    {
      global $MIOLO;
      $this->valetransporte = $objValeTransporte;
      parent::__construct();
      $this->SetClose($MIOLO->GetActionURL('adm','main:valetransporte:find'));
      $this->SetTitle("De " . $this->valetransporte->dataIni . " a " . $this->valetransporte->dataFim);
      $this->SetIcon($MIOLO->GetUi()->GetImage('adm','default_mini.png'));
    }

    function CreateFields()
    {
        global $MIOLO, $page, $module, $context, $history;

        $valetransporte = $this->valetransporte;
        if ($this->oid == NULL) $this->oid = $valetransporte->dataIni;

// form
        $ui = $MIOLO->GetUI();
        $form = Form::GetFormValue('form');
        switch ($form)
        {
            case 'editar' : 
				$this->_form[0] = $ui->GetForm($module,'frmValeTransporteEditar', $valetransporte, 'valetransporte'); 
                break;
            case 'excluir': 
                 $this->_form[0] = $ui->GetForm($module,'frmValeTransporteExcluir', $valetransporte, 'valetransporte'); 
                 break;
        }
        if ($this->_form[0])
        {
            $this->_form[0]->SetClose($MIOLO->GetActionURL('adm','main:valetransporte',$uo->dataIni));
        	$page->SetAction($history->Top('action'));
        }
		
// info
		$this->_info[1]	= new TextLabel('txtDataIni',$this->valetransporte->dataIni,'Data Início');
		$this->_info[2]	= new TextLabel('txtDataFim',$this->valetransporte->dataFim,'Data Fim'); 
		$this->_info[3]	= new TextLabel('txtValor',$this->valetransporte->valor,'Valor');

// panel        
        $action = $context->action;
        $this->_panel[0] = $panel = new ActionPanel('pnlCompound','Opções','',false);
        $panel->AddUserAction('ad_valetransporte_editar',A_EXECUTE,'Editar',$ui->GetImage('adm','edit.png'),'adm',$action, $this->oid, array("form"=>"editar"));
        $panel->AddUserAction('ad_valetransporte_excluir',A_EXECUTE,'Excluir',$ui->GetImage('adm','excluir.png'),'adm',$action, $this->oid, array("form"=>"excluir"));
