<?
class frmServicoext extends MCompoundForm
{
    protected $oid;
    protected $servico;
    function __construct($objServico)
    {
        $this->servico = $objServico;
        parent::__construct();
        $this->SetTitle($this->Servico->nome);
        $this->SetIcon($this->manager->GetUi()->GetImage('adm','tools1.png'));
        $this->SetClose($this->manager->GetActionURL('adm','main:servicoext:find'));
    }
    function CreateFields()
    {
        global $MIOLO, $page, $module, $context, $action, $history;
        $servico = $this->servico;
        $ui = $this->manager->GetUI();
        $form = MForm::GetFormValue('form');
        switch ($form)
        {
            case 'dados' :
                    $this->_form[0] = $ui->GetForm($module,'frmServicoextDados',$servico,'servicoext');
                break;
            case 'excluir' :
                    $this->_form[0] = $ui->GetForm($module,'frmServicoextDel',$servico,'servicoext');
                break;
           
           }
           if ($this->_form[0])
           {
                $this->_form[0]->SetClose($this->manager->GetActionURL('adm','main:servicoext', $servico->idServico));
           }
// panel
           $action = $context->action;
           $this->_panel[0] = $panel = new MActionPanel('pnlCompound','Opções','',false);
           $panel->AddAction('Editar',$ui->GetImage('adm','edit.png'),'adm',$action,$servico->idServico,array("form"=>"dados"));
           $panel->AddAction('Excluir',$ui->GetImage('adm','excluir.png'),'adm',$action, $servico->idServico,array("form"=>"excluir"));
  
// info
           $this->_info[0] = new MTextLabel('txtNome',$servico->descricao,'Nome');
     }
}
?>
