<?
class frmServicoextFind extends MForm
{
	function __construct()
	{
		global $MIOLO, $module; //cria um objeto da classe Miolo e da classe Module (INSTANCIAS)
		parent::__construct('Pesquisar Serviço Externo');
		$this->SetClose($MIOLO->GetActionURL($module,'main'));
		$this->EventHandler();
	}
	function CreateFields()
	{
		global $MIOLO, $action;
		$ui = $MIOLO->GetUI();
		$grid = $ui->GetGrid('adm','gridServicoext');//instancia um grid e joga na tela
		$grid->SetTitle(NULL);
		$lnkNew = new MLink('lnkNew','&nbsp;','','Cadastrar Serviço');//instancia um link
		$lnkNew->SetAction('adm','servicoext:new');
		$findButton = new MButtonFind('');
		$findButton->SetName('btnFind');

		$idUsuario = $this->manager->GetLogin()->idkey;
		$perms = $this->manager->getPerms();

		if ($perms->checkAccess("adm_cadastroservico",A_ACCESS))
		{
			$fields = array(
				array(
					new MTextField('servicoext','','Serviço Externo',70),
					$findButton,
					$lnkNew
				),
				$grid,
			);
			//$this->SetFields($fields);
			//$this->defaultButton = false;
		}
		else
		{
			$fields = array(
				array(
					new MTextField('servicoext','','Serviço Externo',70),
					$findButton,
				),
				$grid,
			);
		}
		$this->SetFields($fields);
		$this->defaultButton = false;
	}
}
?>
