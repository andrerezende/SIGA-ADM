<?
global $MIOLO;
/**
 * Use Module Control
 */
$MIOLO->Uses('controls/linkptr.class','adm');

/**
 * Formulário básico para seleção de ptrs
 * 
 */
class frmPtrFind extends Form
{
    function __construct()
    {
		global $MIOLO, $module;
        $this->Form('Pesquisar PTRs');
		$this->SetClose($MIOLO->GetActionURL($module,'main:manutencao'));
        $this->EventHandler();
    }

    function CreateFields()
    {
        global $MIOLO, $action;

		$ui = $MIOLO->GetUI();
        $grid = $ui->GetGrid('adm','gridPtr');
        $grid->SetTitle(NULL);

        
        $lnkNew = new LinkPtr('lnkNew', FALSE);
        $lnkNew->setNew();
        
        $findButton = new ButtonFind('');
        $findButton->SetName('btnFind');
        
        $fields = array(
            array(
                new Text('','PTR:'),
                new TextField('ptr','','',15),
                $findButton,
                $lnkNew
            ),
            $grid
        );
        $this->SetFields($fields);
        $this->defaultButton = false;
    }
 }
?>
