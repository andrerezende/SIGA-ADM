<?
class frmMaterialDel extends MForm
{
    protected $objMaterial;
    function __construct($objMaterial)
    {
        $this->objMaterial = $objMaterial;
        parent::__construct('Excluir Material');
        $this->EventHandler();
    }

    function CreateFields()
    {
        global $MIOLO;
        $action_sim = $MIOLO->GetActionURL('adm','main:material',$this->objMaterial->idMaterial, array('form'=>'excluir','conf'=>'sim'));
        $action_nao = $MIOLO->GetActionURL('adm','main:material',$this->objMaterial->idMaterial);
        $conf = $this->GetFormValue('conf');
        if ($conf == 'sim')
        {
            try
            {
                $this->objMaterial->Delete();
                $MIOLO->Information('Material excluído com sucesso', $MIOLO->GetActionURL('adm','main:material:find'));
            }
            catch (Exception $e)
            {
                $MIOLO->Error($e->GetMessage(),$MIOLO->GetActionURL('adm','main:material', $this->objMaterial->idMaterial));
            }
        }
        else
        {
            $MIOLO->Question("Caso este material já fez parte de alguma licitação é aconselhado colocá-lo como inativo na opção de Editar.<br/><br/>Tem certeza que deseja excluir o material [ {$this->objMaterial->descricao} ]?",$action_sim,$action_nao);
        }
    }
}
?>
