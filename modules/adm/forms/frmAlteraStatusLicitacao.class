<?
class frmAlteraStatusLicitacao extends Form
{
	function __construct()	
	{
		parent::__construct('Alterar status das licitações');
		$this->EventHandler();
	}

	function CreateFields()
	{
		global $MIOLO, $module, $action;

		// instancia o objeto
		$objLicitacao = $MIOLO->GetBusiness($module,'licitacao');
		$list = $objLicitacao->ListAbertas();
		if (!$list)
			$list = array('Nenhuma Licitação Disponível');
	
		$fields = Array(
			new Separator('<b>Informe o número da Licitação:</b>'),
			new Selection('idlicitacao',10,'Número',$list),
			new Separator(),
			new TextLabel('','LEMBRE-SE!'),
			new TextLabel('','Esta opção só deve ser usada para voltar operações nas licitações.'),		
		);
		$this->SetFields($fields);

		$buttons = Array(
	        	new FormButton('btnPost','Abrir Licitação'),
	        	new FormButton('btnAlteraStatus','Alterar Status'),
			new FormButton('btnVoltar','Voltar',$MIOLO->GetActionURL($module,'sectionsCompras'))
		);
		// cria os botões
		$this->SetButtons($buttons);
		$this->SetButtonAttr('btnAlteraStatus','visible',false);
	}


	/*------------------------------------------------

	btnPost_click()
	
	------------------------------------------------*/
	function btnPost_click()	
	{
		global $MIOLO, $module,$item, $page, $theme, $action;
	
		$idlicitacao = $this->GetFormValue('idlicitacao');
		$objLicitacao = $MIOLO->GetBusiness($module,'licitacao');
		
		$queryStatus = $objLicitacao->ListAllStatus();
		
		$objLicitacao->GetById($idlicitacao);

		$fields = Array(
			new Separator('<b>Dados da Licitação:</b>'),			
			new TextLabel('numero',$objLicitacao->numero,'Número'),
			new TextLabel('dataCriacao',$objLicitacao->dataCriacao,'Data Criação'),
			new TextLabel('dataAbertura',$objLicitacao->dataAbertura,'Data Abertura'),
			new Selection('status',$objLicitacao->status,'Status',$queryStatus),
			new HiddenField('item',$idlicitacao)
		);
		$this->SetFields($fields);
		$this->SetButtonAttr('btnAlteraStatus','visible',true);
		$this->SetButtonAttr('btnPost','visible',false);
	}

	/*------------------------------------------------

	btnAlteraStatus_click()
	
	------------------------------------------------*/
	function btnAlteraStatus_click()	
	{
		global $MIOLO, $module,$item;

		$status = $this->GetFormValue('status');		
		$objLicitacao = $MIOLO->GetBusiness($module,'licitacao');
		$objLicitacao->GetById($item);
		if ($objLicitacao->SetStatus($status))
		{	
			$action = $MIOLO->GetActionURL($module, 'sectionsCompras', '','');
			$MIOLO->Information('Status da Licitação alterado com sucesso.',$action);
		}
	}
}
?>
