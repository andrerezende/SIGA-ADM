<?
//Lista por descricao
class frmListarDescricao extends MForm
{
	private $radioOpcoesEscolha;

	function __construct()
    {
       parent::__construct();
       $this->EventHandler();            
    }

    function CreateFields()    
    {
       global $MIOLO, $action;
       $ui = $MIOLO->GetUI();
	   
	   $grid = $ui->GetGrid('adm','gridDescricao');
       $grid->SetTitle(NULL);
	   
	   $findButton = new ButtonFind('');
       
       $this->SetTitle('Licitações por Descricao do material ou serviço: ');

       $this->defaultButton = false;

	   $tipo = Array (	7 => "Compra Consumo",
						6 => "Compra Permanente",
						10 => "Biblioteca",
						9 => "Serviço Externo");
	   
       $findButton = new ButtonFind('');
       $findButton->SetName('btnFind');

       $fields = array
	   (
            array(
    			new TextField('descricao','','Descrição','50'),
				new TextField('codmaterial','','Código do Material','20'),
				new Selection('tipo','','Tipo',$tipo),
				new MCalendarField('dataabertura','','Data','10'),
				$findButton,
                ),
	       		new MSpacer(1),
				$grid
	  );
                    
       $this->SetFields($fields); 
    }  
}
?>
