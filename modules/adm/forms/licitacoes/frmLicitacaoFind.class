<?
global $MIOLO;
/**
 * Use Module Control
 */
$MIOLO->Uses('controls/linklicitacao.class','adm');

/**
 * Formulário básico para seleção de Hotéis
 * 
 */
class frmLicitacaoFind extends Form
{
    function __construct()
    {
		global $MIOLO, $module;
		
        $this->Form('Pesquisar Licitações');
		$this->SetClose($MIOLO->GetActionURL($module,'main:mantutencao'));
        $this->EventHandler();
    }

    function CreateFields()
    {
        global $MIOLO, $action;

        $ui = $MIOLO->GetUI();
        $grid = $ui->GetGrid('adm','gridLicitacao');
        $grid->SetTitle("Licitações em Andamento");
        
        $grid2 = $ui->GetGrid('adm','gridItensALicitar');
        $grid2->SetTitle("Itens a Licitar");
        
        $lnkNew = new LinkLicitacao('lnkNew', FALSE);
        $lnkNew->setNew();
        
        $findButton = new ButtonFind('');
        $findButton->SetName('btnFind');
        
        $fields = array(
            array(
                new Text('','Licitação:'),                
                new TextField('licitacao','','',15),
                $findButton,
                $lnkNew
            ),
		    $grid2,
            $grid,
        );
        $this->SetFields($fields);
        $this->defaultButton = false;
    }
    
    
    
    function btnDeleteItemReq_click($idReq)
    {
    	var_dump($idReq);
    }
    
    
 }
?>
