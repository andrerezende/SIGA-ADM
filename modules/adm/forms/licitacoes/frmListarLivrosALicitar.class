<?
$MIOLO->Uses('controls/linklicitacao.class','adm');

class frmListarLivrosALicitar extends MForm
{
	private $radioOpcoesEscolha;

	function __construct()
    {
       parent::__construct();
       $this->EventHandler();
     
    }

    function CreateFields()    
    {
        global $MIOLO, $action;

        $ui = $MIOLO->GetUI();       
             
        $this->radioOpcoesEscolha = $this->GetFormValue('radioOpcoes');

        if (!$this->radioOpcoesEscolha)
       	    $this->radioOpcoesEscolha = "Todos";
       
        $this->SetTitle('Licitações concluídas: ' . $this->radioOpcoesEscolha);

        $this->defaultButton = false;
        
        $lnkNew3 = new LinkLicitacao('lnkNew', FALSE);
        $lnkNew3->setNew("LIVRO");       
       
        $fields = array
        (
            new MSpacer(1),
            $ui->GetGrid('adm','gridLivrosALicitar',$this->radioOpcoesEscolha),
            $lnkNew3,
            new MSpacer(1)
        );
                    
        $this->SetFields($fields); 
    }
}
?>
