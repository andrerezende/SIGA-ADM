<?
class frmLicitacaoTermRef extends MForm
{
    protected $licitacao;
    protected $mapa;

	function __construct($licitacao)
	{
	        $this->licitacao = $licitacao;
		parent::__construct('Imprimir Termo de ReferÃªncia');
	        $this->mapa = $this->manager->getBusiness('adm','mapalicitacao');
		$this->eventHandler();
	}
	function createFields()
	{
		$this->addButton(new MButton('btnReportTermo','Exibir Termo','pdf'));
	}

	function btnReportTermo_click()
	{
		global $MIOLO;
		$report = new MJasperReport('sigaept');
		$parameters['int_idlicitacao']   = $this->licitacao->idLicitacao;
		$parameters['SUBREPORT_DIR'] = $MIOLO->GetConf('home.modules');
		$parameters['pURL']          = $MIOLO->GetConf('home.url');
		$parameters['int_pIdUsuario']    = $MIOLO->login->idkey;
		if ($this->licitacao->idTipoLicitacao == 3){
			$report->Execute('adm', 'RelTermoLivros', $parameters);
		}else{
			$report->Execute('adm', 'RelTermo', $parameters);
		}
	        
	}
}
?>
