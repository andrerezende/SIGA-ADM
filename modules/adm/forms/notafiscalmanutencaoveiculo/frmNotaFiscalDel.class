<?
class frmNotaFiscalDel extends Form
{
	protected $objNF;

    function __construct($objNF)
    {
		$this->objNF = $objNF;
        parent::__construct('Excluir Nota Fiscal');
        $this->EventHandler();
    }

    function CreateFields()
    {

		if ($this->objNF->getManutencoes())
		{
			$this->manager->Information("A nota fiscal ".$this->objNF->idNotaFiscal." não pode ser excluida pois há manutenções vinculadas a esta nota",$this->manager->GetActionURL('adm','main:notafiscalmanutencaoveiculo:find'));
			
		}
		else
		{
			$action_sim = $this->manager->GetActionURL('adm','main:notafiscalmanutencaoveiculo',$this->objNF->idNotaFiscal,array('form'=>'excluir','conf'=>'sim'));
			$action_nao = $this->manager->GetActionURL('adm','main:notafiscalmanutencaoveiculo',$this->objNF->idNotaFiscal);

			$conf = $this->GetFormValue('conf');

			if ($conf == 'sim')
			{
				try
				{
					$this->objNF->Delete();
					$this->objNF->Log(OP_DEL,"Nota Fiscal excluída");
					$this->manager->Information('Nota excluída com sucesso',$this->manager->GetActionURL('adm','main:notafiscalmanutencaoveiculo:find'));
				}
				catch (Exception $e)
				{
					$this->manager->Error("Esta nota não pôde ser excluída",$this->manager->GetActionURL('adm','main:notafiscalmanutencaoveiculo',$this->objNF->idNotaFiscal));
				}
					
	        }
		   	else
	   		{	
		   		$this->manager->Question("Tem certeza que deseja excluir essa Nota?",$action_sim,$action_nao);
			}
	   
   		}
	}
}
?>
