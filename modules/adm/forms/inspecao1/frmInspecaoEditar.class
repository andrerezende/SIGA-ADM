<?
class frmInspecaoEditar extends Form
{
    protected $objUnidade;
    public $id;
	
    function __construct($objUnidade)
    {
        $this->objUnidade = $objUnidade;
        $this->Form('Dados da Unidade');
        $this->EventHandler();
    }

    function CreateFields()
    {
        global $MIOLO;
        $fields = array (
            new TextField('sigla','','Sigla','10','Máx. 10 caracteres'),
            new TextField('descricao','','Descrição','50','Máx. 50 caracteres'),
	);
	$this->SetFields($fields);	
        
        $buttons = array (
            new FormButton('btnSalvar', 'Salvar')
        );
        $this->SetButtons($buttons);

        $validators = array (
            new RequiredValidator('sigla'),
            new RequiredValidator('descricao'),
        );
        $this->SetValidators($validators);
        $this->SetData();
    }

    function SetData()
    {
        $data = $this->objUnidade;
        $this->SetFieldValue('sigla',$data->sigla);
        $this->SetFieldValue('descricao',$data->descricao);
    }
	
    public function btnSalvar_click()
    {
        $this->objUnidade->SetData($this->GetData());
        try
        {
            $this->objUnidade->save();
            $this->objUnidade->Log(OP_UPD,"Dados da Unidade modificados");
            $go = $this->manager->GetActionURL('adm','main:unidade',$this->objUnidade->sigla);
            $this->manager->Information('Unidade alterada com sucesso',$go);
        }
	catch (Exception $e)
	{
            $this->addError($e->getMessage());
        }
    }
}
?>
