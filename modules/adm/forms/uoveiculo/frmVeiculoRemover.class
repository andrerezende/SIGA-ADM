<?
/**
 * Formulário de exclusão veiculo
 */
class frmVeiculoRemover extends Form
{
	/**
	 * Objeto veiculo
	 * @access protected
	 * 
	 */
	protected $objVeiculo;

    function __construct($objVeiculo)
    {
		$this->objVeiculo = $objVeiculo;
        parent::__construct('Remover Veiculo da U.O.');
        $this->EventHandler();
    }

    function CreateFields()
    {
		$action_sim = $this->manager->GetActionURL('adm','main:veiculo1',$this->objVeiculo->placa,array('form'=>'remover','conf'=>'sim'));
		$action_nao = $this->manager->GetActionURL('adm','main:veiculo1',$this->objVeiculo->placa);

		$conf = $this->GetFormValue('conf');

		if ($conf == 'sim')
		{   
                       
			try
			{
				$this->objVeiculo->Delete();
				$this->objVeiculo->Log(OP_DEL,"Veículo excluído");
				$this->manager->Information('Veiculo excluído com sucesso',$this->manager->GetActionURL('adm','main:veiculo:find'));
			}
			catch (Exception $e)
			{
				$this->manager->Error("Informe o seguinte erro à equipe do CGCO: ".$e->getMessage,$this->manager->GetActionURL('adm','main:veiculo',$this->objVeiculo->placa));
			}
	   }
	   else
	   {
		   $this->manager->Question("Tem certeza que deseja remover o veiculo da U.O.?",$action_sim,$action_nao);
		}
	   
    }


 }
?>
