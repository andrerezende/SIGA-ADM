<?
/**
 * Formulário de exclusão motorista
 */
class frmMotoristaRemover extends Form
{
	/**
	 * Objeto motorista
	 * @access protected
	 * 
	 */
	protected $objMotorista;

    function __construct($objMotorista)
    {
		$this->objMotorista = $objMotorista;
        parent::__construct('Excluir Motorista U.O.');
        $this->EventHandler();
    }

    function CreateFields()
    {
                global $MIOLO;
                $session = $MIOLO->getSession();
                $itemUo = $session->getValue('itemuom');
		$action_sim = $this->manager->GetActionURL('adm','main:motorista1',$this->objMotorista->idMotorista,array('form'=>'excluir','conf'=>'sim'));
		$action_nao = $this->manager->GetActionURL('adm','main:motorista1',$this->objMotorista->idMotorista);

		$conf = $this->GetFormValue('conf');

		if ($conf == 'sim')
		{
			try
			{
                                
				$this->objMotorista->Delete();
				$this->objMotorista->Log(OP_DEL,"Motorista excluído");
                                $session->setValue('itemuom','');
				$this->manager->Information('Motorista excluído com sucesso',$this->manager->GetActionURL('adm','main:uoveiculo',$itemUo));
                                
			}
			catch (Exception $e)
			{
				$this->manager->Error("Informe o seguinte erro à equipe do CGCO: ".$e->getMessage,$this->manager->GetActionURL('adm','main:motorista1',$this->objMotorista->idMotorista));
			}
	   }
	   else
	   {
		   $this->manager->Question("Tem certeza que deseja excluir esse motorista?",$action_sim,$action_nao);
		}
	   
    }


 }
?>
