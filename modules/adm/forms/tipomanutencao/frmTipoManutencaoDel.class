<?
class frmTipoManutencaoDel extends Form
{
	protected $objTipoManutencao;

    function __construct($objTipoManutencao)
    {
		$this->objTipoManutencao = $objTipoManutencao;
        parent::__construct('Excluir Tipo de Manutencao');
        $this->EventHandler();
    }

    function CreateFields()
    {
		$action_sim = $this->manager->GetActionURL('adm','main:tipomanutencao',$this->objTipoManutencao->idTipoManutencao,array('form'=>'excluir','conf'=>'sim'));
		$action_nao = $this->manager->GetActionURL('adm','main:tipomanutencao',$this->objTipoManutencao->idTipoManutencao);

		$conf = $this->GetFormValue('conf');

		if ($conf == 'sim')
		{
			try
			{
				$this->objTipoManutencao->Delete();
				$this->objTipoManutencao->Log(OP_DEL,"Tipo de manutenção excluído");
				$this->manager->Information('Tipo de manutenção excluído com sucesso',$this->manager->GetActionURL('adm','main:tipomanutencao:find'));
			}
			catch (Exception $e)
			{
				$this->manager->Error("Este tipo de manutencao não pôde ser excluído",$this->manager->GetActionURL('adm','main:tipomanutencao',$this->objTipoManutencao->idTipoManutencao));
			}
					
	   }
	   else
	   {
		   $this->manager->Question("Tem certeza que deseja excluir esse Tipo de Manutencao?",$action_sim,$action_nao);
		}
	   
    }


 }
?>
