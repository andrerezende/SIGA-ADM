<?
/**
 * Form Fonte
 */
class frmFonte extends CompoundForm
{
	public $oid;
    protected $fonte;
    /**
     * Construtor
     */
    function __construct($objFonte)
    {
      global $MIOLO;
      $this->fonte = $objFonte;
      parent::__construct();
      $this->SetClose($MIOLO->GetActionURL('adm','main:fonte:find'));
      $this->SetTitle($this->fonte->idFonte);
      $this->SetIcon($MIOLO->GetUi()->GetImage('adm','default_mini.png'));
    }

    function CreateFields()
    {
        global $MIOLO, $page, $module, $context, $history;

        $fonte = $this->fonte;
        if ($this->oid == NULL) $this->oid = $fonte->idFonte;

// form
        $ui = $MIOLO->GetUI();
        $form = Form::GetFormValue('form');
        switch ($form)
        {
            case 'editar' : 
				$this->_form[0] = $ui->GetForm($module,'frmFonteEditar', $fonte, 'fonte'); 
                break;
            case 'excluir'     : 
                 $this->_form[0] = $ui->GetForm($module,'frmFonteExcluir', $fonte, 'fonte'); 
                 break;
        }
        if ($this->_form[0])
        {
            $this->_form[0]->SetClose($MIOLO->GetActionURL('adm','main:fonte',$fonte->idFonte));
        	$page->SetAction($history->Top('action'));
        }
		
// info
		$this->_info[1]	= new TextLabel('txtNome',$this->fonte->descricao,'Nome');

// panel        
        $action = $context->action;
        $this->_panel[0] = $panel = new ActionPanel('pnlCompound','Opções','',false);
        $panel->AddUserAction('ad_fonte_editar',A_EXECUTE,'Editar',$ui->GetImage('adm','edit.png'),'adm',$action, $this->oid, array("form"=>"editar"));
        $panel->AddUserAction('ad_fonte_excluir',A_EXECUTE,'Excluir',$ui->GetImage('adm','excluir.png'),'adm',$action, $this->oid, array("form"=>"excluir"));
 	}
}
?>
