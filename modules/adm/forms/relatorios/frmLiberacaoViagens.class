<?
class frmLiberacaoViagens extends Form
{
   function __construct()
   {
 	  global $MIOLO, $module, $self;
 	  $this->Form('Liberação de Viagens');
 	  $this->EventHandler();
   }

   function CreateFields()
   {
      global $MIOLO,$module,$self, $action, $auth;
	  $buttons = array
      (
	     new FormButton('btnPost', 'Gerar Relatório', 'PDF'),
  	     new FormButton('btnCSV', 'Gerar Planilha'),
	  );
      $this->SetButtons($buttons);
   }

   function btnPost_click()
   {
		global $MIOLO, $module, $item;

		$report = new MJasperReport('sigaept');

		$parameters['SUBREPORT_DIR']	= $MIOLO->GetConf('home.modules');
       	$parameters['int_pIdUsuario']	= $MIOLO->login->idkey;
       	$parameters['pURL']		= $MIOLO->GetConf('home.url');

       	$report->Execute('adm', 'LiberaViagens', $parameters);
   }
   function btnCSV_click()
   {
	   global $module;
		
	   $veiculo = $this->manager->getBusiness($module,'itemveiculo');
	   
	   $saidas = $veiculo->ListAllViagensLiberadasOrigem()->result;
	   $chegadas = $veiculo->ListAllViagensLiberadasDestino()->result;
	   $consulta = $veiculo->ListAllViagensLiberadasDestino();
	   $dataRel[] = array('DATA/HORA','NOME DO MOTORISTA','PLACA DO VEÍCULO','DESTINO');
	   foreach ($saidas as $indice => $saida)
	   {
			if ($saida[3] == "JUIZ DE FORA")
	    	{
	    		$saidas[$indice][3] = $chegadas[$indice][3];
	   	   	}
	    }
   
	    $dataRel[] = $saidas;
		$consulta->result = $dataRel;
		$consulta->getCSV("Liberação de viagens");
   }
}
?>
