<?
class frmRepHistoricoItem extends MForm
{
    function __construct()
    {
        parent::__construct('Relatório de Histórico do Item');
        $this->EventHandler();
		$this->defaultButton = false;
    }

	function CreateFields()
    {
		global $MIOLO, $module, $action, $item, $theme;

		$fields = array(
			new MLookupTextField('licitacao', '', 'Número da Licitação', 20),
			new MTextField('numItem', '', 'Item', 5),
		);
		$this->SetFields($fields);
		$this->SetFieldAttr('licitacao','module',$module);
		$this->SetFieldAttr('licitacao','item','licitacao');
		$this->SetFieldAttr('licitacao','event','filler');
		$this->SetFieldAttr('licitacao','related', '"",licitacao');

		$buttons = array(
			new MButton('btnPost','Gerar Relatório','PDF'),
		);
		$this->SetButtons($buttons);
	}

    function btnPost_click()
    {

                global $MIOLO, 
		       $module, 
		       $item;

		$licitacao = $this->getFieldValue('licitacao');
                $numItem = $this->getFieldValue('numItem');

		/*Caso o usuário não preencha o campo 'licitacao'*/
		if($licitacao == '')
		{
		   $MIOLO->Error('Você deve selecionar uma licitação!',$self);
		}

		/*
		Se o campo 'numItem' estiver vazio,
		supõe-se que o usuário quer listar o histórico
		de todos os itens da licitação.
		*/
		if($numItem == '')
		{
		   $numItem = "%%%";
		}

                $report = new MJasperReport('sigaept');
		$parameters['str_IDLICITACAO'] = $licitacao;
		$parameters['SUBREPORT_DIR'] = $MIOLO->GetConf('home.modules').'/common/reports/';
		$parameters['pURL'] = $MIOLO->GetConf('home.url');
		$parameters['pTitulo'] = "HISTORICO DO ITEM";
		$parameters['int_pConsulta'] = $MIOLO->login->idkey;                
		$parameters['str_ITEM'] = $numItem;
		$report->Execute('adm', 'HistoricoItem', $parameters);
		
	}
}
?>
