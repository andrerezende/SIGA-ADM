<?
class frmNovoMaterialDel extends MForm
{
    protected $objMaterial;
    function __construct($objMaterial)
    {
        $this->objMaterial = $objMaterial;
        parent::__construct('Excluir Novo Material');
        $this->EventHandler();
    }
    function CreateFields()
    {
        $action_sim = $this->manager->GetActionURL('adm','main:novomaterial',$this->objMaterial->idNovoMaterial, array('form'=>'excluir','conf'=>'sim'));
        $action_nao = $this->manager->GetActionURL('adm','main:novomaterial:find');
        $conf = $this->GetFormValue('conf');
        if ($conf == 'sim')
        {
            try
            {
                $this->objMaterial->setStatus(4);
                $this->objMaterial->save();
                $this->objMaterial->Log(OP_UPD,'Novo material cancelado ['.$this->objMaterial->idNovoMaterial.']');
                $this->manager->Information('Novo material cancelado com sucesso',$this->manager->GetActionURL('adm','main:novomaterial:find'));
            }
            catch (Exception $e)
            {
                $this->manager->Error($e->GetMessage(),$this->manager->GetActionURL('adm','main:novomaterial', $this->objMaterial->idNovoMaterial));
            }
        }
        else
        {
               $this->manager->Question("Tem certeza que deseja cancelar a sugestÃ£o de material [".$this->objMaterial->idNovoMaterial."]?",$action_sim,$action_nao);
        }
    }
 }
?>
