<?
class frmServInternoExcluir extends Form
{
	protected $objServInterno;

	function __construct($objServInterno)
	{
		$this->objServInterno = $objServInterno;
		parent::__construct('Excluir Tipo de Serviço Interno');
		$this->EventHandler();
	}

	function CreateFields()
	{
		$action_sim = $this->manager->GetActionURL('adm','main:servInterno',$this->objServInterno->idTipoServInt,array('form'=>'excluir','conf'=>'sim'));
		$action_nao = $this->manager->GetActionURL('adm','main:servInterno',$this->objServInterno->idTipoServInt);

		$conf = $this->GetFormValue('conf');

		if ($conf == 'sim')
		{
			try
			{
				$this->objServInterno->DeleteExecutores();
				$this->objServInterno->Delete();
				$this->objServInterno->Log(OP_DEL,"Tipo de serviço interno excluído");
				$this->manager->Information('Tipo de serviço interno excluído com sucesso',$this->manager->GetActionURL('adm','main:servInterno:find'));
			}
			catch (Exception $e)
			{
				$this->manager->Error("Informe o seguinte erro à equipe do CGCO: ".$e->getMessage,$this->manager->GetActionURL('adm','main:servInterno',$this->objServInterno->idTipoServInterno));
			}
		}
		else
		{
		   $this->manager->Question("Tem certeza que deseja excluir esse tipo de serviço interno?",$action_sim,$action_nao);
		}
	   
	}


}
?>
