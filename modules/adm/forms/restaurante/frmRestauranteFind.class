<?
global $MIOLO;
/**
 * Use Module Control
 */
$MIOLO->Uses('controls/linkrestaurante.class','adm');

/**
 * Formulário básico para seleção de uos
 * 
 */
class frmRestauranteFind extends Form
{
    function __construct()
    {
		global $MIOLO, $module;
		
        $this->Form('Pesquisar Restaurantes');
		$this->SetClose($MIOLO->GetActionURL($module,'main:mantutencao'));
        $this->EventHandler();
    }

    function CreateFields()
    {
        global $MIOLO, $action;

	$ui = $MIOLO->GetUI();
        $grid = $ui->GetGrid('adm','gridRestaurante');
        $grid->SetTitle(NULL);

        
        $lnkNew = new LinkRestaurante('lnkNew', FALSE);
        $lnkNew->setNew();
        
        $findButton = new ButtonFind('');
        $findButton->SetName('btnFind');
        
        $fields = array(
            array(
                new Text('','Restaurante:'),
                new TextField('restaurante','','',15),
                $findButton,
                $lnkNew
            ),
            $grid
        );
        $this->SetFields($fields);
        $this->defaultButton = false;
    }
 }
?>
