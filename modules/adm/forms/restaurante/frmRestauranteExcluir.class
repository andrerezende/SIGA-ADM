<?
/**
 * Formulário de exclusão restaurante
 */
class frmRestauranteExcluir extends Form
{
	/**
	 * Objeto restaurante
	 * @access protected
	 * 
	 */
	protected $objRestaurante;

    function __construct($objRestaurante)
    {
		$this->objRestaurante = $objRestaurante;
        parent::__construct('Excluir Restaurante');
        $this->EventHandler();
    }

    function CreateFields()
    {
		$action_sim = $this->manager->GetActionURL('adm','main:restaurante',$this->objRestaurante->idRestaurante,array('form'=>'excluir','conf'=>'sim'));
		$action_nao = $this->manager->GetActionURL('adm','main:restaurante',$this->objRestaurante->idRestaurante);

		$conf = $this->GetFormValue('conf');

		if ($conf == 'sim')
		{
			try
			{
				$this->objRestaurante->Delete();
				$this->objRestaurante->Log(OP_DEL,"Restaurante excluído");
				$this->manager->Information('Restaurante excluído com sucesso',$this->manager->GetActionURL('adm','main:restaurante:find'));
			}
			catch (Exception $e)
			{
				$this->manager->Error("Informe o seguinte erro à equipe do CGCO: ".$e->getMessage,$this->manager->GetActionURL('adm','main:restaurante',$this->objRestaurante->idRestaurante));
			}
	   }
	   else
	   {
		   $this->manager->Question("Tem certeza que deseja excluir esse restaurante?",$action_sim,$action_nao);
		}
	   
    }


 }
?>
