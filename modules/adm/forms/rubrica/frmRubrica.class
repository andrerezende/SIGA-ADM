<?php
/**
 * Form Rubrica
 */
class frmRubrica extends CompoundForm
{
    public $oid;
    protected $rubrica;
    /**
     * Construtor
     */
    function __construct($objRubrica)
    {
        global $MIOLO;
        $this->rubrica = $objRubrica;
        parent::__construct();
        $this->SetClose($MIOLO->GetActionURL('adm','main:rubrica:find'));
        $this->SetTitle($this->rubrica->descricao);
        $this->SetIcon($MIOLO->GetUi()->GetImage('adm','default_mini.png'));
    }

    function CreateFields()
    {
        global $MIOLO, $page, $module, $context, $history;

        $rubrica = $this->rubrica;
        if ($this->oid == NULL) $this->oid = $rubrica->idRubrica;

// form
        $ui = $MIOLO->GetUI();
        $form = Form::GetFormValue('form');
        switch ($form)
        {
            case 'editar' : 
                $this->_form[0] = $ui->GetForm($module,'frmRubricaEditar', $rubrica, 'rubrica'); 
                break;
            case 'excluir'     : 
                $this->_form[0] = $ui->GetForm($module,'frmRubricaExcluir', $rubrica, 'rubrica'); 
                break;
            case 'tiporeqs':
                $rubrica->getTipoReqs();
                if ( ($id = $this->getFormValue('id')) != NULL )
                {
					$reqrubrica = $MIOLO->GetBusiness('adm','reqrubrica');
                    $reqrubrica->deleteTipoReq($id,$rubrica->idRubrica);
                   // $rubrica->deleteTipoReq($id);
                    $rubrica->getTipoReqs();
                }
				
                $this->_form[] = $ui->GetForm($module,'frmRubricaTipoReqs',$rubrica,'rubrica');
                $page->SetAction($history->Top('action'));
                array_unshift($this->_form, $ui->GetGrid($module,'gridRubricaTipoReqs', $rubrica));
                break;                   
        }
        if ($this->_form[0])
        {
            $this->_form[0]->SetClose($MIOLO->GetActionURL('adm','main:rubrica',$rubrica->idRubrica));
            $page->SetAction($history->Top('action'));
        }
		
// info
        $this->_info[1]	= new TextLabel('txtDescricao',$this->rubrica->descricao,'Descricao');

// panel        
        $action = $context->action;
        $this->_panel[0] = $panel = new ActionPanel('pnlCompound','Opções','',false);
        $panel->AddUserAction('ad_rubrica_editar',A_EXECUTE,'Editar',$ui->GetImageTheme('','icons/editar.png'),'adm',$action, $this->oid, array("form"=>"editar"));
        $panel->AddUserAction('ad_rubrica_excluir',A_EXECUTE,'Excluir',$ui->GetImageTheme('','icons/excluir.png'),'adm',$action, $this->oid, array("form"=>"excluir"));
        $panel->AddUserAction('ad_rubrica_tiporeq',A_EXECUTE,'Tipo Req.',$ui->GetImageTheme('','icons/tipo_requisicao.png'),'adm',$action, $this->oid, array("form"=>"tiporeqs"));
    }
}
?>
