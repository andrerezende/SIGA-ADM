<?
class frmRubricaExcluir extends Form
{
	protected $objRubrica;

    function __construct($objRubrica)
    {
		$this->objRubrica = $objRubrica;
        parent::__construct('Excluir Rubrica');
        $this->EventHandler();
    }

    function CreateFields()
    {
		$action_sim = $this->manager->GetActionURL('adm','main:rubrica',$this->objRubrica->idRubrica,array('form'=>'excluir','conf'=>'sim'));
		$action_nao = $this->manager->GetActionURL('adm','main:rubrica',$this->objRubrica->idRubrica);

		$conf = $this->GetFormValue('conf');

		if ($conf == 'sim')
		{
			try
			{
				$this->objRubrica->Delete();
				$this->objRubrica->Log(OP_DEL,"Rubrica excluída");
				$this->manager->Information('Rubrica excluída com sucesso',$this->manager->GetActionURL('adm','main:rubrica:find'));
			}
			catch (Exception $e)
			{
				$this->manager->Error("Informe o seguinte erro à equipe do CGCO: ".$e->getMessage,$this->manager->GetActionURL('adm','main:rubrica',$this->objRubrica->idRubrica));
			}
	   }
	   else
	   {
		   $this->manager->Question("Tem certeza que deseja excluir essa Rubrica?",$action_sim,$action_nao);
		}
    }

 }
?>
