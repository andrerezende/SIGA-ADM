<?
class frmBuscarRequisicoesPorData extends Form
{
	var $requisicao;
	/*----------------------------------------
	Construtor
	----------------------------------------*/
	function __construct()	
	{
		parent::__construct('Busca de requisições por data');
		$this->EventHandler();
	}
	/*-------------------------------------------
	Método createFields()
	--------------------------------------------*/
	function createFields()
	{
		global $MIOLO, $module, $action,$state;
		$fields = array(
			new CalendarField('dInicial','','Data Inicial'),
			new CalendarField('dFinal',date('d/m/Y'),'Data Final')
		);
		$this->SetFields($fields);
		$validators = array(
			new DateDMYValidator('dInicial','','required'),
			new DateDMYValidator('dFinal','','required')
		);
		$this->SetValidators($validators);
	   	$this->defaultButton = false;
		$buttons = Array(
			new FormButton('btnBuscar','Buscar')
		);
		$this->SetButtons($buttons);
		$this->SetClose(false);
	}
	/*-------------------------------------------
	Método createFields()
	--------------------------------------------*/
	function btnBuscar_click()
	{
		global $MIOLO, $module, $page;
		$dInicial = $this->GetFormValue('dInicial');
		$dFinal = $this->GetFormValue('dFinal');
		$page->GoTo($MIOLO->GetActionUrl($module,'main:requisicoes:listarrequisicoes','',array('dInicial'=>$dInicial,'dFinal'=>$dFinal)));
	}
}
?>
