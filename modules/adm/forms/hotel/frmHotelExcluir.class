<?
/**
 * Formulário de exclusão hotel
 */
class frmHotelExcluir extends Form
{
	/**
	 * Objeto hotel
	 * @access protected
	 * 
	 */
	protected $objHotel;

    function __construct($objHotel)
    {
		$this->objHotel = $objHotel;
        parent::__construct('Excluir Hotel');
        $this->EventHandler();
    }

    function CreateFields()
    {
		$action_sim = $this->manager->GetActionURL('adm','main:hotel',$this->objHotel->idHotel,array('form'=>'excluir','conf'=>'sim'));
		$action_nao = $this->manager->GetActionURL('adm','main:hotel',$this->objHotel->idHotel);

		$conf = $this->GetFormValue('conf');

		if ($conf == 'sim')
		{
			try
			{
				$this->objHotel->Delete();
				$this->objHotel->Log(OP_DEL,"Hotel excluído");
				$this->manager->Information('Hotel excluído com sucesso',$this->manager->GetActionURL('adm','main:hotel:find'));
			}
			catch (Exception $e)
			{
				$this->manager->Error("Informe o seguinte erro à equipe do CGCO: ".$e->getMessage,$this->manager->GetActionURL('adm','main:hotel',$this->objHotel->idHotel));
			}
	   }
	   else
	   {
		   $this->manager->Question("Tem certeza que deseja excluir esse hotel?",$action_sim,$action_nao);
		}
	   
    }


 }
?>
