<?
global $MIOLO;
/**
 * Use Module Control
 */
$MIOLO->Uses('controls/linkhotel.class','adm');

/**
 * Formulário básico para seleção de Hotéis
 * 
 */
class frmHotelFind extends Form
{
    function __construct()
    {
		global $MIOLO, $module;
		
        $this->Form('Pesquisar Hotéis');
		$this->SetClose($MIOLO->GetActionURL($module,'main:mantutencao'));
        $this->EventHandler();
    }

    function CreateFields()
    {
        global $MIOLO, $action;

        $ui = $MIOLO->GetUI();
        $grid = $ui->GetGrid('adm','gridHotel');
        $grid->SetTitle(NULL);

        
        $lnkNew = new LinkHotel('lnkNew', FALSE);
        $lnkNew->setNew();
        
        $findButton = new ButtonFind('');
        $findButton->SetName('btnFind');
        
        $fields = array(
            array(
                new Text('','Hotel:'),
                new TextField('hotel','','',15),
                $findButton,
                $lnkNew
            ),
            $grid
        );
        $this->SetFields($fields);
        $this->defaultButton = false;
    }
 }
?>
