<?
global $MIOLO;
/**
 * Use Module Control
 */
$MIOLO->Uses('controls/linkunidade.class','adm');

/**
 * Formulário básico para seleção de Unidadess
 * 
 */
class frmUnidadeFind extends Form
{
    public $id;
    function __construct()
    {
	global $MIOLO, $module;
        $this->Form('Pesquisar Unidades de Medida');
	$this->SetClose($MIOLO->GetActionURL($module,'main:manutencao'));
        $this->EventHandler();
    }

    function CreateFields()
    {
        global $MIOLO, $action;

		$ui = $MIOLO->GetUI();
        $grid = $ui->GetGrid('adm','gridUnidade');
        $grid->SetTitle(NULL);

        
        $lnkNew = new LinkUnidade('lnkNew', FALSE);
        $lnkNew->setNew();
        
        $findButton = new ButtonFind('');
        $findButton->SetName('btnFind');
        
        $fields = array(
            array(
                new Text('','Sigla:'),
                new TextField('sigla','','',25),
                $findButton,
                $lnkNew
            ),
            $grid
        );
        $this->SetFields($fields);
        $this->defaultButton = false;
    }
 }
?>
