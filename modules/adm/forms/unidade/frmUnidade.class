<?
/**
 * Form Dependencia
 */
class frmUnidade extends CompoundForm
{
	public $oid;
        protected $unidade;
        public $sigla;
    /**
     * Construtor
     */
    function __construct($objUnidade)
    {
        global $MIOLO;
        $this->unidade = $objUnidade;
        
        parent::__construct();
        $this->SetClose($MIOLO->GetActionURL('adm','main:unidade:find'));
        $this->SetTitle($this->unidade->sigla);
        $this->SetIcon($MIOLO->GetUi()->GetImage('adm','default_mini.png'));
    }

    function CreateFields()
    {
        global $MIOLO, $page, $module, $context, $history;

        $unidade = $this->unidade;
        if ($this->oid == NULL) $this->oid = $unidade->sigla;

// form
        $ui = $MIOLO->GetUI();
        $form = Form::GetFormValue('form');
        switch ($form)
        {
            case 'editar' : 
				$this->_form[0] = $ui->GetForm($module,'frmUnidadeEditar', $unidade, 'unidade'); 
                break;
            case 'excluir'     : 
                 $this->_form[0] = $ui->GetForm($module,'frmUnidadeExcluir', $unidade, 'unidade'); 
                 break;
        }
        if ($this->_form[0])
        {
            $this->_form[0]->SetClose($MIOLO->GetActionURL('adm','main:unidade', $unidade->sigla));
        	$page->SetAction($history->Top('action'));
        }
		
// info
		$this->_info[1]	= new TextLabel('txtSigla',$this->unidade->sigla,'Sigla');
		$this->_info[2]	= new TextLabel('txtDescricao',$this->unidade->descricao,'Descricao');

// panel        
        $action = $context->action;
        $this->_panel[0] = $panel = new ActionPanel('pnlCompound','Opções','',false);
        $panel->AddUserAction('ADM_UNIDADE',A_EXECUTE,'Editar',$ui->GetImage('adm','edit.png'),'adm',$action, $this->oid, array("form"=>"editar"));
        $panel->AddUserAction('ADM_UNIDADE',A_EXECUTE,'Excluir',$ui->GetImage('adm','excluir.png'),'adm',$action, $this->oid, array("form"=>"excluir"));
 	}
}
?>
