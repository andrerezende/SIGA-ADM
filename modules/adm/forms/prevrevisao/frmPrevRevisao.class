<?php
class frmPrevRevisao extends CompoundForm
{
    public $oid;
    protected $prevRevisao;
    function __construct($objPrevRevisao)
    {
        global $MIOLO;
        $this->prevRevisao = $objPrevRevisao;
        parent::__construct();
        $this->SetClose($MIOLO->GetActionURL('adm','main:prevrevisao:find'));
        $this->SetTitle($this->prevRevisao->idPrevRevisao);
        $this->SetIcon($MIOLO->GetUi()->GetImage('adm','tools.png'));
    }

    function CreateFields()
    {
        global $MIOLO, $page, $module, $context, $history;

        $pr = $this->prevRevisao;
        if ($this->oid == NULL) $this->oid = $pr->idPrevRevisao;

// form
        $ui = $MIOLO->GetUI();
        $form = Form::GetFormValue('form');
        switch ($form)
        {
        
           case 'editar' : 
           		$this->_form[0] = $ui->GetForm($module,'frmPrevRevisaoEditar', $pr, 'prevrevisao'); 
                break;
           case 'dados' : 
				$this->_form[0] = $ui->GetForm($module,'frmPrevRevisaoDados', $pr, 'prevrevisao'); 
                break;
           case 'excluir'     : 
                 $this->_form[0] = $ui->GetForm($module,'frmPrevRevisaoDel', $pr, 'prevrevisao'); 
                 break;
        }
        if ($this->_form[0])
        {
            $this->_form[0]->SetClose($MIOLO->GetActionURL('adm','main:prevrevisao',$pr->idPrevRevisao));
        	$page->SetAction($history->Top('action'));
        }
		

// panel        
        $action = $context->action;
        $this->_panel[0] = $panel = new ActionPanel('pnlCompound','Opções','',false);
        
        if ($this->prevRevisao->situacao == "1")
        {
        	$panel->AddUserAction('adm_mv',A_EXECUTE,'Editar',$ui->GetImageTheme('','icons/editar.png'),'adm',$action, $this->oid, array("form"=>"editar"));
        	
        }
        else
        {
        	$panel->AddUserAction('adm_mv',A_EXECUTE,'Visualizar',$ui->GetImageTheme('','icons/editar.png'),'adm',$action, $this->oid, array("form"=>"dados"));
        }

// info
	}
}
?>
