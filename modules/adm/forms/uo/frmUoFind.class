<?
global $MIOLO;
/**
 * Use Module Control
 */
$MIOLO->Uses('controls/linkuo.class','adm');

/**
 * Formulário básico para seleção de uos
 * 
 */
class frmUoFind extends Form
{
    function __construct()
    {
		global $MIOLO, $module;
		
        $this->Form('Pesquisar Unidades Orçamentárias');
		$this->SetClose($MIOLO->GetActionURL($module,'main:manutencao'));
        $this->EventHandler();
    }

    function CreateFields()
    {
        global $MIOLO, $action;

        $ui = $MIOLO->GetUI();
        $grid = $ui->GetGrid('adm','gridUo');
        $grid->SetTitle(NULL);

        
        $lnkNew = new LinkUo('lnkNew', FALSE);
        $lnkNew->setNew();
        
        $findButton = new ButtonFind('');
        $findButton->SetName('btnFind');
        
        $fields = array(
            array(
                new Text('','Unidade Orçamentária:'),
                new TextField('uo','','',15),
                $findButton,
                $lnkNew
            ),
			new MActionHyperLink('inativas', 'Listar Inativas', 'adm', 'uo:findInativas'),
            $grid
        );
        $this->SetFields($fields);
        $this->defaultButton = false;
    }
 }
?>
