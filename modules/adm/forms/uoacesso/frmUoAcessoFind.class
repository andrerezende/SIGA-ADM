<?
global $MIOLO;
/**
 * Use Module Control
 */

$MIOLO->Uses('controls/linkuoacesso.class','adm');

/**
 * Formulário básico para seleção de Usuarios de UO
 * 
 */
class frmUoAcessoFind extends Form
{
    function __construct()
    {
		global $MIOLO, $module;
		
        $this->Form('Pesquisar Requisitantes');
		$this->SetClose($MIOLO->GetActionURL($module,'main:recursos'));
        $this->EventHandler();
    }

    function CreateFields()
    {
        global $MIOLO, $action;

        $ui = $MIOLO->GetUI();
        $grid = $ui->GetGrid('adm','gridUoAcesso');
        $grid->SetTitle(NULL);

        
        $lnkNew = new LinkUoAcesso('lnkNew', FALSE);
        $lnkNew->setNew();
        
        $findButton = new ButtonFind('');
        $findButton->SetName('btnFind');

        $login = $this->manager->getLogin();
        $objUo = $this->manager->GetBusiness('adm','uo');
        $optionsSelUos = $objUo->sByGestor($login->idkey);
        
        $fields = array(
            array(
                new Text('','Uo:'),
                new Selection('selUos','','',$optionsSelUos->chunkResult()),
                new Text('','Nome:'),
                new TextField('nome','','',30),
                $findButton,
                $lnkNew
            ),
            $grid
        );
        $this->SetFields($fields);

        $this->defaultButton = false;
    }
 }
?>
