/**
 * Listing Bolsista Inativos
 * @package br.org.miolo.ufjf.adm.listing
 */
class lstBolsistaInativo extends DataGrid2
{
	/**
	 * Base URL
	 * @var string 
	 */
	var $listURL;

	/**
	 * Constructor
	 */
	function lstBolsistaInativo()
	{
		global $MIOLO, $module, $page, $context, $self, $action, $perms, $state, $theme,$item;
		
		/*
		$vaux = explode('_',$item);
		$idpessoa = $vaux[0];
		$idbolsista = $vaux[1];
		*/
		$idpessoa = $item;
		
		$this->listURL = $MIOLO->GetActionURL($module,$self);
		
		$objBolsista = $MIOLO->GetBusiness($module,'bolsista');
		
		$query = $objBolsista->ListBolsistas($idpessoa,'inativos');
		
		$columns = array(
			new DataGridColumn('idbolsista','Id','right', true, '0%',false),
			new DataGridColumn('nome','Nome','left', true, '50%',true, null, true,true),
			new DataGridColumn('datainclusao','Data Inclusao','left',true, '20%',true, null, true,true),
			new DataGridColumn('bolsa','Bolsa','left', true, '30%',true, null, true,true),
		);
		
		$datagrid = new Grid($query->result, $columns, $this->listURL,20,0);

		$datagrid->SetTitle('Bolsistas');

		$datagrid->HeaderLink('inicio', 'FormulÃ¡rio Inicial',$MIOLO->GetActionURL($module,'main:bolsista'));
		
		$datagrid->HeaderLink('ativos', 'Registros Ativos',$MIOLO->GetActionURL($module,'main:listabolsista',$item));

		
		$MIOLO->theme->InsertContent($datagrid);
	}
}
