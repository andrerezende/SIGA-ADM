<?
/**
 * Listing Pagamento Bolsista no Mês
 * @package br.org.miolo.ufjf.adm.listing
 */
class lstPagBolsa extends DataGrid2
{
	/**
	 * Base URL
	 * @var string 
	 */
	var $listURL;

	/**
	 * Constructor
	 */
	function lstPagBolsa()
	{
		global $MIOLO, $module, $self, $state, $item;
		
		$aux = explode('_',$item);
		$idbolsa = $aux[0];
		$mesano = $aux[1];

		$this->listURL = $MIOLO->GetActionURL($module,$self,$item);
		
		$objPagBolsa = $MIOLO->GetBusiness($module,'pagbolsa');
		
		$query = $objPagBolsa->ListByMesAnoBolsa($mesano,$idbolsa);
		
		$columns = array(
			new DataGridColumn('idbolsista','idpagbolsa','left',true,'',false),
			new DataGridColumn('mesano','mesano','left',true,'',false),
			new DataGridColumn('cpf','CPF','left',true,'10%',true),
			new DataGridColumn('nome','Nome','left',false,'60%',true),
			new DataGridColumn('horastrabalhadas','Horas','right',true,'10%',true),	
			new DataGridColumn('banco','Banco','right',true,'5%',true),
			new DataGridColumn('idagenc','Agencia','left',true,'10%',true),
			new DataGridColumn('conta','Conta','left',true,'5%',true),
			new DataGridColumn('valor','Valor','left',true,'10%',true),
	 	);
		
		$datagrid = new Grid($query->result, $columns,$this->listURL,20,0);
		
		$datagrid->AddFilterText('3','Nome:','');
		
		if (($f = $state->get('filtro')) === NULL)
			$f = true;
			
		$datagrid->SetFilter($f);
		$state->set('filtro',$f);

		$datagrid->SetTitle("Pagamentos de Bolsistas - $mesano :: $idbolsa");
		
		$datagrid->HeaderLink('inicio', 'Formulário Inicial',$MIOLO->GetActionURL($module,'main:pagbolsa'));
		
		$vetDt = explode('/',$mesano);
		$vetDtAt = explode('/',date('d/m/Y'));
	
		/**
		 * Obs: somente no mes corrente e anterior os registros
		 * poderao ser inseridos/alterados/apagados
		 */
		if( ( mktime(0,0,0,$vetDt[0],1,$vetDt[1]) >= mktime(0,0,0,$vetDtAt[1],1,$vetDtAt[2]) ) || ( mktime(0,0,0,$vetDt[0],1,$vetDt[1]) == mktime(0,0,0,($vetDtAt[1]-1),1,$vetDtAt[2]) ) )
		{
			$href_edit = $MIOLO->GetActionURL($module,'main:pagbolsa','%0%_%1%', array('event'=>'btnEdit:click'));
			$href_dele = $MIOLO->GetActionURL($module,'main:pagbolsa','%0%_%1%'.'_'.$idbolsa, array('event'=>'btnDelete:click'));
			$datagrid->AddActionUpdate($href_edit);
			$datagrid->AddActionDelete($href_dele);
			
			$datagrid->HeaderLink('novo', 'Novo Pagamento',$MIOLO->GetActionURL($module,'main:listabolsistaporbolsa',$item));

		}

		$datagrid->HeaderLink('CopiarPagamento', 'Copiar Pagamento',$MIOLO->GetActionURL($module,'main:pagbolsa','',Array('event'=>'btnPreparaCopiarPag:click','item'=>$item)));

		$datagrid->SetClose($MIOLO->GetActionURL($module,'main:pagbolsa'));

		$MIOLO->theme->InsertContent($datagrid);
	}
}
?>
