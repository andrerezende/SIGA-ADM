	/**
	 * Base URL
	 * @var string 
	 */
	var $listURL;

	/**
	 * Constructor
	 */
	function lstBolsista()
	{
		global $MIOLO, $module, $page, $context, $self, $action, $perms, $state, $theme,$item;
	
		/*
		$vaux = explode('_',$item);
