<?
/**
 * Listing Acesso a Bolsa por Usuario
 * @package br.org.miolo.ufjf.adm.listing
 */
class lstAcessoBolsa extends DataGrid2
{
	/**
	 * Base URL
	 * @var string 
	 */
	var $listURL;

	/**
	 * Constructor
	 */
	function lstAcessoBolsa()
	{
		global $MIOLO, $module, $self, $item;
		
		$this->listURL = $MIOLO->GetActionURL($module,$self,$item);
		
		$objAcessoBolsa = $MIOLO->GetBusiness($module,'cadacesso');
		
		$query = $objAcessoBolsa->ListBolsaPorUsuario($item);
		
		$columns = array(
			new DataGridColumn('idbolsa','Id','right',false,'10%'),
			new DataGridColumn('descricao','Bolsa','left',true, '90%',true, null, false,true)
		);
		
		$datagrid = new Grid($query->result, $columns, $this->listURL,20,0);

		$datagrid->SetTitle('Bolsa por Usuario');
		
		$href_dele = $MIOLO->GetActionURL($module,'cadacesso',$item.'_'.'%0%', array('event'=>'btnDelete:click'));

		$datagrid->AddActionDelete($href_dele);

		$datagrid->HeaderLink('inicio', 'Escolher Usuario',$MIOLO->GetActionURL($module,'cadacesso'));

		$datagrid->HeaderLink('novo', 'Cad. Acesso',$MIOLO->GetActionURL($module,'main:cadacesso','',Array('event'=>'btnPreparaNovo:click','item'=>$item)));		
		
		$MIOLO->theme->InsertContent($datagrid);
	}
}
?>
