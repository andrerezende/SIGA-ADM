	function ListByDescricao($desc)
	{
		$desc = strtoupper($desc);
		$criteria =  $this->getCriteria();
		$criteria->addCriteria('upper(descricao)','LIKE', "'%$desc%'");
		$criteria->addOrderAttribute('descricao');
		return $criteria->retrieveAsQuery();
	}

