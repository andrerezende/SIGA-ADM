    function getVeiculoUo($iduo){        
        $sql = new sql();
        $sql->SetColumns('v.placa,v.modelo||' - '||v.placa as modeloplaca
        ');
        $sql->SetTables('
                ad_veiculo v inner join ad_veiculouo u on v.placa = u.placa
        ');
