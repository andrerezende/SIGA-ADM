	function ListByPlaca($placa)
	{
        $criteria =  $this->getCriteria();
        $criteria->addCriteria('placa','LIKE', "$placa");
        $criteria->addOrderAttribute('placa');
        return $criteria->retrieveAsQuery();
	}
        
        function ListByPlaca2($placa)
	{
        $sql = new sql('v.placa, i.marcamodelo as marcamodelo, v.cor, v.renavam','');
        $sql->SetJoin('ad_veiculo v','ad_itempatrimonio i','v.iditempatrimonio = i.iditempatrimonio');
        $sql->SetWhere("placa LIKE $placa");
        $sql->SetOrderBy('i.marcamodelo');
        return $this->Query($sql);
        }
        
        function ListByPlacaUo($placa,$iduo)
	{
        $sql = new sql('v.placa, i.marcamodelo as marcamodelo, v.cor, v.renavam','');
        $sql->SetJoin('ad_veiculo v','ad_itempatrimonio i','v.iditempatrimonio = i.iditempatrimonio');
        $sql->SetJoin('ad_veiculo v','ad_veiculouo u','u.placa = v.placa');
        $sql->SetWhere("v.placa LIKE $placa");
        $sql->SetWhereAnd('u.iduo = '.$iduo);
        $sql->SetOrderBy('i.marcamodelo');
        return $this->Query($sql);
        }
        
