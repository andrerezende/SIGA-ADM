<?php

class BusinessAdmCadAcesso extends Business
{
	var $idusuario;	
	var $nomeuser;
	var $idbolsa;
	
	function BusinessAdmCadAcesso($data=null)
	{
		$this->Business('sigaept',$data);
	}

	function GetById($idusuario,$idbolsa)
	{

		$sql = new sql('a.idusuario,p.nome as nomeuser,a.idbolsa','');
		$sql->SetJoin('ad_acessobolsa a','cm_usuario u','a.idusuario = u.idusuario');
		$sql->SetJoin('cm_usuario u','cm_pessoa p','u.idpessoa = p.idpessoa');
		$sql->SetWhere("a.idusuario = $idusuario");
		$sql->SetWhereAnd("a.idbolsa = $idbolsa");
    
		$query = $this->Query($sql);

		
    if ( !$query->eof() )
    {			
			$this->SetData($query->GetRowObject());
    }
   	return $this;
  }

  function Insert()
  {
  	$sql = new sql('idusuario, idbolsa ','ad_acessobolsa');

		$values = array(
			$this->idusuario,
			$this->idbolsa
		);
	
		//$ok = $this->Execute($sql->Insert($values));		
		try
		{
			$this->Execute($sql->Insert($values));
			$ok = true;
		}
		catch(Exception $e)
		{				
			$ok = false;
		}
	       
    	return $ok;
	}
	
	function Update()
 	{
  		$sql = new sql('idbolsa','ad_acessobolsa','idusuario= ?');
        
		$values = array($this->idusuario,$this->idbolsa);

		//$ok = $this->Execute($sql->Update($values));
		try
		{
			$this->Execute($sql->Update($values));
			$ok = true;
		}
		catch(Exception $e)
		{				
			$ok = false;
		}
	      
    	return $ok;
  	}
  
	function Delete()
	{
		$sql = new sql();
		$sql->SetTables('ad_acessobolsa');
		$sql->SetWhere("idusuario = '{$this->idusuario}'");
		$sql->SetWhereAnd("idbolsa = '{$this->idbolsa}'");	
		//$ok = $this->Execute($sql->Delete());
		try
		{
			$this->Execute($sql->Delete());
			$ok = true;
		}
		catch(Exception $e)
		{				
			$ok = false;
		}
		return $ok;
	}

  function ListRange($range=NULL)
  {
		$sql = new sql('idusuario,idbolsa','ad_acessobolsa','','idusuario');
		
		$sql->SetRange($range);
		
		$query = $this->Query($sql);

        return $query;
  }

  function ListAll()
  {
		return $this->ListRange();
  }

	/**
	**  + $bolsasLiberadas:
	**    - true = somente bolsas q usuario tem acesso
	** 		- false= somente bolsas q usuario nao tem acesso
	**/
	function ListBolsaPorUsuario($iduser,$bolsasLiberadas=true)
	{
		$sql = new sql();
		$sql->SetColumns('b.idbolsa,b.descricao');

		if( $bolsasLiberadas )
		{
			$sql->SetJoin('ad_acessobolsa a','ad_bolsa b','a.idbolsa = b.idbolsa');
		}
		else
		{
			$sql->SetJoin('ad_acessobolsa a','ad_bolsa b','a.idbolsa <> b.idbolsa');
		}

		$sql->SetWhere("a.idusuario = $iduser");
		$sql->SetOrderBy('b.descricao');
		$query = $this->Query($sql);

		return $query;
	}
}
?>
