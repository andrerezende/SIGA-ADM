<?PHP
class BusinessAdmAcessoBolsa extends Business
{
    var $idusuario, $idbolsa;


    function __construct($data = null)
    {
        $this->Business('sigaept',$data);
    }  // construct


    function GetByidusuario($idusuario, $descricao=TRUE, $primeiro='idbolsa')
    {
        $criteria = $this->getCriteria();
        $criteria->addCriteria('idusuario','=',"$idusuario");

        if ($primeiro == 'idbolsa')
        {
            $criteria->addColumnAttribute('idbolsa');
            if ($descricao)
            {
                $criteria->addColumnAttribute('bolsa.descricao');
            }
        }
        else
        {
            if ($descricao)
            {
                $criteria->addColumnAttribute('bolsa.descricao');
            }
            $criteria->addColumnAttribute('idbolsa');
        }

        return $criteria->retrieveAsQuery();
    } // GetByidusuario


    function GetById($idusuario, $idbolsa)
    {
        $criteria = $this->getCriteria();
        $criteria->addCriteria('idusuario','=',$idusuario);
        $criteria->addCriteria('idbolsa'  ,'=',$idbolsa);
        return $criteria->retrieveAsQuery();
    } // GetById


}
?>