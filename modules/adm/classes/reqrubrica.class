<?

class BusinessAdmReqRubrica extends Business
{
    public $idRubrica;
    public $idTipoReq;

    function __construct($data = null)
    {
        parent::__construct('sigaept', $data);
    }

    function ListByRubrica($r)
    {
        $criteria =  $this->getCriteria();
        $criteria->addColumnAttribute('idTipoReq');
        $criteria->addColumnAttribute('tipoReqs.descricao');
        $criteria->addCriteria("idRubrica","=","'$r'");
        $criteria->addOrderAttribute('tipoReqs.descricao');
        return $criteria->retrieveAsQuery();
    }
    
    function GetByTipoReq($idTipoReq)
    {
        $criteria =  $this->getCriteria();
        $criteria->addColumnAttribute('idRubrica');
        $criteria->addCriteria("idTipoReq","=","$idTipoReq");
        return $criteria->retrieveAsQuery();
    }

 function deleteTipoReq($idTipoReq,$idRubrica)
    {
    $criteria = $this->getDeleteCriteria();
    
		$criteria->addCriteria('idTipoReq','=', "$idTipoReq");
		$criteria->addCriteria("idRubrica = '$idRubrica'");
		$criteria->delete();
	}

function GetById($id)
	{
		$this->idTipoReq = $id;
		$this->retrieve();
		return $this;
	}
	
	
function deleteTipo($idTipoReq)
    {
    $criteria = $this->getDeleteCriteria();
    
		$criteria->addCriteria('idTipoReq','=', "$idTipoReq");
	//	$criteria->addCriteria("idRubrica = '$idRubrica'");
		$criteria->delete();
	}
		
}
?>
