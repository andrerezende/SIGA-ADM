<?
MIOLO::Import('modules::protocolo::controls::linkobject');
class LinkProcessoVago extends LinkObject
{
    public function __construct($numero='', $numProcesso)
    {
        global $MIOLO;
        $MIOLO->UsesBusiness('protocolo','processo');
        parent::__construct($numero,$numProcesso,'documento_mini.png');
    }
    public function setObjectByValue($numProcesso)
    {
        global $MIOLO;
        $this->object = $MIOLO->GetBusiness('protocolo','processo');
        $this->object->GetByNumero($numProcesso);
    }
    public function setAction()
    {
        $this->hyperlink->SetAction('protocolo','main:processos:vago',$this->object->numProcesso);
        $this->imagelink->SetAction('protocolo','main:processos:vago',$this->object->numProcesso);
    }
    public function setText()
    {
        $this->hyperlink->SetText($this->object->numProcessoFormatado());
    }
    public function setNew()
    {
        $this->isNewLink = TRUE;
        $this->hyperlink->SetAction('protocolo','main:busca:vizualiza');
        $this->hyperlink->SetText('Vizualizar Processo');
        $this->imagelink->SetAction('protocolo','main:busca:vizualiza');
    }
}
?>
