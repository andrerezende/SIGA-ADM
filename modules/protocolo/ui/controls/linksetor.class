<?
MIOLO::Import('modules::protocolo::controls::linkobject');

class LinkSetor extends LinkObject
{
    public function __construct($setorsigla='',$setor)
    {
        global $MIOLO;
        
        $MIOLO->UsesBusiness('protocolo','setor');
        parent::__construct($setorsigla,$setor,'setor_mini.png');
    }

    public function setObjectByValue($value)
    {
        global $MIOLO;
        $this->object = $MIOLO->GetBusiness('protocolo','setor');
        $this->object->GetById($value);
    }

    public function setAction()
    {
        global $MIOLO, $module;
        $this->hyperlink->SetAction($module,'main:setor',$this->object->idSetor,array('form'=>'acesso'));
        $this->imagelink->SetAction($module,'main:setor',$this->object->idSetor,array('form'=>'acesso'));
    }

    public function setText()
    {
        $this->hyperlink->SetText($this->object->sigla);
    }

    public function setNew()
    {
        $this->isNewLink = TRUE;
        $this->hyperlink->SetAction('protocolo','main:setor:new');
        $this->hyperlink->SetText('Inserir Novo Setor');
        $this->imagelink->SetAction('protocolo','main:setor:new');
    }
}
?>
