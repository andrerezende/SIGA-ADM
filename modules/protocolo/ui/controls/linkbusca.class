<?
MIOLO::Import('modules::protocolo::controls::linkobject');

class LinkBusca extends LinkObject
{
    public function __construct($numero='', $busca)
    {
        global $MIOLO;
        $MIOLO->UsesBusiness('protocolo','busca');
        parent::__construct($numero,$busca,'documento_mini.png');
    }

    public function setObjectByValue($value)
    {
        global $MIOLO;
        $this->object = $MIOLO->GetBusiness('protocolo','processo');
        $this->object->GetByNumero($value);
    }

    public function setAction()
    {
        $this->hyperlink->SetAction('protocolo','main:busca:buscadoc',$this->object->numProcesso.'&event=btnVisualiza:click');
        $this->imagelink->SetAction('protocolo','main:busca:buscadoc',$this->object->numProcesso.'&event=btnVisualiza:click');
    }

    public function setText()
    {
        $this->hyperlink->SetText($this->object->numProcessoFormatado());
    }

    public function setNew()
    {
        $this->isNewLink = TRUE;
        $this->hyperlink->SetAction('protocolo','main:busca:vizualiza');
        $this->hyperlink->SetText('Vizualizar Processo');
        $this->imagelink->SetAction('protocolo','main:busca:vizualiza');
    }
}
?>
