<?
MIOLO::Import('modules::protocolo::controls::linkobject');

class LinkTipoprot extends LinkObject
{

    public function __construct($name='', $tipoprot)
    {
        global $MIOLO;
        
        $MIOLO->UsesBusiness('protocolo','tipoprot');
        parent::__construct($name,$tipoprot,'setor_mini.png');
    }

    public function setObjectByValue($value)
    {
        global $MIOLO;
        $this->object = $MIOLO->GetBusiness('protocolo','tipoprot');
        $this->object->GetById($value);
    }

    public function setAction()
    {
        $this->hyperlink->SetAction('protocolo','main:tipoprot',$this->object->idtipoprot);
        $this->imagelink->SetAction('protocolo','main:tipoprot',$this->object->idtipoprot);
    }

    public function setText()
    {
        $this->hyperlink->SetText($this->object->tipo);
    }

    public function setNew()
    {
        $this->isNewLink = TRUE;
        $this->hyperlink->SetAction('protocolo','main:tipoprot:new');
        $this->hyperlink->SetText('Inserir Novo Tipo Protocolado');
        $this->imagelink->SetAction('protocolo','main:tipoprot:new');
    }

}
?>