/**
 * Grid Licencas e Afastamentos
 * Grid de uso geral para selecionar licensas e afastamentos do vÃ­nculo
 * @package br.org.miolo.ufjf.rh.listing
 */
class gridSetorAcesso extends MObjectGrid
{
	protected $setor;
    /**
     * Constructor
     */
    function __construct($objSetor)
    {
        global $MIOLO, $module,$self ;
		$this->setor = $objSetor;
        $columns = array(
            new MObjectGridColumn('setorFilho','Acesso','left', false,'100%',true),
        );

        $href_grid = $MIOLO->GetActionURL($module,$self);
        parent::__construct($this->setor->filhos, $columns, $href_grid,25);
        $this->SetTitle("Setores acessados");
        $this->SetFilter(false);
        $this->SetIndex(1);
        $this->SetWidth('100%');
        $this->SetLinkType('hyperlink');
		$action = $MIOLO->GetActionURL($module,$self,$this->setor->idSetor,array('form'=>'acesso','id'=>'#0#'));
		$this->AddActionIcon('ID','select.gif',$action);
    }

    function GenerateHeader()
    {
        return NULL;
    }

    function GenerateFooter()
    {
        if (!$this->data) 
        $footer[] = $this->GenerateEmptyMsg();
        $footer[] = new Separator();
        $footer[] = $this->GenerateControls();
        return $footer;
    }
}
