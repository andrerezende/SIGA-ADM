<?
MIOLO::Import('modules::protocolo::controls::linktipoprot');

class gridTipoprot extends DataGrid2
{
    function gridTipoprot()
    {   
        global $MIOLO;
        
        $this->SetFilter(false);
        $filterNome = strtoupper(Form::GetFormValue('tipo'));
        $nome = Util::NVL($filterNome, 'A Definir');
        $this->AddFilterText('nome','Nome',$nome);
        $this->SetIndex(1);
		$tipo = $nome;
        $objTipo = $MIOLO->GetBusiness('protocolo','tipoprot');
        $query = $objTipo->ListByTipo($tipo);
        
		$linktipoprot = new LinkTipoprot('linktipoprot','%0%');
        $column = new MDataGridControl($linktipoprot,'','Codigo','left',true,'20%');                
             
        $columns = array(
            $column,
            new DataGridColumn('tipo','Tipo Protocolado','left',true,'80%'),
            
        );
        $href_grid = $MIOLO->GetCurrentURL();
        parent::__construct($query, $columns, $href_grid, 25);
        $this->SetLinkType('hyperlink');
    }

    function GenerateFooter()
    {
        if (!$this->data) 
           $footer[] = $this->GenerateEmptyMsg();
        return $footer;
    }
}
?>
