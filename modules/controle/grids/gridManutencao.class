<?

class gridManutencao extends ObjectGrid
{
	protected $objNF;

    function __construct($objNF)
    {
        global $MIOLO, $module, $self, $page;
        
        $session = $MIOLO->getSession();
		$idNF = $session->get('notaFiscal');
		$objNF = $MIOLO->GetBusiness('controle','notafiscal',$idNF);
		$this->objNF = $objNF;
		$manutencoes = $this->objNF->getManutencoes();
		foreach ($manutencoes as $m)
		{	
			$m->getTipoManutencao();
		}
		$columns = array(
            	new ObjectGridColumn('idManutencao','M','right', false,'0%',false),
            	new ObjectGridColumn('tipoManutencao->tipoManutencao','TP','left', false,'30%',true),
            	new ObjectGridColumn('valor','V','left', false,'30%',true),
	    	new ObjectGridColumn('obs','Obs',false,'40%',true)
        );
        $this->SetTitle(NULL);
        $this->SetFilter(false);
        $this->SetIndex(1);


        $href_grid = $MIOLO->GetActionURL($module,$self);
        parent::__construct($manutencoes, $columns, $href_grid,25);
        $this->SetWidth('100%');
        $this->SetLinkType('hyperlink');
		$form = $session->get('form');
		$action = $MIOLO->GetActionURL($module,'notafiscal',$objNF->idNotaFiscal,array('form'=>$form,'id'=>'#0#','idnf'=>trim($this->objNF->idNotaFiscal)));
		$this->AddActionDelete($action);
    }

    function GenerateHeader()
    {
        return NULL;
    }

    function GenerateFooter()
    {
        if (!$this->data) 
        $footer[] = $this->GenerateEmptyMsg();
        $footer[] = new Separator();
        $footer[] = $this->GenerateControls();
        return $footer;
    }
}
?>