class BusinessControleManutencao extends Business
{
    public $idManutencao;
    public $idTipoManutencao;
    public $idNotaFiscal;
    public $valor;
    public $obs;

    public $tipoManutencao;
        
    function __construct($data=NULL)
    {
        $this->Business('sigaept',$data);
    }
    function GetById($id)
    {
		$this->idManutencao = $id;
		$this->retrieve();
    }
    function setData($data)
    {
        $this->valor = $data->valor;
		$this->obs = $data->obs;
    }
    function getData()
    {
		$data->valor = $this->valor;
		$data->obs = $this->obs;
		return $data;
    }
    function listAll()
    {
        global $MIOLO;
        
		$criteria =  $this->getCriteria();
        $criteria->addOrderAttribute('idManutencao');
        return $criteria->retrieveAsQuery();
    }
    function setIdNotaFiscal($id)
    {
		$this->idNotaFiscal = $id;
    }	
    function setIdTipoManutencao($id)
    {
		$this->idTipoManutencao = $id;
    }
    function getTipoManutencao()
    {
        global $MIOLO;
		$this->tipoManutencao = $MIOLO->getBusiness('controle','tipomanutencao',$this->idTipoManutencao);	
    }
