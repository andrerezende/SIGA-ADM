<?
class BusinessControleEmpresa extends Business
{
	public $idEmpresa;
    public $nome;
    public $cnpj;
    public $razaoSocial;
    public $rua;
    public $numero;
    public $bairro;
    public $cep;
    public $telefone;
    public $idMunicipio;
    
    public $municipio;
        
    function __construct($data=NULL)
    {
        $this->Business('sigaept',$data);
    }
    function GetById($id)
    {
		$this->idEmpresa = $id;
		$this->retrieve();
    }
    function setData($data)
    {
        $this->nome = strtoUpper($data->nome);
		$this->cnpj = $data->cnpj;
        $this->razaoSocial = strtoUpper($data->razaoSocial);
		$this->rua = strtoUpper($data->rua);
		$this->numero = strtoUpper($data->numero);
		$this->bairro = strtoUpper($data->bairro);
		$this->cep = $data->cep;
		$this->telefone = $data->telefone;        
    }
    function getData()
    {
		$data->idEmpresa = $this->idEmpresa;
		$data->nome = $this->nome;
		$data->cnpj = $this->cnpj;
	    $data->razaoSocial = $this->razaoSocial;
		$data->rua = $this->rua;
		$data->numero = $this->numero;
		$data->bairro = $this->bairro; 
		$data->cep = $this->cep;
		$data->telefone = $this->telefone;
		return $data;
    }
    function setMunicipio($id)
    {
		$this->idMunicipio = $id;
    }
    function getMunicipio()
    {
        $this->retrieveAssociation('municipio');
    }
    function listAll()
    {
        global $MIOLO;
        
		$criteria =  $this->getCriteria();
        $criteria->addOrderAttribute('idEmpresa');
        return $criteria->retrieveAsQuery();
    }	
}
?>
