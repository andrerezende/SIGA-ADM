<?
MIOLO::Import('modules::controle::controls::linkobject');

class LinkPrevRevisao extends LinkObject
{
    public function __construct($name='',$prevRevisao)
    {
        global $MIOLO;
        $MIOLO->UsesBusiness('controle','prevrevisao');
        parent::__construct($name,$prevRevisao,'tools.gif');
    }

    public function setObjectByValue($value)
    {
        global $MIOLO;
        $this->object = $MIOLO->GetBusiness('controle','prevrevisao');
        $this->object->GetById($value);
    }

    public function setAction()
    {
        global $MIOLO, $module;
        $this->hyperlink->SetAction($module,'main:prevrevisao',$this->object->idPrevRevisao);
        $this->imagelink->SetAction($module,'main:prevrevisao',$this->object->idPrevRevisao);
    }

    public function setText()
    {
        $this->hyperlink->SetText($this->object->idPrevRevisao);
    }

    public function setNew()
    {
        $this->isNewLink = TRUE;
        $this->hyperlink->SetAction('controle','main:prevrevisao:new');
        $this->hyperlink->SetText('Nova Previsão de Revisão');
        $this->imagelink->SetAction('controle','main:prevrevisao:new');
    }
}
?>