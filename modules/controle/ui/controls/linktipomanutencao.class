<?
MIOLO::Import('modules::controle::controls::linkobject');

class LinkTipoManutencao extends LinkObject
{
    public function __construct($name='',$tipoManutencao)
    {
        global $MIOLO;
        $MIOLO->UsesBusiness('controle','tipomanutencao');
        parent::__construct($name,$tipoManutencao,'tools.gif');
    }

    public function setObjectByValue($value)
    {
        global $MIOLO;
        $this->object = $MIOLO->GetBusiness('controle','tipomanutencao');
        $this->object->GetById($value);
    }

    public function setAction()
    {
        global $MIOLO, $module;
        $this->hyperlink->SetAction($module,'main:tipomanutencao',$this->object->idTipoManutencao);
        $this->imagelink->SetAction($module,'main:tipomanutencao',$this->object->idTipoManutencao);
    }

    public function setText()
    {
        $this->hyperlink->SetText($this->object->tipoManutencao);
    }

    public function setNew()
    {
        $this->isNewLink = TRUE;
        $this->hyperlink->SetAction('controle','main:tipomanutencao:new');
        $this->hyperlink->SetText('Novo tipo de Manutenção');
        $this->imagelink->SetAction('controle','main:tipomanutencao:new');
    }
}
?>