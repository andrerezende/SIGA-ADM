<?
MIOLO::Import('modules::controle::controls::linkobject');

class LinkEmpresa extends LinkObject
{
    public function __construct($name='',$empresa)
    {
        global $MIOLO;
        $MIOLO->UsesBusiness('controle','empresa');
        parent::__construct($name,$empresa,'empresa.png');
    }

    public function setObjectByValue($value)
    {
        global $MIOLO;
        $this->object = $MIOLO->GetBusiness('controle','empresa');
        $this->object->GetById($value);
    }

    public function setAction()
    {
        global $MIOLO, $module;
        $this->hyperlink->SetAction($module,'main:empresa',$this->object->idEmpresa);
        $this->imagelink->SetAction($module,'main:empresa',$this->object->idEmpresa);
    }

    public function setText()
    {
        $this->hyperlink->SetText($this->object->idEmpresa);
    }

    public function setNew()
    {
        $this->isNewLink = TRUE;
        $this->hyperlink->SetAction('controle','main:empresa:new');
        $this->hyperlink->SetText('Nova Empresa');
        $this->imagelink->SetAction('controle','main:empresa:new');
    }
}
?>