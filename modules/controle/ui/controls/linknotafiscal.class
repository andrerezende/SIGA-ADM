<?
MIOLO::Import('modules::controle::controls::linkobject');

class LinkNotaFiscal extends LinkObject
{
    public function __construct($name='',$notaFiscal)
    {
        global $MIOLO;
        $MIOLO->UsesBusiness('controle','notafiscal');
        parent::__construct($name,$notaFiscal,'documento_mini.png');
    }

    public function setObjectByValue($value)
    {
        global $MIOLO;
        $this->object = $MIOLO->GetBusiness('controle','notafiscal');
        $this->object->GetById($value);
    }

    public function setAction()
    {
        global $MIOLO, $module;
        $this->hyperlink->SetAction($module,'main:notafiscal',$this->object->idNotaFiscal);
        $this->imagelink->SetAction($module,'main:notafiscal',$this->object->idNotaFiscal);
    }

    public function setText()
    {
        $this->hyperlink->SetText($this->object->idNotaFiscal);
    }

    public function setNew()
    {
        $this->isNewLink = TRUE;
        $this->hyperlink->SetAction('controle','main:notafiscal:new');
        $this->hyperlink->SetText('Nova Nota de manutenção');
        $this->imagelink->SetAction('controle','main:notafiscal:new');
    }
}
?>