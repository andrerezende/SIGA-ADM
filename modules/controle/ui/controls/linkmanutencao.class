<?
MIOLO::Import('modules::manutencao_veiculos::controls::linkobject');

class LinkManutencao extends LinkObject
{
    public function __construct($name='',$manutencao)
    {
        global $MIOLO;
        $MIOLO->UsesBusiness('manutencao_veiculos','manutencao');
        parent::__construct($name,$manutencao,'kcontrol.png');
    }

    public function setObjectByValue($value)
    {
        global $MIOLO;
        $this->object = $MIOLO->GetBusiness('manutencao_veiculos','manutencao');
        $this->object->GetById($value);
    }

    public function setAction()
    {
        global $MIOLO, $module;
        $this->hyperlink->SetAction($module,'main:manutencao',$this->object->idManutencao);
        $this->imagelink->SetAction($module,'main:manutencao',$this->object->idManutencao);
    }

    public function setText()
    {
        $this->hyperlink->SetText($this->object->idManutencao);
    }

    public function setNew()
    {
        $this->isNewLink = TRUE;
        $this->hyperlink->SetAction('manutencao_veiculos','main:manutencao:new');
        $this->hyperlink->SetText('Nova Manutenção');
        $this->imagelink->SetAction('manutencao_veiculos','main:manutencao:new');
    }
}
?>