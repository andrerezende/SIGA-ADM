<?php
class frmEmpresa extends CompoundForm
{
    public $oid;
    protected $empresa;
    function __construct($objEmpresa)
    {
        global $MIOLO;
        $this->empresa = $objEmpresa;
        parent::__construct();
        $this->SetClose($MIOLO->GetActionURL('controle','main:empresa:find'));
        $this->SetTitle($this->empresa->nome);
        $this->SetIcon($MIOLO->GetUi()->GetImage('controle','empresa.png'));
    }

    function CreateFields()
    {
        global $MIOLO, $page, $module, $context, $history;

        $empresa = $this->empresa;
        if ($this->oid == NULL) $this->oid = $empresa->idEmpresa;
	    $ui = $MIOLO->GetUI();
        $form = Form::GetFormValue('form');
        switch ($form)
        {
            case 'dados' : 
				$this->_form[0] = $ui->GetForm($module,'frmEmpresaDados', $empresa, 'empresa'); 
                break;
           case 'excluir'     : 
                 $this->_form[0] = $ui->GetForm($module,'frmEmpresaDel', $empresa, 'empresa'); 
                 break;
        }
        if ($this->_form[0])
        {
            $this->_form[0]->SetClose($MIOLO->GetActionURL('controle','main:empresa',$empresa->idEmpresa));
        	$page->SetAction($history->Top('action'));
        }
		$action = $context->action;
        $this->_panel[0] = $panel = new ActionPanel('pnlCompound','Opções','',false);
        $panel->AddUserAction('',A_EXECUTE,'Editar',$ui->GetImageTheme('','icons/editar.png'),'controle',$action, $this->oid, array("form"=>"dados"));
        $panel->AddUserAction('',A_EXECUTE,'Excluir',$ui->GetImageTheme('','icons/excluir.png'),'controle',$action, $this->oid, array("form"=>"excluir"));
	}
}
?>