<?
class frmTipoManutencaoNew extends MForm
{
    public function __construct()
    {
        global $MIOLO;
        parent::__construct('Novo Tipo de Manutenção');
        $this->SetClose($MIOLO->GetActionURL('controle','main'));
        $this->EventHandler();
    }    
    public function CreateFields()
    {

		$fields = new MTextField('tipoManutencao','','Tipo de Manutencao',20);
		$buttons = new MButton('btnEnviar');
		$this->SetFields($fields);
		$this->SetButtons($buttons);	
    }
    function btnEnviar_click()
    {
		global $MIOLO;
		$objTipoManutencao = $MIOLO->GetBusiness('controle','tipomanutencao');
		$data = $this->getData();
		$objTipoManutencao->setData($data);
		if ($data->tipoManutencao != "")
		{
			try
			{
				$objTipoManutencao->Save();
				$msg = "Tipo de Manutenção Cadastrado com sucesso";
				$this->manager->Information($msg,$this->manager->GetActionURL('controle','main:tipomanutencao:find'));
			}
			catch(Exception $e)
			{
				$this->manager->Error($e->getMessage());
			}
		}
		else
		{
			$this->AddError("Favor preencher corretamente o campo Tipo Manutenção.");
		}
	}
    
}
?>
