<?
MIOLO::Import('modules::common::controls::linksistema');

class frmSistemaFind extends MForm
{
    function __construct()
    {
        parent::__construct('Pesquisar Sistemas');
        $this->EventHandler();
    }

    function CreateFields()
    {
        $grid = $this->manager->GetUI()->GetGrid('common','gridSistema');
        $grid->SetTitle(NULL);
        $btnFind = new MButtonFind('');
        $newLink = new LinkSistema('lnkNew',FALSE);
        $newLink->setNew();
        $fields = array(
            array(
                new MTextField('idSistema','','Código',10),
                new MTextLabel('ou','-OU-','&nbsp;'),
                new MTextField('sistema','','Nome',30),
                $btnFind,
            ),
            $newLink,
            $grid
        );
        $this->SetFields($fields);
        $this->defaultButton = false;
    }
 }
?>