<?
/**
 * Form Sistema
 */
class frmSistema extends MCompoundForm
{
	public $oid;
    protected $Sistema;
    /**
     * Construtor
     */
    function __construct($objSistema)
    {
        global $MIOLO;
        $this->Sistema = $objSistema;
        parent::__construct();
        $this->SetClose($MIOLO->GetActionURL('common','main:sistema:find'));
        $this->SetTitle($this->Sistema->sistema);
        $this->SetIcon($MIOLO->GetUi()->GetImage('common','sistema_mini.png'));
    }

    function CreateFields()
    {
		global $context,$history,$self;

        $Sistema = $this->Sistema;
        if ($this->oid == NULL) $this->oid = $Sistema->idSistema;

// form
        $ui = $this->manager->GetUI();
        $form = MForm::GetFormValue('form');
        switch ($form)
        {
            case 'dados' : 
				$this->_form[0] = $ui->GetForm('common','frmSistemaDados', $Sistema, 'sistema'); 
                break;
            case 'excluir'     : 
                 $this->_form[0] = $ui->GetForm('common','frmSistemaDel', $Sistema, 'sistema'); 
                 break;
        }
        if ($this->_form[0])
        {
            $this->_form[0]->SetClose($this->manager->GetActionURL('common', 'main:admin:sistema',$Sistema->idSistema));
        }
		
// panel        
        $action = $context->action;
        $this->_panel[0] = $panel = new ActionPanel('pnlCompound','Opções','',false);
        $panel->AddUserAction('sistema',A_EXECUTE,'Editar',$ui->GetImage('common','edit.png'),'common',$action, $this->oid, array("form"=>"dados"));
        $panel->AddUserAction('sistema',A_EXECUTE,'Excluir',$ui->GetImage('common','trash.png'),'common',$action, $this->oid, array("form"=>"excluir"));

// info
		$this->_info[0]	= new MTextLabel('txtSistema',$this->Sistema->sistema,'Nome');
       
	}
}
?>