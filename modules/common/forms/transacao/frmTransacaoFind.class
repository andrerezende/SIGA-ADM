<?
class frmTransacaoFind extends MForm
{
    function __construct()
    {
        parent::__construct('Pesquisar Transações');
        $this->SetClose($this->manager->GetActionURL('common','main:mad'));
        $this->EventHandler();
    }
    function CreateFields()
    {
        $ui = $this->manager->GetUI();
        $grid = $ui->GetGrid('common','gridTransacao');
        $grid->SetTitle(NULL);
        $lnkNew = new MLink('lnkNew','&nbsp;','','Inserir Transacao');
        $lnkNew->SetAction('common','main:mad:transacao:new');
        $findButton = new MButtonFind('');
        $findButton->SetName('btnFind');
        $fields = array(
                        array(
                            new MTextField('transacao','','Transação',30),
                            $findButton,
                            $lnkNew
                        ),
                    $grid
                    );
        $this->SetFields($fields);
        $this->defaultButton = false;
    }
}
?>
