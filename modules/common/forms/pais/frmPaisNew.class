<?
class frmPaisNew extends MForm
{

	function __construct()
	{
		parent::__construct('Incluir Novo Pais');
		$this->eventHandler();
	}

	function createFields()
	{
		$fields = array(
			//new MTextField('idPais','','Código', 4), o sistema está incluindo a partir da sequence
			new MTextField('pais','','Pais', 50),
			new MTextField('nacionalidade','','Nacionalidade', 50)
		);

		$this->SetFields($fields);

		$buttons = array(
			new MButton('btnNew', 'Incluir')
		);
		$this->SetButtons($buttons);

		$validators = array(
			//new MRequiredValidator('idPais'),
			new MRequiredValidator('pais')
		);
		$this->SetValidators($validators);
	}

	function btnNew_click()
	{
		$data = $this->getData();
		$pais = $this->manager->getBusiness('common','pais');
		$pais->SetData($data);

		if( strlen(trim(Form::GetFormValue('pais'))) < 3 )
		{
			$this->addError('O nome do pais deve ser maior, não inclua espaços em branco.');
		}
// 		elseif($pais->isPersistent)
// 		{
// 			$this->addError('Código de país já existente.');
// 		}
		else
		{
			try
			{
				$pais->save();
				$this->manager->information('País cadastrado com sucesso.',$this->manager->getActionUrl('common','main:pais:find'));
			}
			catch ( Exception $e )
			{
				$this->addError($e->getMessage());
			}
		}
	}

}
?>