<?
class frmPaisDados extends MForm
{
	protected $obj;

	function __construct($obj)
	{
		$this->obj = $obj;
		parent::__construct('Dados do Pais');
		$this->eventHandler();
	}

	function CreateFields()
	{
		$fields = array(
			new MTextField('pais','','Nome', 50),
			new MTextField('nacionalidade','','Nacionalidade', 50)
		);

		$this->SetFields($fields);

		$buttons = array(
			new MButton('btnSave', 'Gravar')
		);
		$this->SetButtons($buttons);

		$validators = array(
			new MRequiredValidator('pais')
		);
		$this->SetValidators($validators);
		$this->setData();
	}

	function setData()
	{
		$data = $this->obj;
		$this->setFieldValue('pais',$data->pais);
		$this->setFieldValue('nacionalidade',$data->nacionalidade);
	}

	function btnSave_click()
	{
		global $MIOLO;

		$data = $this->getData();



		$this->obj->pais = $data->pais;
		$this->obj->nacionalidade = $data->nacionalidade;
		if( strlen(trim(Form::GetFormValue('pais'))) < 3 )
		{
			$this->addError('O nome do pais deve ser maior, não inclua espaços em branco.');
		}
		else
		{
			try
			{
				$this->obj->UpdatePais($this->obj->idPais);
				$this->manager->information('País editado com sucesso.',$this->manager->getActionUrl('common','main:pais:find'));
			}
			catch ( Exception $e )
			{
				$this->addError($e->getMessage());
			}
		}
	}

}
?>
