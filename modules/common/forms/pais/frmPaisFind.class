<?
class frmPaisFind extends MForm
{
	function __construct()
	{
		parent::__construct('Pesquisar Pais');
		$this->setClose($this->manager->getActionURL('common','main'));
		$this->eventHandler();
	}
	function createFields()
	{
		$ui = $this->manager->GetUI();
		$grid = $ui->GetGrid('common','gridPais');
		$grid->setTitle(NULL);
		$lnkNew = new MLink('lnkNew','&nbsp;','','Inserir Pais');
		$lnkNew->setAction('common','main:pais:new');
		$findButton = new MButtonFind('');
		$findButton->setName('btnFind');
		$fields = array(
            array(
               new MTextField('pais','','Pais',30),
               $findButton,
               $lnkNew
            ),
            $grid
        );
		$this->SetFields($fields);
		$this->defaultButton = false;
	}
}
?>