<?
class frmMunicipioFind extends MForm
{
	function __construct()
	{
		parent::__construct('Pesquisar Municipio');
		$this->setClose($this->manager->getActionURL('common','main'));
		$this->eventHandler();
	}
	function createFields()
	{
		$ui = $this->manager->GetUI();
		$grid = $ui->GetGrid('common','gridMunicipio');
		$grid->setTitle(NULL);
		$lnkNew = new MLink('lnkNew','&nbsp;','','Inserir Municipio');
		$lnkNew->setAction('common','main:municipio:new');
		$findButton = new MButtonFind('');
		$findButton->setName('btnFind');
		$fields = array(
            array(
               new MTextField('municipio','','Municipio',30),
               $findButton,
               $lnkNew
            ),
            $grid
        );
		$this->SetFields($fields);
		$this->defaultButton = false;
	}
}
?>