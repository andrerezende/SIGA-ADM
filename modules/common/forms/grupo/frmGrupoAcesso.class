<?
class frmGrupoAcesso extends MForm
{
    private $acesso;
    
	function __construct($acesso)
	{
        $this->acesso = $acesso; 
        
		parent::__construct('Acesso');
		$this->EventHandler();
	}
    
	function CreateFields()
	{
        $MIOLO = MIOLO::getInstance();
        $perms = $MIOLO->getPerms();

		$transacao = $this->manager->GetBusiness('common','transacao');
		$qryTransacao = $transacao->ListAll();
        
        $fields = array(
            array(
                new MSelection('idTransacao','','Transação',$qryTransacao->ChunkResult()),
			    new MSelection('direito','','Permissões',$perms->perms)
            )
        ); 
        
        $this->SetFields($fields);		

        $buttons = array(
            new MButton('btnSalvar','Enviar')
        );

        if ( $this->acesso->isPersistent() )
        {
            $buttons[] = new MButton('btnExcluir','Excluir');
            $buttons[] = new MButton('btnNovo','Novo',$this->manager->getActionUrl('common','main:mad:grupo:main',$this->acesso->idGrupo,array('form'=>'acesso')));
        }
        
        $this->SetButtons($buttons);
        
        $this->setData();

	}

    function setData()
    {
        foreach( $this->acesso as $attrName => $attrValue )
        {
            if ( $this->$attrName && trim($attrValue) )
            {
                $this->setFieldValue($attrName,trim($attrValue));
            }
        
        }
    }
    
	function btnSalvar_click()
	{
		$data = $this->GetData();
		$this->acesso->SetData($data);
		try
		{
			$this->acesso->save();
            $go = $this->manager->getActionUrl('common','main:mad:grupo:main',$this->acesso->idGrupo,array('form'=>'acesso'));
            $this->page->redirect($go);
		}
		catch (Exception $e)
		{
			$this->AddError($e->GetMessage());
		}
	}

	function btnExcluir_click()
	{
		try
		{
			$this->acesso->delete();
            $go = $this->manager->getActionUrl('common','main:mad:grupo:main',$this->acesso->idGrupo,array('form'=>'acesso'));
            $this->page->redirect($go);
		}
		catch (Exception $e)
		{
			$this->AddError($e->GetMessage());
		}
	}
}
?>
