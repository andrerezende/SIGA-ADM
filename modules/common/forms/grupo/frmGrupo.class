<?
class frmGrupo extends MCompoundForm
{
	protected $grupo;

	function __construct($grupo)
	{
		$this->grupo = $grupo;
		parent::__construct();
		$this->SetTitle($this->grupo->grupo);
	}
	function CreateFields()
	{
		$ui = $this->manager->GetUI();
		$form = MForm::GetFormValue('form');
        
		switch ($form)
		{
			case 'dados':
				$this->_form[0] = $ui->GetForm('common','frmGrupoDados',$this->grupo,'grupo');
                break;
                
			case 'acesso':
                $this->grupo->retrieveAssociation("acesso");
                $idTransacao = MForm::getFormValue('idTransacao');
                $acesso = $this->grupo->getAcesso($idTransacao);
				$this->_form[0] = $ui->GetForm('common','frmGrupoAcesso',$acesso,'grupo');
				$this->_form[1] = $ui->GetGrid('common','gridGrupoAcesso',$this->grupo);
                break;
                
			case 'excluir':
				$this->_form[0] = $ui->GetForm('common','frmGrupoDel',$this->grupo,'grupo');
				break;
                
			case 'usuarios':
				$this->_form[1] = $ui->GetGrid('common','gridGrupoUsuarios',$this->grupo);
				break;
		}
        
		if ($this->_form[0])
		{
			$this->_form[0]->SetClose($this->manager->GetActionURL('common','main:mad',$this->oid));
		}
        
		$action = $this->manager->getContext()->action;
		$this->_panel[0] = $panel = new MActionPanel('pn1Compound','Opções','',false);
		$panel->AddAction('Dados',$ui->GetImage('common','edit.png'),'common',$action,$this->grupo->idGrupo,array("form"=>"dados"));
		$panel->AddAction('Acesso',$ui->GetImage('common','transactions.png'),'common',$action,$this->grupo->idGrupo,array("form"=>"acesso"));
		$panel->AddAction('Usuários',$ui->GetImage('common','groups.png'),'common',$action,$this->grupo->idGrupo,array("form"=>"usuarios"));
		$panel->AddAction('Excluir',$ui->GetImage('common','excluir.png'),'common',$action,$this->grupo->idGrupo,array("form"=>"excluir"));
        
		// info
		$this->_info[1] = new MTextLabel('txtNome',$this->grupo->grupo,'Grupo');
	}
}
?>
