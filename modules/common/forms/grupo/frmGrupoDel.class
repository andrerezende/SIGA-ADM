<?
class frmGrupoDel extends MForm
{
	protected $grupo;

	function __construct($grupo)
	{
		$this->grupo = $grupo;
		parent::__construct('Excluir Grupo');
		$this->EventHandler();
	}
    
	function CreateFields()
	{
		$action_sim = $this->manager->GetActionURL('common','main:mad:grupo',$this->grupo->idGrupo,array('form'=>'excluir','conf'=>'sim'));
		$action_nao = $this->manager->GetActionURL('common','main:mad:grupo',$this->grupo->idGrupo);
        
		$conf = $this->GetFormValue('conf');
        
		if ($conf=='sim')
		{
			try
			{
				$this->grupo->Delete();
				$this->manager->Information('Grupo excluÃ­do!',$this->manager->GetActionURL('common','main:mad:grupo:find'));
			}
			catch (Exception $e)
			{
				$this->manager->Error($e->GetMessage(),$this->manager->GetActionURL('common','main:mad:grupo',$this->grupo->idGrupo));
			}
		}
		else
		{
			$this->manager->Question("Tem certeza que deseja excluir o grupo [{$this->grupo->grupo}] ?",$action_sim,$action_nao);
		}
	}
}
?>
