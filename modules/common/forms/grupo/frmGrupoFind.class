<?
class frmGrupoFind extends MForm
{
	function __construct()
	{
		parent::__construct('Pesquisar Grupos');
		$this->SetClose($this->manager->GetActionURL('common','main:mad'));
		$this->EventHandler();
	}
	function CreateFields()
	{
		$ui = $this->manager->GetUI();
		$grid = $ui->GetGrid('common','gridGrupo');
		$grid->SetTitle(NULL);
		$lnkNew = new MLink('lnkNew','&nbsp;','','Inserir Grupo');
		$lnkNew->SetAction('common','main:mad:grupo:new');
		$findButton = new MButtonFind('');
		$findButton->SetName('btnFind');
		$fields = array(
                    array(
                        new MTextField('grupo','','Grupo',30),
                        $findButton,
                        $lnkNew
                    ),
                $grid
                );
		$this->SetFields($fields);
		$this->defaultButton = false;
	}
}
?>
