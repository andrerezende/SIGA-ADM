<?php
class frmTabelageral extends MCompoundForm
{
	public $oid;
    protected $tabelageral;
    protected $module;

    function __construct($obj)
    {
        $this->tabelageral = $obj;
        $this->module = 'common';
        parent::__construct();
        $this->setClose($this->manager->getActionURL($this->module,'main:mad:tabelageral:find'));
        $this->setTitle('Title');
        $this->setIcon($this->manager->getUi()->getImage($this->module,'mini.png'));
    }

    function CreateFields()
    {
		global $context,$history,$self;

        $tabelageral = $this->tabelageral;
        if ($this->oid == NULL) $this->oid = $tabelageral->idTabelaGeral;

// form
        $ui = $this->manager->GetUI();
        $form = MForm::GetFormValue('form');
        switch ($form)
        {
            case 'dados' : 
				$this->_form[0] = $ui->getForm($this->module,'frmTabelageralDados', $tabelageral, 'tabelageral'); 
                break;
            case 'excluir' : 
                $this->_form[0] = $ui->getForm($this->module,'frmTabelageralDel', $tabelageral, 'tabelageral'); 
                break;
        }
        if ($this->_form[0])
        {
            $this->_form[0]->setClose($this->manager->getActionURL($this->module, 'main:mad:tabelageral',$tabelageral->idTabelaGeral));
        }

// panel        
        $action = $context->action;
        $this->_panel[0] = $panel = new MActionPanel('pnlCompound','Opções','',false);
        $panel->AddUserAction('tabelageral',A_EXECUTE,'Editar',$ui->getImage($this->module,'edit.png'),$this->module,$action, $this->oid, array("form"=>"dados"));
        $panel->AddUserAction('tabelageral',A_EXECUTE,'Excluir',$ui->getImage($this->module,'trash.png'),$this->module,$action, $this->oid, array("form"=>"excluir"));

// info
		$this->_info[0]	= new MTextLabel('txtTabelageral',$this->tabelageral->tabela,'Tabelageral');
       
	}
}
?>
