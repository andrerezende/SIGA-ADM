<?
class frmTabelageralNew extends MForm
{

	function __construct()
	{
		parent::__construct('Incluir Novo Tabelageral');
		$this->eventHandler();
	}

	function createFields()
	{
		$fields = array(
			new MHiddenField('idTabelaGeral',''),
			new MTextField('tabela','','Tabela', 30, 'Máx. 30 caracteres.'),
			new MTextField('item1','','Item 1', 30,'Máx. 30 caracteres.'),
			new MTextField('item2','','Item 2', 50, 'Máx. 50 caracteres.'),
			new MMultiLineField('item3','','Item 3', 200, 4, 50)
		);

		$this->SetFields($fields);

		$buttons = array(
			new MButton('btnNew', 'Incluir')
		);
		$this->SetButtons($buttons);

		$validators = array(
			new MRequiredValidator('tabela'),
			new MRequiredValidator('item1')
		);
		$this->SetValidators($validators);
	}

	function btnNew_click()
	{
		$data = $this->getData();
		$tabelageral = $this->manager->getBusiness('common','tabelageral');
		$tabelageral->SetData($data);

		if( strlen(trim(Form::GetFormValue('tabela'))) < 2 )
		{
			$this->AddError('A tabela geral precisa pelo menos 2 caracteres.');
		}
		elseif( strlen(trim(Form::GetFormValue('item1'))) < 2 )
		{
			$this->AddError('O item 1 precisa ter pelo menos 2 caracteres.');
		}
		else
		{
			try 
			{
				$tabelageral->save();
				$this->manager->information('Tabela Geral cadastrada com sucesso.',$this->manager->getActionUrl('common','main:tabelageral:find'));
			}
			catch ( Exception $e )
			{
				$this->addError($e->getMessage());
			}
		}
	}

}
?>