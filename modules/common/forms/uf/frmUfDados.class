<?
class frmUfDados extends MForm
{
    protected $obj;

    function __construct($obj)
    {
        $this->obj = $obj;
        parent::__construct('Dados do Uf');
        $this->eventHandler();
    }

    function CreateFields()
    {
		$fields = array(
            new MHiddenField('idUF', ''),
			new MTextField('UF','','Nome', 50)
        );

        $this->SetFields($fields);

		$buttons = array(
        	new MButton('btnSave', 'Gravar')
        );
		$this->SetButtons($buttons);

		$validators = array(
			new MRequiredValidator('UF')
		);
		$this->SetValidators($validators);
        $this->setData();
    }

    function setData()
    {
        $data = $this->obj;
        $this->setFieldValue('UF',trim($data->UF));
		$this->setFieldValue('idUF',trim($data->idUF));
    }

    function btnSave_click()
    {
        $this->obj->setData($this->getData());
        try
        {
            $this->obj->save();
			$this->manager->information('UF modificada com sucesso.',$this->manager->getActionUrl('common','main:uf:find'));
        }
        catch ( Exception $e )
        {
            $this->addError($e->getMessage());
        }
    }

 }
?>