<?
class frmUf extends MCompoundForm
{
	public $oid;
    protected $uf;
    protected $module;

    function __construct($obj)
    {
        $this->uf = $obj;
        $this->module = 'common';
        parent::__construct();
        $this->setClose($this->manager->getActionURL($this->module,'main:uf:find'));
        $this->setTitle('Title');
        $this->setIcon($this->manager->getUi()->getImage($this->module,'mini.png'));
    }

    function CreateFields()
    {
		global $context,$history,$self;

        $uf = $this->uf;
        if ($this->oid == NULL) $this->oid = $uf->idUF;

// form
        $ui = $this->manager->GetUI();
        $form = MForm::GetFormValue('form');
        switch ($form)
        {
            case 'dados' : 
				$this->_form[0] = $ui->getForm($this->module,'frmUfDados', $uf, 'uf'); 
                break;
            case 'excluir' : 
                $this->_form[0] = $ui->getForm($this->module,'frmUfDel', $uf, 'uf'); 
                break;
        }
        if ($this->_form[0])
        {
            $this->_form[0]->setClose($this->manager->getActionURL($this->module, 'main:uf',$uf->idUF));
        }
		
// panel        
        $action = $context->action;
        $this->_panel[0] = $panel = new MActionPanel('pnlCompound','Opções','',false);
        $panel->AddUserAction('uf',A_EXECUTE,'Editar',$ui->getImage($this->module,'edit.png'),$this->module,$action, $this->oid, array("form"=>"dados"));
        $panel->AddUserAction('uf',A_EXECUTE,'Excluir',$ui->getImage($this->module,'trash.png'),$this->module,$action, $this->oid, array("form"=>"excluir"));

// info
		$this->_info[0]	= new MTextLabel('txtUf',$this->uf->UF,'Uf');
       
	}
}
?>