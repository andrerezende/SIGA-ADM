<?
class frmUfDel extends MForm
{
	protected $obj;
    protected $objId;

    function __construct($obj)
    {
		$this->obj = $obj;
        parent::__construct('Excluir Uf');
        $this->eventHandler();
    }

    function createFields()
    {
        global $MIOLO;

        $id = $this->obj->idUF;
        $txt = $this->obj->UF;

		$action_sim = $MIOLO->getActionURL('common','main:uf',$id,array('form'=>'excluir','conf'=>'sim'));
		$action_nao = $MIOLO->getActionURL('common','main:uf',$id);

		$conf = $this->getFormValue('conf');

		if ($conf == 'sim')
		{
			try
            {
    			$this->obj->delete();
	    		$MIOLO->Information('Uf excluído com sucesso',$MIOLO->getActionURL('common','main:uf:find'));
			}
			catch ( Exception $e )
			{
				$MIOLO->Error($e->getMessage,$MIOLO->GetActionURL('common','main:uf',$this->id));
			}
					
	    }
	    else
		{
		   $MIOLO->Question("Tem certeza que deseja excluir o Uf ".$txt."?",$action_sim,$action_nao);
		}
    }
 }
?>