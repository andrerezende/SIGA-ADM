<?php
class frmGeradorTabelasNew extends MForm
{

	function __construct()
	{
		parent::__construct('Incluir Nova Tabela para Gerador de Relatório');
		$this->EventHandler();
	}
    
	function CreateFields()
	{
        $fields = array(
			$nome = new MTextField('nome','','Tabela','30','Nome físico'),
			$descricao = new MTextField('descricao','','Descrição','55','Opicional'),
        ); 
        $this->SetFields($fields);		

		$nome->addAttribute('maxlength',25);
		$descricao->addAttribute('maxlength',50);

		$buttons = array(
            new MButton('btnNew','Enviar')
        );
        $this->SetButtons($buttons);

		
        $validators = array(
            new MRequiredValidator('nome'),
        );
        $this->SetValidators($validators);
	}
    

	public function btnNew_click()
	{
		$data = $this->GetData();
		$obj = $this->manager->GetBusiness('common','tabelarelat');
        $obj->nome = $data->nome;
        $obj->descricao = $data->descricao;
		try
		{
			$obj->save();
			$go = $this->manager->GetActionURL('common','main:mad:geradortabelas:main',$obj->idTabelaRelat);
			$this->page->Redirect($go);
		}
		catch (Exception $e)
		{
			$this->AddError($e->GetMessage());
		}
	}
}
?>