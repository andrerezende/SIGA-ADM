<?php
class frmGeradorTabelasDel extends MForm
{
	private $o;

	function __construct($o)
	{
		$this->o = $o;

		parent::__construct('Excluir Tabela do Gerador de Relatórios');
		$this->EventHandler();
	}
    
	function CreateFields()
	{
		$action_sim = $this->manager->GetActionURL('common','main:mad:geradortabelas',$this->o->idTabelaRelat,array('form'=>'excluir','conf'=>'sim'));
		$action_nao = $this->manager->GetActionURL('common','main:mad:geradortabelas',$this->o->idTabelaRelat);
        
		$conf = $this->GetFormValue('conf');
        
		if ($conf=='sim')
		{
			try
			{
				$this->o->Delete();
				$this->manager->Information('Tabela excluída!',$this->manager->GetActionURL('common','main:mad:geradortabelas:find'));
			}
			catch (Exception $e)
			{
				$this->manager->Error($e->GetMessage(),$this->manager->GetActionURL('common','main:mad:geradortabelas',$this->o->idTabelaRelat));
			}
		}
		else
		{	
			$this->manager->Question("Tem certeza que deseja excluir a Tabela [{$this->o->nome}] ?",$action_sim,$action_nao);
		}
	}
}
?>