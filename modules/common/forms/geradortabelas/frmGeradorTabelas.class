<?php
class frmGeradorTabelas extends MCompoundForm
{
	protected $o;

	function __construct($o)
	{
		$this->o = $o;
		parent::__construct();
		$this->SetTitle($this->o->nome);
	}
	function CreateFields()
	{
		$ui = $this->manager->GetUI();
		$form = MForm::GetFormValue('form');

		switch ($form)
		{
			case 'dados':
				$this->_form[0] = $ui->GetForm('common','frmGeradorTabelaDados',$this->o,'geradortabelas');
                break;
                
			case 'excluir':
				$this->_form[0] = $ui->GetForm('common','frmGeradorTabelaDel',$this->o,'geradortabelas');
				break;
                
		}
        
		if ($this->_form[0])
		{
			$this->_form[0]->SetClose($this->manager->GetActionURL('common','main:mad',$this->oid));
		}
        
		$action = $this->manager->getContext()->action;
		$this->_panel[0] = $panel = new MActionPanel('pn1Compound','Opções','',false);
		$panel->AddAction('Dados',$ui->GetImage('common','edit.png'),'common',$action,$this->o->idTabelaRelat,array("form"=>"dados"));
		$panel->AddAction('Excluir',$ui->GetImage('common','excluir.png'),'common',$action,$this->o->idTabelaRelat,array("form"=>"excluir"));
        
		// info
		$this->_info[1] = new MTextLabel('txtNome',$this->o->nome,'Tabela');
		$this->_info[2] = new MTextLabel('txtDescricao',$this->o->descricao,'Descrição');
	}
}
?>