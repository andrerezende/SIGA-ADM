<?
class frmOrganogramaDados extends MForm
{
	protected $objOrganograma;

	function __construct($objOrganograma)
	{
		$this->objOrganograma = $objOrganograma;
		parent::__construct('Dados do Organograma');
		$this->EventHandler();
	}

	function CreateFields()
	{
		$fields = array(
			new MHiddenField('idTipoOrganograma'),
			new MTextField('sigla','','Sigla','20'),
			new MTextField('descricao','','Descrição','100'),
		);
		$this->SetFields($fields);

		$buttons = array(
			new FormButton('btnPost', 'Gravar')
		);
		$this->SetButtons($buttons);

		$validators = array(
			new RequiredValidator('sigla'),
			new RequiredValidator('descricao')
		);
		$this->SetValidators($validators);
		$this->setData();
	}

	function setData()
	{
		$data = $this->objOrganograma;
		$this->setFieldValue('idTipoOrganograma',$data->idTipoOrganograma);
		$this->setFieldValue('sigla',$data->sigla);
		$this->setFieldValue('descricao',$data->descricao);
	}

	function btnPost_click()
	{
		$this->objOrganograma->setData($this->getData());

		if( strlen(trim(Form::GetFormValue('sigla'))) < 2 )
		{
			$this->AddError('A sigla do organograma deve ter pelo menos dois caracteres, sem espaços.');
		}
		elseif( strlen(trim(Form::GetFormValue('descricao'))) < 5 )
		{
			$this->AddError('Descreva melhor este organograma.');
		}
		else
		{
			try
			{
				$this->objOrganograma->save();
				$go = $this->manager->GetActionURL('common','main:organograma',$this->objOrganograma->idTipoOrganograma);
				$this->manager->Information('Organograma alterado com sucesso.',$go);
			}
			catch ( Exception $e )
			{
				$this->AddError($e->getMessage());
			}
		}
	}
}
?>
