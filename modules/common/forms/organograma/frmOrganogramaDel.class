<?
class frmOrganogramaDel extends MForm
{
	protected $objOrganograma;

    function __construct($objOrganograma)
    {
		$this->objOrganograma = $objOrganograma;
        parent::__construct('Excluir Tipo Organograma');
        $this->EventHandler();
    }

    function CreateFields()
    {
        global $MIOLO;

		$action_sim = $MIOLO->GetActionURL('common','main:organograma', $this->objOrganograma->idTipoOrganograma, array('form'=>'excluir','conf'=>'sim'));
		$action_nao = $MIOLO->GetActionURL('common','main:organograma', $this->objOrganograma->idTipoOrganograma);
		$conf = $this->GetFormValue('conf');
		if ($conf == 'sim')
		{
            try
            {
    			$this->objOrganograma->delete();
	    		$MIOLO->Information('Organograma excluído com sucesso', $MIOLO->GetActionURL('common','main:organograma:find'));
			}
			catch ( Exception $e )
			{
                $MIOLO->Error($e->getMessage,$MIOLO->GetActionURL('common','main:organograma', $this->objOrganograma->idTipoOrganograma));
			}
       }
	   else
	   {
		   $MIOLO->Question("Tem certeza que deseja excluir o Organograma ". $this->objOrganograma->sigla . "?", $action_sim,$action_nao);
       }
    }
}
?>