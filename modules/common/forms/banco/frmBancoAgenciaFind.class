<?
class frmBancoAgenciaFind extends Form
{
    protected $objBanco;
    
    function __construct($objBanco)
    {
        $this->objBanco = $objBanco;
        $this->Form('Pesquisar Agências');
        $this->EventHandler();
    }

    function CreateFields()
    {
        $grid = $this->manager->GetUI()->GetGrid('common','gridBancoAgencia',$this->objBanco);
        $grid->SetTitle(NULL);
        $btnFind = new ButtonFind('');
        $fields = array(
            array(
                new MTextField('idAgencia','','Número',10),
                new MTextLabel('ou','-OU-','&nbsp;'),
                new MTextField('nome','','Nome',30),
                $btnFind,
            ),
        );
        $this->SetFields($fields);
        if ($this->page->isPostback())
        {
            $this->AddField($grid);
        }
        $this->defaultButton = false;
    }
 }
?>
