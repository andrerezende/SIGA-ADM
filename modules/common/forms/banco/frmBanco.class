<?
/**
 * Form Banco
 */
class frmBanco extends CompoundForm
{
	public $oid;
    protected $banco;
    /**
     * Construtor
     */
    function __construct($objBanco)
    {
        global $MIOLO;
        $this->banco = $objBanco;
        parent::__construct();
        $this->SetClose($MIOLO->GetActionURL('common','main:bancos:find'));
        $this->SetTitle($this->banco->nome);
        $this->SetIcon($MIOLO->GetUi()->GetImage('common','banco_mini.png'));
    }

    function CreateFields()
    {
		global $context,$history,$self;

        $banco = $this->banco;
        if ($this->oid == NULL) $this->oid = $banco->idBanco;

// form
        $ui = $this->manager->GetUI();
        $form = Form::GetFormValue('form');
        switch ($form)
        {
            case 'dados' : 
				$this->_form[0] = $ui->GetForm('common','frmBancoDados', $banco, 'banco'); 
                break;
            case 'excluir'     : 
                 $this->_form[0] = $ui->GetForm('common','frmBancoDel', $banco, 'banco'); 
                 break;
            case 'agencias':
				if ( ($id = Form::GetFormValue('id')) != NULL )
				{
					$agencia = $banco->GetAgenciaById($id);
					if ($agencia != NULL)
					{
						$this->_form[0] = $ui->GetForm('common','frmBancoAgencia',$agencia,'banco');
					}
				}
				else
				{
					$this->_form[0] = $ui->GetForm('common','frmBancoAgenciaFind',$banco,'banco');
				}
                 break;
        }
        if ($this->_form[0])
        {
            $this->_form[0]->SetClose($this->manager->GetActionURL('common', 'main:admin:banco',$banco->idBanco));
        }
		

// panel        
        $action = $context->action;
        $this->_panel[0] = $panel = new ActionPanel('pnlCompound','Opções','',false);
        $panel->AddUserAction('banco',A_EXECUTE,'Editar',$ui->GetImage('common','edit.png'),'common',$action, $this->oid, array("form"=>"dados"));
        $panel->AddUserAction('banco_delete',A_EXECUTE,'Excluir',$ui->GetImage('common','trash.png'),'common',$action, $this->oid, array("form"=>"excluir"));
        $panel->AddUserAction('banco',A_EXECUTE,'Agências',$ui->GetImage('common','agencia.png'),'common',$action, $this->oid, array("form"=>"agencias"));

	}
}
?>
