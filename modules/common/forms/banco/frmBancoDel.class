<?
class frmBancoDel extends Form
{
	protected $objBanco;

    function __construct($objBanco)
    {
		$this->objBanco = $objBanco;
        parent::__construct('Excluir Tipo Banco');
        $this->EventHandler();
    }

    function CreateFields()
    {
        global $MIOLO;

		$action_sim = $MIOLO->GetActionURL('common','main:banco',$this->objBanco->idBanco,array('form'=>'excluir','conf'=>'sim'));
		$action_nao = $MIOLO->GetActionURL('common','main:banco',$this->objBanco->idBanco);

		$conf = $this->GetFormValue('conf');

		if ($conf == 'sim')
		{
            try
            {
    			$this->objBanco->Delete();
	    		$MIOLO->Information('Banco excluÃ­do com sucesso',$MIOLO->GetActionURL('common','main:banco:find'));
			}
			catch ( Exception $e )
			{
				$MIOLO->Error($e->getMessage,$MIOLO->GetActionURL('common','main:banco',$this->objBanco->idBanco));
			}
					
	   }
	   else
	   {
		   $MIOLO->Question("Tem certeza que deseja excluir o banco ".$this->objBanco->nome."?",$action_sim,$action_nao);
		}
	   
    }


 }
?>
