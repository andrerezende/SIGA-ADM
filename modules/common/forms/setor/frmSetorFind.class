<?
MIOLO::Import('modules::common::controls::linksetor');

class frmSetorFind extends MForm
{
    function __construct()
    {
        parent::__construct('Pesquisar Setores');
        $this->EventHandler();
    }

    function createFields()
    {
        $btnFind = new MButtonFind('');
        $newLink = new LinkSetor('lnkNew',FALSE);
        $newLink->setNew();
        $fields = array(
            array(
                new MTextField('sigla','','Sigla',30),
                new MCheckBox('ativo','ativo','&nbsp;',true,'Somente ativos'),
                $btnFind,
            ),
            $newLink,
        );
        $this->SetFields($fields);
        if ($this->page->isPostBack())
        {
           $grid = $this->manager->getUI()->getGrid('common','gridSetor');
           $grid->setTitle(NULL);
           $this->addField($grid); 
        }
        $this->defaultButton = false;
    }
 }
?>
