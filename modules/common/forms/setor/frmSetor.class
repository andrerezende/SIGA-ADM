<?
class frmSetor extends CompoundForm
{
	public $oid;
    protected $setor;
    /**
     * Construtor
     */
    function __construct($objSetor)
    {
        global $MIOLO;
        $this->setor = $objSetor;
        parent::__construct();
        $this->SetClose($MIOLO->GetActionURL('common','main:setor:find'));
        $this->SetTitle('Setor: ' . $this->setor->sigla);
        $this->SetIcon($MIOLO->GetUi()->GetImage('common','banco_mini.png'));
    }

    function createFields()
    {
        $setor = $this->setor;
        if ($this->oid == NULL) $this->oid = $setor->idSetor;

// form
        $ui = $this->manager->GetUI();
        $form = MForm::getFormValue('form');
        switch ($form)
        {
            case 'dados': 
				$this->_form[0] = $ui->GetForm('common','frmSetorDados', $setor, 'setor'); 
                break;
            case 'excluir': 
                 $this->_form[0] = $ui->GetForm('common','frmSetorDel', $setor, 'setor'); 
                 break;
            case 'equivalentes': 
                 $this->_form[0] = $ui->GetForm('common','frmSetorEquivalentes', $setor, 'setor'); 
                 break;
        }
        if ($this->_form[0])
        {
            $this->_form[0]->SetClose($this->manager->GetActionURL('common', 'main:setor',$setor->idSetor));
        }
		

// panel        
        $action = $this->manager->getContext()->action;
        $this->_panel[0] = $panel = new ActionPanel('pnlCompound','Opções','',false);
        $panel->AddUserAction('setor',A_EXECUTE,'Editar',$ui->GetImage('common','edit.png'), 'common',$action, $this->oid, array("form"=>"dados"));
        $panel->AddUserAction('setor_delete',A_EXECUTE,'Excluir',$ui->GetImage('common','trash.png'), 'common',$action, $this->oid, array("form"=>"excluir"));
        $panel->AddUserAction('setor',A_EXECUTE,'Equivalentes',$ui->GetImage('common','edit.png'), 'common',$action, $this->oid, array("form"=>"equivalentes"));
	}
}
?>
