<?php
class frmGeradorCamposDados extends MForm
{
    private $o;
    

	function __construct($o)
	{
        $this->o = $o; 
		parent::__construct('Dados de Campo para Gerador de Relatórios');
		$this->EventHandler();
	}
    

	function CreateFields()
	{
        $tab = $this->manager->getBusiness('common','tabelarelat');
        $query = $tab->listAll();

        $fields = array(
			$campo = new MTextField('campo','','Campo','25'),
			$titulo = new MTextField('titulo','','Título','25'),
			$descricao = new MTextField('descricao','','Descrição','55'),
            $tabela = new MSelection('idTabelaRelat','','Tabela',$query->result),
        ); 
        $this->SetFields($fields);		

		$campo->addAttribute('maxlength',20);
		$titulo->addAttribute('maxlength',20);
		$descricao->addAttribute('maxlength',50);

                        
        $buttons = array(
            new MButton('btnSalvar','Enviar')
        );
        $this->SetButtons($buttons);

        $validators = array(
            new MRequiredValidator('campo'),
            new MRequiredValidator('titulo'),
        );
        $this->SetValidators($validators);		

        $this->setData();
	}


    function setData()
    {
        foreach( $this->o as $attrName => $attrValue )
        {
            if ( $this->$attrName && trim($attrValue) )
            {
                $this->setFieldValue($attrName,trim($attrValue));
            }
        
        }
    }

	
	function btnSalvar_click()
	{
		$data = $this->GetData();
        $this->o->campo = $data->campo;
        $this->o->titulo = $data->titulo;
        $this->o->descricao = $data->descricao;
        $this->o->idTabelaRelat = $data->idTabelaRelat;
		try
		{
			$this->o->save();
            $this->addInfo("Campo salvo com sucesso.");
		}
		catch (Exception $e)
		{
			$this->AddError($e->GetMessage());
		}
	}
}
?>