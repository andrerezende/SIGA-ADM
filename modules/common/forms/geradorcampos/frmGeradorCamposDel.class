<?php
class frmGeradorCamposDel extends MForm
{
	protected $o;


	function __construct($o)
	{
		$this->o = $o;
		parent::__construct('Excluir Campo (Gerador de Relatórios)');
		$this->EventHandler();
	}
    

	function CreateFields()
	{
		$action_sim = $this->manager->GetActionURL('common','main:mad:geradorcampos',$this->o->idCampoRelat,array('form'=>'excluir','conf'=>'sim'));
		$action_nao = $this->manager->GetActionURL('common','main:mad:geradorcampos',$this->o->idCampoRelat);
        
		$conf = $this->GetFormValue('conf');
        
		if ($conf=='sim')
		{
			try
			{
				$this->o->Delete();
				$this->manager->Information('Campo excluído!',$this->manager->GetActionURL('common','main:mad:geradorcampos:find'));
			}
			catch (Exception $e)
			{
				$this->manager->Error($e->GetMessage(),$this->manager->GetActionURL('common','main:mad:geradorcampos',$this->o->idCampoRelat));
			}
		}
		else
		{
			$this->manager->Question("Tem certeza que deseja excluir o Campo [{$this->o->campo}] ?",$action_sim,$action_nao);
		}
	}
}
?>