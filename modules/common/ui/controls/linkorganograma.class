<?
MIOLO::Import('modules::common::controls::linkobject');

class LinkOrganograma extends LinkObject
{
    public function __construct($name='', $object)
    {
        global $MIOLO;
        
        $MIOLO->UsesBusiness('common','organograma');
        parent::__construct($name,$object,'banco_mini.png');
    }

    public function setObjectByValue($value)
    {
        global $MIOLO;
        $this->object = $MIOLO->GetBusiness('common','tipoorganograma');
        $this->object->GetById($value);
    }

    public function setAction()
    {
        $this->hyperlink->SetAction('common','main:organograma',$this->object->idTipoOrganograma);
        $this->imagelink->SetAction('common','main:organograma',$this->object->idTipoOrganograma);
    }

    public function setText()
    {
        $this->hyperlink->SetText($this->object->sigla);
    }
    
    public function setNew()
    {
        $this->isNewLink = TRUE;
        $this->hyperlink->SetAction('common','main:organograma:new');
        $this->hyperlink->SetText('Inserir Novo Organograma');
        $this->imagelink->SetAction('common','main:organograma:new');
    }
}
?>
