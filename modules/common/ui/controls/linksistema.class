<?
MIOLO::Import('modules::common::controls::linkobject');

class LinkSistema extends LinkObject
{
    public function __construct($name='', $banco)
    {
        global $MIOLO;
        
        $MIOLO->UsesBusiness('common','sistema');
        parent::__construct($name,$banco, 'system1.png');
    }

    public function setObjectByValue($value)
    {
        global $MIOLO;
        $this->object = $MIOLO->GetBusiness('common','sistema');
        $this->object->GetById($value);
    }

    public function setAction()
    {
        $this->hyperlink->SetAction('common','main:sistema',$this->object->idSistema);
        $this->imagelink->SetAction('common','main:sistema',$this->object->idSistema);
    }

    public function setText()
    {
        $this->hyperlink->SetText($this->object->sistema);
    }
    
    public function setNew()
    {
        $this->isNewLink = TRUE;
        $this->hyperlink->SetAction('common','main:sistema:new');
        $this->hyperlink->SetText('Inserir Novo Sistema');
        $this->imagelink->SetAction('common','main:sistema:new');
    }
}
?>