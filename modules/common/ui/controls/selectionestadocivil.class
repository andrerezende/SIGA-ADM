<?
/**
 * SelectionEstadoCivil Control class
 */
class SelectionEstadoCivil extends Selection
{
	public function __construct($name,$value='',$label,$showValues=false,$hint='')
	{
		global $MIOLO;

		$ec = $MIOLO->GetBusiness('common','estadocivil');
		$options = $ec->ListAll()->result;
		parent::__construct($name,$value='',$label,$options,$showValues=false,$hint='');
	}
}
?>

