<?php
MIOLO::Import('modules::common::controls::linkobject');

class LinkPessoa extends LinkObject
{
    public function __construct($name='', $pessoa)
    {
        global $MIOLO;
        
        $MIOLO->UsesBusiness('common','pessoa');
        parent::__construct($name,$pessoa,'pessoa_mini.png');
    }

    public function setObjectByValue($value)
    {
        global $MIOLO;
        $this->object = $MIOLO->GetBusiness('common','pessoa');
        $this->object->GetById((int)$value);
    }

    public function setAction()
    {
        $this->hyperlink->SetAction('common','main:pessoa',$this->object->idpessoa);
        $this->imagelink->SetAction('common','main:pessoa',$this->object->idpessoa);
    }

    public function setText()
    {
        $this->hyperlink->SetText($this->object->nome);
    }

    public function setNew()
    {
        $this->isNewLink = TRUE;
        $this->hyperlink->SetAction('common','main:pessoa:new');
        $this->hyperlink->SetText('Inserir Nova Pessoa');
        $this->imagelink->SetAction('common','main:pessoa:new');
    }

}
?>
