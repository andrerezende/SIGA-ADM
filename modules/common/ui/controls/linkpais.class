<?
MIOLO::Import('modules::common::controls::linkobject');

class LinkPais extends LinkObject
{
    public function __construct($name='', $obj)
    {
        global $MIOLO;
        
        $MIOLO->usesBusiness('common','pais');
        parent::__construct($name,$obj,'mini.png');
    }

    public function setObjectByValue($value)
    {
        global $MIOLO;
        $this->object = $MIOLO->GetBusiness('common','pais');
        $this->object->GetById($value);
    }

    public function setAction()
    {
        $this->hyperlink->SetAction('common','main:pais',$this->object->$_idkey);
        $this->imagelink->SetAction('common','main:pais',$this->object->$_idkey);
    }

    public function setText()
    {
        $this->hyperlink->SetText($this->object->pais);
    }
    
    public function setNew()
    {
        $this->isNewLink = TRUE;
        $this->hyperlink->SetAction('common','main:pais:new');
        $this->hyperlink->SetText('Inserir Novo Pais');
        $this->imagelink->SetAction('common','main:pais:new');
    }
}
?>