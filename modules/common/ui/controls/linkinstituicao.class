<?
MIOLO::Import('modules::common::controls::linkobject');

class LinkInstituicao extends LinkObject
{
    public function __construct($name='', $object)
    {
        global $MIOLO;
        
        $MIOLO->UsesBusiness('common','instituicao');
        parent::__construct($name,$object,'nothing.jpg');
    }

    public function setObjectByValue($value)
    {
	global $MIOLO;
        $this->object = $this->manager->GetBusiness('common','instituicao');
	$this->object->GetById($value);
    }

    public function setAction()
    {
        $this->hyperlink->SetAction('common','main:instituicao',$this->object->idInstituicao);
        $this->imagelink->SetAction('common','main:instituicao',$this->object->idInstituicao);
    }

    public function setText()
    {
        $this->hyperlink->SetText($this->object->idInstituicao);
    }
    
    public function setNew()
    {
        $this->isNewLink = TRUE;
        $this->hyperlink->SetAction('common','main:instituicao:new');
        $this->hyperlink->SetText('Inserir Nova Instituição');
        $this->imagelink->SetAction('common','main:instituicao:new');
    }
}
?>