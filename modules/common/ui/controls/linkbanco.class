<?php
MIOLO::Import('modules::common::controls::linkobject');

class LinkBanco extends LinkObject
{
    public function __construct($name='', $banco)
    {
        global $MIOLO;
        
        $MIOLO->UsesBusiness('common','banco');
        parent::__construct($name,$banco,'banco_mini.png');
    }

    public function setObjectByValue($value)
    {
        global $MIOLO;
        $this->object = $MIOLO->GetBusiness('common','banco');
        $this->object->GetById($value);
    }

    public function setAction()
    {
        $this->hyperlink->SetAction('common','main:banco',$this->object->idBanco);
        $this->imagelink->SetAction('common','main:banco',$this->object->idBanco);
    }

    public function setText()
    {
        $this->hyperlink->SetText($this->object->nome);
    }
    
    public function setNew()
    {
        $this->isNewLink = TRUE;
        $this->hyperlink->SetAction('common','main:banco:new');
        $this->hyperlink->SetText('Inserir Novo Banco');
        $this->imagelink->SetAction('common','main:banco:new');
    }
}
?>
