<?
MIOLO::Import('modules::common::controls::linkobject');

class LinkSetor extends LinkObject
{
    public function __construct($name='', $object)
    {
        global $MIOLO;
        
        $MIOLO->UsesBusiness('common','setor');
        parent::__construct($name,$object,'banco_mini.png');
    }

    public function setObjectByValue($value)
    {
        global $MIOLO;
        $this->object = $MIOLO->GetBusiness('common','setor');
        $this->object->GetById($value);
    }

    public function setAction()
    {
        $this->hyperlink->SetAction('common','main:setor',$this->object->idSetor);
        $this->imagelink->SetAction('common','main:setor',$this->object->idSetor);
    }

    public function setText()
    {
        $this->hyperlink->SetText($this->object->sigla);
    }
    
    public function setNew()
    {
        $this->isNewLink = TRUE;
        $this->hyperlink->SetAction('common','main:setor:new');
        $this->hyperlink->SetText('Inserir Novo Setor');
        $this->imagelink->SetAction('common','main:setor:new');
    }
}
?>
