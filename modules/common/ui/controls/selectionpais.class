<?
/**
 * SelectionPais Control class
 */
class SelectionPais extends Selection
{
	public function __construct($name,$value='',$label,$showValues=false,$hint='')
	{
		global $MIOLO;

		$pais = $MIOLO->GetBusiness('common','pais');
		$options = $pais->ListAll()->result;
		parent::__construct($name,$value='',$label,$options,$showValues=false,$hint='');
	}
}
?>
