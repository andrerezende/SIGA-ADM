<?php
class gridGeradorCampo extends MDataGrid
{
	function __construct()
	{

        $MIOLO = MIOLO::getInstance(); 
        
		$href = $MIOLO->getActionURL('common','main:mad:geradorcampos:main','#0#');

		$columns = array(
				new MDataGridColumn('idcamporelat','Código','center',false,'10%'),
                new MDataGridHyperlink('campo','Campo',$href,'15%',true,NULL,true),
				new MDataGridColumn('titulo','Título','center',false,'15%'),
				new MDataGridColumn('descricao','Descrição','left',false,'45%'),
				new MDataGridColumn('tabela','Tabela','left',false,'15%'),
        );

		$nome = MForm::GetFormValue('campo');

        if ( is_null($nome) )
        {
            $nome = "A Definir";
        }

		$obj = $MIOLO->GetBusiness('common','camporelat');

		$query = $obj->ListByName(strtoupper($nome));

		$hrefGrid = $MIOLO->GetActionURL('common','main:mad:geradorcampos:find');

		parent::__construct($query,$columns,$hrefGrid,75);

		$this->SetFilter(false);

		$this->SetIndex(1);

		$this->SetLinkType('hyperlink');
	}


	function GenerateFooter()
	{
		if ( ! $this->data )
		$footer[] = $this->GenerateEmptyMsg();
		$footer[] = new MSeparator();
		$footer[] = $this->GenerateControls();
		return $footer;
	}
}
?>