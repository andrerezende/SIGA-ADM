<?php

MIOLO::Import('modules::common::controls::linksetor');

class gridSetor extends MDataGrid
{
    function __construct()
    {   
        global $MIOLO;
        $link = new LinkSetor('linkSetor','%0%');
        $columns = array(

            new MDataGridColumn('idSetorSiape','ID SIAPE','left', true,'10%', true),
            new MDataGridControl($link,'sigla','Sigla','left',true,'15%'),
            new MDataGridColumn('nomeSetor','Nome','left',true,'60%'),
            new MDataGridColumn('dataFim','DataFim','center',true,'15%')
       );
        $this->SetFilter(false);
        $filter = Form::GetFormValue('sigla');
        $sigla = Util::NVL($filter, 'A Definir');
        $ativo = Form::GetFormValue('ativo');
        $this->SetIndex(1);
        $objSetor = $MIOLO->GetBusiness('common','setor');
        $query = $objSetor->listBySigla($sigla, $ativo);
        $href_grid = $MIOLO->GetCurrentURL();
        parent::__construct($query, $columns, $href_grid, 25);
        $this->SetLinkType('hyperlink');
    }

    function GenerateFooter()
    {
        if (!$this->data) 
           $footer[] = $this->GenerateEmptyMsg();
        return $footer;
    }
}
?>
        