<?php

class BusinessCommonTabelageral extends MBusiness
{

    var $idTabelaGeral;
    var $tabela;
    var $item1;
    var $item2;
    var $item3;

    function __construct($data=null)
    {
       parent::__construct('common',$data);
    }

	function SetData($data)
	{
		$this->idTabelaGeral = $data->idTabelaGeral;
		$this->tabela = strtoupper($data->tabela);
		$this->item1 = $data->item1;
		$this->item2 = $data->item2;
		$this->item3 = $data->item3;
	}

    function GetById($id)
    {
        $this->idTabelaGeral = $id;
        $this->retrieve();
        return $this;
    }

    function GetByItem($tabela, $item)
    {
        $criteria =  $this->getCriteria();
        $criteria->addCriteria('tabela','=', "'$tabela'");
        $criteria->addCriteria('item1','=', "'$item'");
        $this->retrieveFromCriteria($criteria);
        return $this;
    }
    
    function GetByItem2($tabela, $item2)
    {
        $criteria =  $this->getCriteria();
        $criteria->addCriteria('tabela','=', "'$tabela'");
        $criteria->addCriteria('item2','=', "'$item2'");
        $this->retrieveFromCriteria($criteria);
        return $this;
    }

	function ListAll()
    {
        $criteria =  $this->getCriteria();
        return $criteria->retrieveAsQuery();
    }

    function ListByTabela($tabela,$order=NULL)
    {
        $tabela = strtoupper($tabela);
        $criteria =  $this->getCriteria();
        $criteria->addColumnAttribute('item1','key');
        $criteria->addColumnAttribute('item2','value');
        $criteria->addColumnAttribute('item3','obs');
        $criteria->addCriteria('tabela','=', "'$tabela'");
        if ($order)
        {
            $criteria->addOrderAttribute($order);
        }
        return $criteria->retrieveAsQuery();
    } 

    function ListByTabela2($tabela,$order=NULL)
    {
        $tabela = strtoupper($tabela);
      $criteria =  $this->getCriteria();
	$criteria->addColumnAttribute('idtabelageral','idTabelageral');
       $criteria->addColumnAttribute('tabela','tabela');

        $criteria->addColumnAttribute('item1','key');
        $criteria->addColumnAttribute('item2','value');
        $criteria->addColumnAttribute('item3','obs');

      $criteria->addCriteria('tabela','like', "'%$tabela%'");
        if ($order)
        {
            $criteria->addOrderAttribute($order);
        }
        return $criteria->retrieveAsQuery();

    } 

     function GetDescricao($tabela, $item)
    {
        $criteria =  $this->getCriteria();
        $criteria->addColumnAttribute('item2','descricao');
        $criteria->addCriteria('tabela','=', "'$tabela'");
        $criteria->addCriteria('item1','=', "'$item'");
        return $criteria->retrieveAsQuery();
    }   
}

?>
