<?php

    /**
     *
     */
    class BusinessCommonAutoComplete
    {
      function Query($sql)
      { global $MIOLO;
          
        $db = $MIOLO->GetDatabase();
        
        $rs = $db->Query($sql);        
        
        return $rs[0][0];	
      }
      
      /**
       *
       */
      function GetCampus($id)
      {
        return $this->Query("select nome_campus from campus where id='$id'");
      }
      
      /**
       *
       */
      function GetPessoa($id)
      { 
        return $this->Query("select nome from pessoas where id=$id");
      }
	}
      
?>
