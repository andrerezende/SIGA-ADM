<?php
/**
 * Classe usada quando se perde a senha de login.
 * 
 * Classe utilizada quando se deseja recuperar o senha de login
 * do usuário no sisitema, essa classe define um objeto que guarda
 * informaçoes nescessárias.
 * 
 * @author UFJF-CGCO
 * @access public
 *
 */
class BusinessCommonLostPass extends MBusiness
{
    var $idpass;
    var $code;
    var $login;
    var $ipaddress;
    var $ts;
    var $ipaddressresp;
    var $tsresp;
	
    /**
     * Constructor.
     * BusinessCommonLostPass Class Constructor.
     * @param $data (tipo) desc
     */
    function __construct($data=NULL)
    {
        parent::__construct('common',$data);
    }

    
    /**
	 * Método que retorna pelo id.
     * Método onde se passa um id como parametro e o objeto correspondente ao
     * id é retornado para o objeto que chamou o método.
	 *
	 * @name getById
	 * @param $lookup (tipo) id do objeto. 
	 * @access public
	 */
    function getById($id)
    {
        $this->idpass = $id;
        $this->retrieve();
    } 

    
    /**
	 * Brief Description.
     * Complete Description.
	 *
	 * @name saveRequest
	 * @access public
	 */
    function saveRequest()
    {
        $this->ts = $this->_miolo->getSysTime();
        $this->ipaddress = $_SERVER['REMOTE_ADDR'];
        parent::save();
    } 

    
    /**
	 * Brief Description.
     * Complete Description.
	 *
	 * @name saveResponse
	 * @access public
	 */
    function saveResponse()
    {
        $this->tsresp = $this->_miolo->getSysTime();
        $this->ipaddressresp = $_SERVER['REMOTE_ADDR'];
        parent::save();
    } 

}
?>