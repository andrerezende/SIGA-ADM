    {
        $this->equivalentes = array();
        if (count($equivalencia))
        {
            foreach($equivalencia as $e)
            {
                $obj = $this->equivalentes[] = $this->_miolo->getBusiness('common','setorequivalente', $this->idSetor);
                $obj->idSetorEquivalente = $e[1];
            }
            $this->saveAssociation('equivalentes');
        }
    }

   
