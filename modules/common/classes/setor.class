    function isUnidade($tiposetor)
    {
        return ((trim($tiposetor) == 'UNIDADE')
             || (trim($tiposetor) == 'UNIDADE ACAD')
             || (trim($tiposetor) == 'UNIDADE ADM')
             || (trim($tiposetor) == 'DIRETORIA')
             || (trim($tiposetor) == 'COORDENADORIA'));
    }

