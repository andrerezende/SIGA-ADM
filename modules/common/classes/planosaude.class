<?
class BusinessCommonPlanoSaude extends MBusiness
{
    var $login;  
    var $idPessoa;
    var $planoSaude;
   
	function __construct($data=null)
	{

       parent::__construct('common',$data);
    }
    
	function OnCreate($data)
    {
        if (!empty($data))
        {
            $this->GetById($data);
        }
    }

    function SetData($data)
    {
        $this->login = $data->login;  
        $this->idPessoa = $data->idPessoa;
        $this->planoSaude = $data->planoSaude;
    }

    function GetById($id)
    {
        $this->login = trim($id);
        $this->retrieve();
        return $this;
    }

    function GetByIdPessoa($id)
    {
        $criteria = $this->getCriteria();
        $criteria->addCriteria('idPessoa','=', "$id");
        return $criteria->retrieveAsQuery();
    }
}
?>