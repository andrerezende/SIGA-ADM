<?php

class BusinessCommonMain
{

    var $key;
    var $idusuario;
	var $login;
    var $password;
    var $name;
    var $nickname;
    var $email;
	var $grupo;
	var $rights;
    var $theme;

    function GetDatabase()
    {   global $MIOLO;
        
        return $MIOLO->GetDatabase('common');
    }
    
    function GetUser($login)
    {
        $db = $this->GetDatabase();
        
        $sql = "select u.idusuario, u.login, u.password, p.nome, u.nickname, p.email" .
               "  from cm_usuario u, cm_pessoa p" .
               "  where u.idpessoa = p.idpessoa " .
		       "  and u.login=?"; 
        
        $result = $db->Query($db->Prepare($sql,$login));
        
        list ( $this->idusuario,
			   $this->login,
               $this->password,
               $this->name,
               $this->nickname,
               $this->email ) = $result[0];
        
		$this->key = $this->idusuario;
		return $this;
    }
    
    function GetGrupo($login)
    {
        $db = $this->GetDatabase();
        
        $sql = "select u.idusuario, u.login, g.idgrupo, ga.grupo" .
               "  from cm_usuario u, cm_grpusuario g, cm_grupoacesso ga" .
               "  where u.idusuario=g.idusuario"; 
               "    and g.idgrupo=ga.idgrupo"; 
               "    and u.login=?"; 
        
        $result = $db->Query($db->Prepare($sql,$login));
        
        if ( $result )
        {
            foreach ( $result as $r )
            {
                $this->grupo[] = ($r[3]);
            }
        }
        
		return $this->grupo;
    }
}

?>
