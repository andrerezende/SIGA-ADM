			   	);
                //   ESTAVA TRAZENDO IDAUTOR NA GRID DO LOOCKUP
                //$sql = new sql("numerodaobra,titulo,idautor,idobra","bt_obra");



            if ( $filterTitulo || $filterAutor)
            {
                    $sql = new sql("o.numerodaobra,o.titulo, a.sobrenome || ',' || a.prenome as prenome,o.idobra","bt_obra o,bt_autor a");

                    $sql->where .= " (";
                    if ( $filterTitulo )
                    {
                            $sql = new sql("o.numerodaobra,o.titulo, a.sobrenome || ',' || a.prenome as prenome,o.idobra","bt_obra o,bt_autor a");
                            $sql->where .= "( upper(titulo) like upper('%{$filterTitulo}%') and a.idautor = o.idautor )";
                    }
                    if ( $filterAutor )
                    {
                            if ($filterTitulo)
                            {
                                    $sql->where .= $clause;
                            }
                            
                            $sql = new Sql("o.numerodaobra,o.titulo,a.sobrenome || ',' || a.prenome as prenome, o.idobra", 'bt_autor a ,bt_obra o');
                            $sql->where .= "( upper(prenome) like upper('%{$filterAutor}%') and a.idautor = o.idautor )";

                     

                            
                    }
                  //    // $sql->where .= " ) ";
            }
            else
            {
                    $sql = new sql("o.numerodaobra,o.titulo, a.sobrenome || ',' || a.prenome as prenome,o.idobra","bt_obra o,bt_autor a","a.idautor = o.idautor");
            }
                    
            $sql->SetOrderBy('titulo');
            $lookup->SetGrid('sigaept',$sql,$columns,'Pesquisa de Obras',10,0);
        }
    
	

