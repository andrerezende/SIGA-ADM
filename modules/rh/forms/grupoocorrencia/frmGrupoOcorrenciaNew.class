class frmGrupoOcorrenciaNew extends Form
{

    function __construct()
    {
        $this->Form('Incluir Novo Grupo Ocorrência');
        $this->EventHandler();
    }

    function CreateFields()
    {
        global $MIOLO;
       
        $grupoocorrencia = $MIOLO->GetBusiness('rh','grupoocorrencia');
        $fields = array(
            new TextField('idGrupoOcorrencia','','Código','2'),
            new TextField('descricao','','Descrição','60'),
	);
		
        $this->SetFields($fields);
	$buttons = array(
        	new FormButton('btnNew', 'Incluir Grupo Ocorrência')
            );
	$this->SetButtons($buttons);
	$validators = array(
           new RequiredValidator('idGrupoOcorrencia'),
           new RequiredValidator('descricao')
		);
        $this->SetValidators($validators);

    }

    function btnNew_click()
    {
	global $MIOLO, $page;

        $data = $this->GetData();
        $grupoocorrencia = $MIOLO->GetBusiness('rh','grupoocorrencia');
	$grupoocorrencia->SetData($data);
        $grupoocorrencia->save();
 
        $go = $MIOLO->GetActionURL('rh','main:grupoocorrencia',$grupoocorrencia->idGrupoOcorrencia);
        $page->Redirect($go);
    }

 }
?>
