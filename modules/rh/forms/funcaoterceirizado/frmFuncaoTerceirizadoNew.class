class frmFuncaoTerceirizadoNew extends MForm
{

    function __construct()
    {
        global $MIOLO;
        parent::__construct('Incluir Nova Função (Terceirizados)');
        $this->SetClose($MIOLO->GetActionURL('rh','main:funcaoterceirizado:find'));
        $this->EventHandler();
    }

    
    function CreateFields()
    {
       global $MIOLO;
	   
		$fields = array(
            new MTextField('idFuncaoTerceirizado','','Código','2','Máx. 2 dígitos'),
            new MTextField('descricao','','Descrição','20','Máx. 20 caracteres'),
        );
		
        $this->SetFields($fields);
		
		$buttons = array(
        	new MButton('btnNew', 'Incluir Função Terceirizado')
            );
		$this->SetButtons($buttons);

		$validators = array(
           new MRequiredValidator('idFuncaoTerceirizado'),
           new MRequiredValidator('descricao'),
		);
       $this->SetValidators($validators);

    }

    
    function btnNew_click()
    {
		global $MIOLO, $page, $module;

        $data = $this->GetData();
	$data->descricao = strtoupper($data->descricao);
        $obj = $MIOLO->GetBusiness($module,'funcaoterceirizado');
	$obj->SetData($data);
        $obj->save();

		if ( !$obj->CheckError() )
		{
 	        $go = $MIOLO->GetActionURL('rh','main:funcaoterceirizado',$obj->idFuncaoTerceirizado);
    	    $page->Redirect($go);
		}
		else
		{	
			foreach( $obj->GetErrors() as $e )
			{
				$this->AddError("Informe o seguinte erro a equipe do CGCO: ".$e);
			}
		}
    }
 }
?>
